    margin-top: 0.5rem;
    font-size: 0.95rem;
  }

  .upsell-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .upsell-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    border: 2px solid #e0e0e0;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .upsell-card:hover {
    border-color: #667eea;
