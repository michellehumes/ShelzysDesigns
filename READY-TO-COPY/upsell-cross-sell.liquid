  }

  .upsell-card.selected {
    border-color: #667eea;
    background: #f5f7ff;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .upsell-checkbox-container {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .upsell-checkbox {
    width: 24px;
    height: 24px;
    min-width: 24px;
    cursor: pointer;
    accent-color: #667eea;
  }

  .upsell-card-content {
    flex: 1;
  }

  .upsell-product-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
  }

  .upsell-product-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-foreground, #333);
    margin-bottom: 0.5rem;
  }

  .upsell-product-description {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .upsell-product-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #667eea;
  }

  .upsell-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: #ff6b6b;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .upsell-summary {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #667eea;
  }

  .upsell-summary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e0e0e0;
  }

  .upsell-summary-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-foreground, #333);
  }

  .upsell-summary-count {
    background: #667eea;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
  }

  .upsell-summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    font-size: 1rem;
  }

  .upsell-summary-row.total {
    font-size: 1.5rem;
    font-weight: 700;
    color: #667eea;
    padding-top: 1rem;
    margin-top: 1rem;
    border-top: 2px solid #e0e0e0;
  }

  .upsell-summary-discount {
    color: #4caf50;
    font-weight: 600;
  }

  .upsell-add-button {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
    margin-top: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .upsell-add-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }

  .upsell-add-button:active {
    transform: translateY(0);
  }

  .upsell-add-button:disabled {
    background: #ccc;
    cursor: not-allowed;
    transform: none;
  }

  @media (max-width: 768px) {
    .upsell-section {
      padding: 2rem 1.5rem;
    }

    .upsell-header h3 {
      font-size: 1.5rem;
    }

    .upsell-grid {
      grid-template-columns: 1fr;
    }

    .upsell-summary {
      padding: 1.5rem;
    }
  }
</style>

