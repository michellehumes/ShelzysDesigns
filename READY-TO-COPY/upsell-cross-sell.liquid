<script>
  {%- comment -%} Bundle pricing calculation and selection {%- endcomment -%}
  document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('.upsell-checkbox');
    const cards = document.querySelectorAll('.upsell-card');
    const itemCountEl = document.getElementById('itemCount');
    const subtotalEl = document.getElementById('subtotal');
    const discountEl = document.getElementById('discount');
    const discountRow = document.getElementById('discountRow');
    const totalEl = document.getElementById('total');
    const addButton = document.getElementById('addBundleButton');

    function updatePricing() {
      let selectedCount = 0;
      let subtotal = 0;

      checkboxes.forEach(function(checkbox) {
        if (checkbox.checked) {
          selectedCount++;
          const card = checkbox.closest('.upsell-card');
          const price = parseFloat(card.dataset.price);
          subtotal += price;
        }
      });

      // Calculate discount (5% for 2+ items)
      let discount = 0;
      if (selectedCount >= 2) {
        discount = subtotal * 0.05;
        discountRow.style.display = 'flex';
      } else {
        discountRow.style.display = 'none';
      }

      const total = subtotal - discount;

      // Update UI
      itemCountEl.textContent = selectedCount + (selectedCount === 1 ? ' item selected' : ' items selected');
      subtotalEl.textContent = '$' + subtotal.toFixed(2);
      discountEl.textContent = '-$' + discount.toFixed(2);
      totalEl.textContent = '$' + total.toFixed(2);

      // Update button
      if (selectedCount > 0) {
        addButton.disabled = false;
        addButton.textContent = 'Add ' + selectedCount + (selectedCount === 1 ? ' Item' : ' Items') + ' to Cart - $' + total.toFixed(2);
      } else {
        addButton.disabled = true;
        addButton.textContent = 'Select items to add to cart';
      }
    }

    // Add event listeners
    checkboxes.forEach(function(checkbox) {
      checkbox.addEventListener('change', function() {
        const card = checkbox.closest('.upsell-card');
        if (checkbox.checked) {
          card.classList.add('selected');
        } else {
          card.classList.remove('selected');
        }
        updatePricing();
      });
    });

    // Card click toggles checkbox
    cards.forEach(function(card) {
      card.addEventListener('click', function(e) {
        if (e.target.type !== 'checkbox' && e.target.tagName !== 'LABEL') {
          const checkbox = card.querySelector('.upsell-checkbox');
          checkbox.checked = !checkbox.checked;
          checkbox.dispatchEvent(new Event('change'));
        }
      });
    });

    // Add to cart button
    addButton.addEventListener('click', function() {
      const selectedProducts = [];
      
      checkboxes.forEach(function(checkbox) {
        if (checkbox.checked) {
          const card = checkbox.closest('.upsell-card');
          selectedProducts.push({
            id: card.dataset.productId,
            price: card.dataset.price,
            title: card.querySelector('.upsell-product-title').textContent
          });
        }
      });

      console.log('Adding to cart:', selectedProducts);
      
      // Here you would integrate with Shopify's Ajax Cart API
      // Example:
      // selectedProducts.forEach(product => {
      //   fetch('/cart/add.js', {
      //     method: 'POST',
      //     headers: { 'Content-Type': 'application/json' },
      //     body: JSON.stringify({ id: product.id, quantity: 1 })
      //   });
      // });

      alert('Items added to cart! (Integration pending)');
    });

    // Initial update
    updatePricing();
  });
</script>
