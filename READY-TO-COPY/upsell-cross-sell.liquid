<style>
  .upsell-section {
    background: #f9f9f9;
    padding: 3rem 2rem;
    border-radius: 12px;
    margin: 2rem 0;
    border: 2px solid #e0e0e0;
  }

  .upsell-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .upsell-header h3 {
    font-family: var(--font-primary--family, 'Helvetica Neue', sans-serif);
    font-size: 1.75rem;
    color: var(--color-foreground, #333);
    margin-bottom: 0.5rem;
