{%- comment -%}
  Shelzy's Designs - Collections List Template

  Page showing all collections in a grid format.
{%- endcomment -%}

<div class="sz-collections-page">
  <div class="sz-collections-container">

    {%- comment -%} Page Header {%- endcomment -%}
    <header class="sz-collections-header">
      <h1 class="sz-collections-title">Our Collections</h1>
      <p class="sz-collections-subtitle">Browse our curated collections of personalized water bottles for every occasion.</p>
    </header>

    {%- comment -%} Collections Grid {%- endcomment -%}
    <div class="sz-collections-grid">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'all' or collection.handle == 'frontpage' -%}
          <article class="sz-collection-card">
            <a href="{{ collection.url }}" class="sz-collection-link">

              {%- comment -%} Collection Image {%- endcomment -%}
              <div class="sz-collection-image">
                {%- if collection.image -%}
                  <img
                    src="{{ collection.image | image_url: width: 600 }}"
                    srcset="{{ collection.image | image_url: width: 400 }} 400w,
                            {{ collection.image | image_url: width: 600 }} 600w"
                    sizes="(max-width: 768px) 100vw, 33vw"
                    alt="{{ collection.title }}"
                    loading="lazy"
                  >
                {%- elsif collection.products.first and collection.products.first.featured_image -%}
                  <img
                    src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                    alt="{{ collection.title }}"
                    loading="lazy"
                  >
                {%- else -%}
                  <div class="sz-collection-placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21 15 16 10 5 21"/>
                    </svg>
                  </div>
                {%- endif -%}

                <div class="sz-collection-overlay">
                  <span class="sz-collection-count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
                </div>
              </div>

              {%- comment -%} Collection Info {%- endcomment -%}
              <div class="sz-collection-info">
                <h2 class="sz-collection-name">{{ collection.title }}</h2>
                {%- if collection.description != blank -%}
                  <p class="sz-collection-description">{{ collection.description | strip_html | truncate: 100 }}</p>
                {%- endif -%}
                <span class="sz-collection-cta">
                  Shop Now
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"/>
                    <polyline points="12 5 19 12 12 19"/>
                  </svg>
                </span>
              </div>

            </a>
          </article>
        {%- endunless -%}
      {%- endfor -%}
    </div>

    {%- comment -%} All Products CTA {%- endcomment -%}
    <div class="sz-collections-cta">
      <p>Can't find what you're looking for?</p>
      <a href="/collections/all" class="sz-btn sz-btn-primary">View All Products</a>
    </div>

  </div>
</div>

<style>
  /* ═══════════════════════════════════════════════════════════════════
     COLLECTIONS LIST PAGE STYLES
     ═══════════════════════════════════════════════════════════════════ */
  .sz-collections-page {
    padding: var(--sz-space-xl) var(--sz-space-md);
    background: var(--sz-warm-white);
    min-height: 60vh;
  }

  .sz-collections-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Page Header */
  .sz-collections-header {
    text-align: center;
    margin-bottom: var(--sz-space-2xl);
    padding-bottom: var(--sz-space-xl);
  }

  .sz-collections-title {
    font-family: var(--sz-font-heading);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-md) 0;
  }

  .sz-collections-subtitle {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-lg);
    color: var(--sz-gray);
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  /* Collections Grid */
  .sz-collections-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--sz-space-xl);
    margin-bottom: var(--sz-space-2xl);
  }

  @media (max-width: 900px) {
    .sz-collections-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .sz-collections-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Collection Card */
  .sz-collection-card {
    background: var(--sz-white);
    border-radius: var(--sz-radius-lg);
    overflow: hidden;
    box-shadow: var(--sz-shadow-sm);
    transition: box-shadow var(--sz-transition-normal), transform var(--sz-transition-normal);
  }

  .sz-collection-card:hover {
    box-shadow: var(--sz-shadow-lg);
    transform: translateY(-4px);
  }

  .sz-collection-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  /* Collection Image */
  .sz-collection-image {
    position: relative;
    aspect-ratio: 4/3;
    background: var(--sz-beige);
    overflow: hidden;
  }

  .sz-collection-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--sz-transition-normal);
  }

  .sz-collection-card:hover .sz-collection-image img {
    transform: scale(1.05);
  }

  .sz-collection-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-gray);
  }

  .sz-collection-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--sz-space-md);
    background: linear-gradient(transparent, rgba(0,0,0,0.5));
  }

  .sz-collection-count {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-white);
    font-weight: 500;
  }

  /* Collection Info */
  .sz-collection-info {
    padding: var(--sz-space-lg);
  }

  .sz-collection-name {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
    transition: color var(--sz-transition-fast);
  }

  .sz-collection-card:hover .sz-collection-name {
    color: var(--sz-primary);
  }

  .sz-collection-description {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    line-height: 1.5;
    margin: 0 0 var(--sz-space-md) 0;
  }

  .sz-collection-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--sz-space-xs);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-primary);
    transition: gap var(--sz-transition-fast);
  }

  .sz-collection-card:hover .sz-collection-cta {
    gap: var(--sz-space-sm);
  }

  /* All Products CTA */
  .sz-collections-cta {
    text-align: center;
    padding: var(--sz-space-2xl);
    background: var(--sz-white);
    border-radius: var(--sz-radius-lg);
    box-shadow: var(--sz-shadow-sm);
  }

  .sz-collections-cta p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    color: var(--sz-gray);
    margin: 0 0 var(--sz-space-lg) 0;
  }
</style>
