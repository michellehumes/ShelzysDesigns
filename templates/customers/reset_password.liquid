{%- comment -%}
  Shelzy's Designs - Reset Password Template

  Password reset page where customers can set a new password
  after clicking the reset link in their email.
{%- endcomment -%}

<div class="sz-customer-page">
  <div class="sz-customer-container">

    <div class="sz-customer-card">

      <header class="sz-customer-header">
        <h1 class="sz-customer-title">Reset Your Password</h1>
        <p class="sz-customer-subtitle">Enter your new password below.</p>
      </header>

      <div class="sz-customer-form-wrapper">
        {% form 'reset_customer_password' %}
          {%- if form.errors -%}
            <div class="sz-form-errors">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="sz-form-group">
            <label for="password" class="sz-form-label">New Password</label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              class="sz-form-input"
              autocomplete="new-password"
              minlength="5"
              required
            >
            <span class="sz-form-hint">Minimum 5 characters</span>
          </div>

          <div class="sz-form-group">
            <label for="password-confirm" class="sz-form-label">Confirm Password</label>
            <input
              type="password"
              name="customer[password_confirmation]"
              id="password-confirm"
              class="sz-form-input"
              autocomplete="new-password"
              minlength="5"
              required
            >
          </div>

          <div class="sz-form-actions">
            <button type="submit" class="sz-btn sz-btn-primary sz-btn-full">Reset Password</button>
          </div>
        {% endform %}
      </div>

    </div>

  </div>
</div>

<style>
  .sz-customer-page {
    padding: var(--sz-space-2xl) var(--sz-space-md);
    background: var(--sz-warm-white);
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sz-customer-container {
    width: 100%;
    max-width: 440px;
  }

  .sz-customer-card {
    background: var(--sz-white);
    border-radius: var(--sz-radius-lg);
    padding: var(--sz-space-2xl);
    box-shadow: var(--sz-shadow-lg);
  }

  .sz-customer-header {
    text-align: center;
    margin-bottom: var(--sz-space-xl);
  }

  .sz-customer-title {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-2xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
  }

  .sz-customer-subtitle {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
  }

  .sz-form-group {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-label {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-charcoal);
    margin-bottom: var(--sz-space-xs);
  }

  .sz-form-input {
    width: 100%;
    padding: var(--sz-space-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
    background: var(--sz-white);
  }

  .sz-form-input:focus {
    outline: none;
    border-color: var(--sz-primary);
  }

  .sz-form-hint {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs);
    color: var(--sz-gray);
    margin-top: var(--sz-space-xs);
  }

  .sz-form-errors {
    background: #FEF2F2;
    border: 1px solid var(--sz-error);
    border-radius: var(--sz-radius-sm);
    padding: var(--sz-space-md);
    margin-bottom: var(--sz-space-lg);
    color: var(--sz-error);
    font-size: var(--sz-text-sm);
  }

  .sz-btn-full {
    width: 100%;
    padding: var(--sz-space-md);
  }
</style>
