{%- comment -%}
  SHELZY'S DESIGNS: Homepage Hero Section for Impulse Theme
  Location: sections/shelzys-hero.liquid
{%- endcomment -%}

<section class="shelzys-hero" data-section-id="{{ section.id }}" data-section-type="shelzys-hero">
  <div class="shelzys-hero__wrapper">
    {%- if section.settings.image != blank -%}
      <div class="shelzys-hero__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 2000 }}"
          srcset="{{ section.settings.image | image_url: width: 800 }} 800w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 1600 }} 1600w,
                  {{ section.settings.image | image_url: width: 2000 }} 2000w"
          sizes="100vw"
          alt="{{ section.settings.image.alt | default: 'Personalized water bottles' }}"
          class="shelzys-hero__image"
          loading="eager"
          fetchpriority="high"
        >
        <div class="shelzys-hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
      </div>
    {%- else -%}
      <div class="shelzys-hero__image-wrapper shelzys-hero__placeholder">
        <div class="shelzys-hero__overlay" style="opacity: 0.3;"></div>
      </div>
    {%- endif -%}

    <div class="shelzys-hero__content page-width">
      <div class="shelzys-hero__text-wrapper" style="text-align: {{ section.settings.text_alignment }};">
        {%- if section.settings.heading != blank -%}
          <h1 class="shelzys-hero__heading h1">{{ section.settings.heading }}</h1>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <p class="shelzys-hero__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}

        <div class="shelzys-hero__buttons">
          {%- if section.settings.button_text != blank -%}
            <a href="{{ section.settings.button_link }}" class="btn btn--primary shelzys-hero__btn">
              {{ section.settings.button_text }}
            </a>
          {%- endif -%}

          {%- if section.settings.button_text_2 != blank -%}
            <a href="{{ section.settings.button_link_2 }}" class="btn btn--secondary shelzys-hero__btn shelzys-hero__btn--secondary">
              {{ section.settings.button_text_2 }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.shelzys-hero {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.shelzys-hero__wrapper {
  position: relative;
  min-height: {{ section.settings.hero_height }}vh;
  display: flex;
  align-items: center;
}

.shelzys-hero__image-wrapper {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.shelzys-hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: {{ section.settings.image_position }};
}

.shelzys-hero__placeholder {
  background: linear-gradient(135deg, #A8C5A8 0%, #8FB88F 50%, #D4B8A8 100%);
}

.shelzys-hero__overlay {
  position: absolute;
  inset: 0;
  background: #000;
  pointer-events: none;
}

.shelzys-hero__content {
  position: relative;
  z-index: 1;
  padding: 60px 20px;
  width: 100%;
}

.shelzys-hero__text-wrapper {
  max-width: 700px;
  {% if section.settings.text_alignment == 'center' %}
  margin: 0 auto;
  {% elsif section.settings.text_alignment == 'right' %}
  margin-left: auto;
  {% endif %}
}

.shelzys-hero__heading {
  font-size: clamp(32px, 6vw, 56px);
  font-weight: 700;
  line-height: 1.1;
  margin: 0 0 20px;
  color: {{ section.settings.text_color }};
  letter-spacing: -0.02em;
}

.shelzys-hero__subheading {
  font-size: clamp(16px, 2.5vw, 20px);
  line-height: 1.5;
  margin: 0 0 32px;
  color: {{ section.settings.text_color }};
  opacity: 0.9;
}

.shelzys-hero__buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  {% if section.settings.text_alignment == 'center' %}
  justify-content: center;
  {% elsif section.settings.text_alignment == 'right' %}
  justify-content: flex-end;
  {% endif %}
}

.shelzys-hero__btn {
  padding: 16px 32px;
  font-size: 15px;
  font-weight: 600;
  border-radius: 4px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.btn--primary {
  background-color: var(--color-sage, #8B9D77);
  color: #fff;
  border: 2px solid var(--color-sage, #8B9D77);
}

.btn--primary:hover {
  background-color: var(--color-sage-dark, #7A8C68);
  border-color: var(--color-sage-dark, #7A8C68);
}

.shelzys-hero__btn--secondary {
  background-color: transparent;
  color: {{ section.settings.text_color }};
  border: 2px solid {{ section.settings.text_color }};
}

.shelzys-hero__btn--secondary:hover {
  background-color: {{ section.settings.text_color }};
  color: #333;
}

@media (max-width: 749px) {
  .shelzys-hero__wrapper {
    min-height: 500px;
  }

  .shelzys-hero__content {
    padding: 40px 16px;
  }

  .shelzys-hero__text-wrapper {
    text-align: center !important;
  }

  .shelzys-hero__buttons {
    flex-direction: column;
    align-items: center;
  }

  .shelzys-hero__btn {
    width: 100%;
    max-width: 280px;
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Shelzys Hero",
  "tag": "section",
  "class": "section-shelzys-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image",
      "info": "Recommended: 2000x1000px. Use bridal party or group bottle shot."
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image focal point",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Hero height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 75
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 70,
      "step": 5,
      "default": 30
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Personalized Bottles for Every Moment"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Custom stainless-steel bottles that elevate weddings, events & everyday life."
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Custom Bottles"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button text",
      "default": "Bridal Party Sets"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Shelzys Hero"
    }
  ]
}
{% endschema %}
