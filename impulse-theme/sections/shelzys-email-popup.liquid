{%- comment -%}
  SHELZYS DESIGNS: Email Capture Popup for Impulse Theme
  Location: Copy to theme/sections/shelzys-email-popup.liquid
  Add to theme.liquid or enable via Theme Customizer
{%- endcomment -%}

{%- if section.settings.enable_popup -%}
<div id="shelzys-email-popup" class="email-popup" aria-hidden="true">
  <div class="email-popup__overlay" data-close-popup></div>
  <div class="email-popup__modal" role="dialog" aria-labelledby="popup-title">
    <button class="email-popup__close" data-close-popup aria-label="Close popup">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="email-popup__content">
      {%- if section.settings.image != blank -%}
        <div class="email-popup__image">
          <img src="{{ section.settings.image | image_url: width: 400 }}" alt="" loading="lazy">
        </div>
      {%- endif -%}

      <div class="email-popup__text">
        {%- if section.settings.eyebrow != blank -%}
          <span class="email-popup__eyebrow">{{ section.settings.eyebrow }}</span>
        {%- endif -%}

        <h2 id="popup-title" class="email-popup__title">{{ section.settings.title }}</h2>

        {%- if section.settings.description != blank -%}
          <p class="email-popup__description">{{ section.settings.description }}</p>
        {%- endif -%}

        <form class="email-popup__form" method="post" action="/contact#contact_form" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          <input type="hidden" name="contact[tags]" value="newsletter, popup">

          <div class="email-popup__field">
            <input
              type="email"
              name="contact[email]"
              placeholder="{{ section.settings.placeholder }}"
              required
              autocomplete="email"
              class="email-popup__input"
            >
            <button type="submit" class="email-popup__submit btn">
              {{ section.settings.button_text }}
            </button>
          </div>

          {%- if section.settings.privacy_text != blank -%}
            <p class="email-popup__privacy">{{ section.settings.privacy_text }}</p>
          {%- endif -%}
        </form>

        <button class="email-popup__decline" data-close-popup>
          {{ section.settings.decline_text | default: 'No thanks' }}
        </button>
      </div>
    </div>
  </div>
</div>

<style>
.email-popup {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.email-popup.is-active {
  opacity: 1;
  visibility: visible;
}

.email-popup__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  cursor: pointer;
}

.email-popup__modal {
  position: relative;
  background: #fff;
  border-radius: 16px;
  max-width: 480px;
  width: 90%;
  max-height: 90vh;
  overflow: auto;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.email-popup.is-active .email-popup__modal {
  transform: scale(1);
}

.email-popup__close {
  position: absolute;
  top: 12px;
  right: 12px;
  width: 36px;
  height: 36px;
  border: none;
  background: rgba(255,255,255,0.9);
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  transition: background 0.2s ease;
}

.email-popup__close:hover {
  background: #f0f0f0;
}

.email-popup__content {
  display: flex;
  flex-direction: column;
}

.email-popup__image {
  aspect-ratio: 16/9;
  overflow: hidden;
}

.email-popup__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.email-popup__text {
  padding: 32px;
  text-align: center;
}

.email-popup__eyebrow {
  display: inline-block;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: #00B4D8;
  margin-bottom: 8px;
}

.email-popup__title {
  font-size: 28px;
  font-weight: 700;
  margin: 0 0 12px;
  line-height: 1.2;
}

.email-popup__description {
  font-size: 15px;
  color: #666;
  margin: 0 0 24px;
  line-height: 1.5;
}

.email-popup__form {
  margin-bottom: 16px;
}

.email-popup__field {
  display: flex;
  gap: 8px;
}

.email-popup__input {
  flex: 1;
  padding: 14px 16px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 15px;
  transition: border-color 0.2s ease;
}

.email-popup__input:focus {
  outline: none;
  border-color: #00B4D8;
}

.email-popup__submit {
  padding: 14px 24px;
  background: #00B4D8;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s ease;
  white-space: nowrap;
}

.email-popup__submit:hover {
  background: #0096B4;
}

.email-popup__privacy {
  font-size: 12px;
  color: #999;
  margin: 12px 0 0;
}

.email-popup__decline {
  background: none;
  border: none;
  font-size: 13px;
  color: #999;
  cursor: pointer;
  text-decoration: underline;
  padding: 0;
}

.email-popup__decline:hover {
  color: #666;
}

@media (max-width: 549px) {
  .email-popup__field {
    flex-direction: column;
  }
  .email-popup__text {
    padding: 24px;
  }
  .email-popup__title {
    font-size: 24px;
  }
}
</style>

<script>
(function() {
  var popup = document.getElementById('shelzys-email-popup');
  if (!popup) return;

  var delay = {{ section.settings.delay | default: 10 }} * 1000;
  var exitIntent = {{ section.settings.exit_intent | json }};
  var storageKey = 'shelzys_popup_closed';
  var expireDays = {{ section.settings.days_hidden | default: 7 }};

  // Check if popup was recently closed
  function wasRecentlyClosed() {
    var closed = localStorage.getItem(storageKey);
    if (!closed) return false;
    var closedDate = new Date(parseInt(closed));
    var now = new Date();
    var daysDiff = (now - closedDate) / (1000 * 60 * 60 * 24);
    return daysDiff < expireDays;
  }

  function showPopup() {
    if (wasRecentlyClosed()) return;
    popup.classList.add('is-active');
    popup.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
  }

  function closePopup() {
    popup.classList.remove('is-active');
    popup.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    localStorage.setItem(storageKey, Date.now().toString());
  }

  // Close button handlers
  popup.querySelectorAll('[data-close-popup]').forEach(function(el) {
    el.addEventListener('click', closePopup);
  });

  // ESC key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && popup.classList.contains('is-active')) {
      closePopup();
    }
  });

  // Timer trigger
  if (!wasRecentlyClosed()) {
    setTimeout(showPopup, delay);
  }

  // Exit intent trigger
  if (exitIntent && !wasRecentlyClosed()) {
    document.addEventListener('mouseout', function(e) {
      if (e.clientY < 10 && !popup.classList.contains('is-active')) {
        showPopup();
      }
    });
  }
})();
</script>
{%- endif -%}

{% schema %}
{
  "name": "Shelzys Email Popup",
  "tag": "section",
  "class": "section-email-popup",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_popup",
      "label": "Enable popup",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (optional)"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Welcome!"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Get 10% Off Your First Order"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Subscribe for exclusive deals, new designs, and personalization tips. Your custom bottle awaits!"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Get 10% Off"
    },
    {
      "type": "text",
      "id": "decline_text",
      "label": "Decline text",
      "default": "No thanks, I'll pay full price"
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy text",
      "default": "We respect your privacy. Unsubscribe anytime."
    },
    {
      "type": "header",
      "content": "Trigger Settings"
    },
    {
      "type": "range",
      "id": "delay",
      "label": "Delay (seconds)",
      "min": 3,
      "max": 60,
      "step": 1,
      "default": 10
    },
    {
      "type": "checkbox",
      "id": "exit_intent",
      "label": "Show on exit intent",
      "default": true
    },
    {
      "type": "range",
      "id": "days_hidden",
      "label": "Days hidden after close",
      "min": 1,
      "max": 30,
      "step": 1,
      "default": 7
    }
  ],
  "presets": [
    {
      "name": "Shelzys Email Popup"
    }
  ]
}
{% endschema %}
