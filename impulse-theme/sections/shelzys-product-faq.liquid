{%- comment -%}
  SHELZYS DESIGNS: Product FAQ Accordion for Impulse Theme
  Location: Copy to theme/sections/shelzys-product-faq.liquid
  Add this section to your product template or use as standalone
{%- endcomment -%}

<div class="shelzys-product-faq" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h3 class="product-faq__title">{{ section.settings.title }}</h3>
    {%- endif -%}

    <div class="product-faq__accordion">
      {%- for block in section.blocks -%}
        <details class="faq-item" {{ block.shopify_attributes }}>
          <summary class="faq-item__question">
            <span>{{ block.settings.question }}</span>
            <svg class="faq-item__icon" viewBox="0 0 24 24" width="20" height="20">
              <path d="M6 9l6 6 6-6" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </summary>
          <div class="faq-item__answer">
            {{ block.settings.answer }}
          </div>
        </details>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
.shelzys-product-faq {
  padding: 30px 0;
}

.product-faq__title {
  margin: 0 0 20px;
  font-size: 18px;
  font-weight: 600;
}

.product-faq__accordion {
  border-top: 1px solid #e5e5e5;
}

.faq-item {
  border-bottom: 1px solid #e5e5e5;
}

.faq-item__question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 0;
  cursor: pointer;
  font-size: 15px;
  font-weight: 500;
  list-style: none;
}

.faq-item__question::-webkit-details-marker {
  display: none;
}

.faq-item__icon {
  transition: transform 0.3s ease;
  flex-shrink: 0;
  margin-left: 12px;
}

.faq-item[open] .faq-item__icon {
  transform: rotate(180deg);
}

.faq-item__answer {
  padding: 0 0 16px;
  font-size: 14px;
  line-height: 1.6;
  color: #666;
}

@media (max-width: 749px) {
  .faq-item__question {
    font-size: 14px;
  }
  .faq-item__answer {
    font-size: 13px;
  }
}
</style>

{% schema %}
{
  "name": "Shelzys Product FAQ",
  "tag": "section",
  "class": "section-product-faq",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "How long does shipping take?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Most orders ship within 5-7 business days. Rush options are available at checkout when offered.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shelzys Product FAQ",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "Shipping & Turnaround",
            "answer": "<p>Most orders ship within 5-7 business days. Rush options available at checkout when offered.</p>"
          }
        },
        {
