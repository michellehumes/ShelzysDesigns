{% comment %}
================================================================================
SHELZY'S DESIGNS - THEME LAYOUT
Version: 2.0.0
Last Updated: 2024-12
================================================================================
Main layout file. All pages inherit from this template.

DO NOT modify this file unless absolutely necessary.
Use sections and snippets for customization.
================================================================================
{% endcomment %}
<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">

  {%- comment -%} Mobile App Meta Tags {%- endcomment -%}
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <meta name="apple-mobile-web-app-title" content="{{ shop.name }}">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="theme-color" content="{{ settings.color_primary | default: '#8BAA88' }}">
  <meta name="format-detection" content="telephone=no">

  {%- comment -%} DNS Prefetch & Preconnect for Performance {%- endcomment -%}
  <link rel="dns-prefetch" href="https://cdn.shopify.com">
  <link rel="dns-prefetch" href="https://monorail-edge.shopifysvc.com">
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

  {%- comment -%} SEO Meta Tags {%- endcomment -%}
  {% render 'shelzys-head-seo' %}

  {%- comment -%} Favicon {%- endcomment -%}
  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  {%- comment -%}
  ================================================================================
  CSS VARIABLES & DESIGN TOKENS
  This is the SINGLE SOURCE OF TRUTH for all styling.
  All fonts are loaded here via Shopify's font system.
  DO NOT add additional font imports.
  ================================================================================
  {%- endcomment -%}
  {% render 'shelzys-css-variables' %}

  {%- comment -%} Shopify Required Tags {%- endcomment -%}
  {{ content_for_header }}

  {%- comment -%} No-JS Detection {%- endcomment -%}
  <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>

  {%- comment -%} Hide Klaviyo Popup {%- endcomment -%}
  {% render 'sz-hide-klaviyo-popup' %}
</head>

<body class="template-{{ template.name | handle }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix | handle }}{% endif %}">
  {%- comment -%} Announcement Bar (single instance) {%- endcomment -%}
  {% render 'sz-announcement-bar' %}
  {% render 'sz-social-proof-banner' %}

  {%- comment -%} Skip Links for Accessibility {%- endcomment -%}
  <a href="#main-content" class="sz-skip-link visually-hidden">Skip to content</a>

  {%- comment -%} Centralized Settings {%- endcomment -%}
  {% render 'shelzys-settings' %}

  {%- comment -%} Free Shipping Progress Bar (single instance) {%- endcomment -%}
  {% render 'shelzys-free-shipping-bar' %}

  {%- comment -%} Header Navigation {%- endcomment -%}
  {% render 'shelzys-nav-header' %}

  {%- comment -%} Main Content {%- endcomment -%}
  <main id="main-content" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  {%- comment -%} Footer {%- endcomment -%}
  {% render 'shelzys-footer-v2' %}

  {%- comment -%} Back to Top Button {%- endcomment -%}
  {% render 'shelzys-back-to-top' %}

  {%- comment -%} Newsletter Popup (optional) {%- endcomment -%}
  {%- if settings.show_newsletter_popup -%}
    {% render 'shelzys-popup-premium' %}
  {%- endif -%}

  {%- comment -%} Quick View Modal {%- endcomment -%}
  {% render 'shelzys-quick-view' %}

  {%- comment -%} Cart Drawer {%- endcomment -%}
  {% render 'shelzys-cart-drawer' %}

  {%- comment -%} Skip Link Styles {%- endcomment -%}
  <style>
    .sz-skip-link:focus {
      position: fixed !important;
      top: var(--sz-space-sm);
      left: var(--sz-space-sm);
      width: auto !important;
      height: auto !important;
      padding: var(--sz-space-md) var(--sz-space-lg);
      clip: auto !important;
      background: var(--sz-primary-dark);
      color: var(--sz-white);
      font-family: var(--sz-font-body);
      font-size: var(--sz-text-sm);
      font-weight: var(--sz-font-semibold);
      text-decoration: none;
      z-index: var(--sz-z-max);
      border-radius: var(--sz-radius-sm);
    }
  </style>

  {%- comment -%} Email Popup {%- endcomment -%}
  {% render 'sz-email-popup' %}
</body>
</html>
