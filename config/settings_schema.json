[
  {
    "name": "theme_info",
    "theme_name": "Shelzy's Designs",
    "theme_version": "1.0.0",
    "theme_author": "Shelzy's Designs",
    "theme_documentation_url": "https://github.com/michellehumes/shelzysdesigns",
    "theme_support_url": "https://github.com/michellehumes/shelzysdesigns/issues"
  },
  {
    "name": "Logo & Branding",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32 pixels recommended"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary (Sage Green)",
        "default": "#8BAA88"
      },
      {
        "type": "color",
        "id": "color_primary_dark",
        "label": "Primary Dark",
        "default": "#4E5F4A"
      },
      {
        "type": "header",
        "content": "Backgrounds"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_background_alt",
        "label": "Alternate Background",
        "default": "#FAF9F6"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Body Text",
        "default": "#2B2B2B"
      },
      {
        "type": "color",
        "id": "color_heading",
        "label": "Headings",
        "default": "#111111"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "paragraph",
        "content": "This theme uses Playfair Display for headings and Inter for body text."
      },
      {
        "type": "range",
        "id": "font_size_base",
        "label": "Base Font Size",
        "min": 14,
        "max": 20,
        "step": 1,
        "default": 16,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest URL"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok URL"
      }
    ]
  },
  {
    "name": "Cart & Checkout",
    "settings": [
      {
        "type": "range",
        "id": "free_shipping_threshold",
        "label": "Free Shipping Threshold",
        "min": 0,
        "max": 200,
        "step": 5,
        "default": 75,
        "unit": "$"
      },
      {
        "type": "checkbox",
        "id": "show_free_shipping_bar",
        "label": "Show Free Shipping Progress Bar",
        "default": true
      }
    ]
  },
  {
    "name": "Newsletter Popup",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_newsletter_popup",
        "label": "Enable Newsletter Popup",
        "default": true
      },
      {
        "type": "range",
        "id": "popup_delay",
        "label": "Popup Delay",
        "min": 0,
        "max": 30,
        "step": 1,
        "default": 5,
        "unit": "sec"
      },
      {
        "type": "text",
        "id": "popup_discount_code",
        "label": "Discount Code",
        "default": "WELCOME10"
      }
    ]
  }
]
