<style>
/* Popup Overlay */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.popup-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Popup Container */
.popup-container {
  background: #FFFFFF;
  border-radius: 16px;
  max-width: 500px;
  width: 100%;
  position: relative;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.popup-overlay.active .popup-container {
  transform: scale(1);
}

/* Close Button */
.popup-close {
  position: absolute;
  top: 15px;
  right: 15px;
  width: 32px;
  height: 32px;
  background: #F7F4EF;
  border: none;
  border-radius: 50%;
  font-size: 24px;
  line-height: 1;
  cursor: pointer;
  color: #666;
  z-index: 10;
  transition: all 0.3s ease;
}

.popup-close:hover {
  background: #111111;
  color: #FFFFFF;
}

/* Popup Content */
.popup-content {
  padding: 40px 30px 30px;
  text-align: center;
}

/* Popup Image */
.popup-image-placeholder {
  width: 100px;
  height: 100px;
  background: linear-gradient(135deg, #9CAE8C 0%, #7C9F8C 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 25px;
  font-size: 48px;
}

/* Popup Text */
.popup-text h2 {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 28px;
  color: #111111;
  margin-bottom: 10px;
  line-height: 1.3;
}

.popup-subtitle {
  font-family: 'Inter', sans-serif;
  font-size: 16px;
  color: #444;
  margin-bottom: 25px;
}

.popup-subtitle strong {
  color: #9CAE8C;
  font-size: 20px;
}

/* Form */
.popup-form {
  margin-bottom: 15px;
}

.popup-form .form-group {
  margin-bottom: 15px;
}

.popup-email-input {
  width: 100%;
  padding: 16px 20px;
  border: 2px solid #E8E4DE;
  border-radius: 8px;
  font-family: 'Inter', sans-serif;
  font-size: 16px;
  transition: border-color 0.3s ease;
}

.popup-email-input:focus {
  outline: none;
  border-color: #9CAE8C;
}

.popup-submit-btn {
  width: 100%;
  padding: 16px 20px;
  background: #9CAE8C;
  color: #FFFFFF;
  border: none;
  border-radius: 8px;
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 18px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.popup-submit-btn:hover {
  background: #7C9F8C;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(156, 174, 140, 0.4);
}

.popup-privacy {
  font-family: 'Inter', sans-serif;
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}

/* Decline Button */
.popup-decline {
  background: none;
  border: none;
  font-family: 'Inter', sans-serif;
  font-size: 13px;
  color: #999;
  cursor: pointer;
  text-decoration: underline;
  margin-top: 10px;
}

.popup-decline:hover {
  color: #666;
}

/* Trust Elements */
.popup-trust {
  background: #F7F4EF;
  padding: 15px 20px;
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.popup-trust span {
  font-family: 'Inter', sans-serif;
  font-size: 12px;
  color: #666;
}

/* Responsive */
@media (max-width: 480px) {
  .popup-container {
    margin: 10px;
  }

  .popup-content {
    padding: 30px 20px 20px;
  }

  .popup-text h2 {
    font-size: 24px;
  }

  .popup-trust {
    flex-direction: column;
    gap: 8px;
  }
