</style>

<script>
(function() {
  // Configuration
  const POPUP_DELAY = 0; // Show immediately on exit intent
  const COOKIE_DURATION = 7; // Days before showing again
  const COOKIE_NAME = 'shelzys_exit_popup_shown';

  // Check if popup should be shown
  function shouldShowPopup() {
    return !getCookie(COOKIE_NAME);
  }

  // Get cookie value
  function getCookie(name) {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop().split(';').shift();
    return null;
  }

  // Set cookie
  function setCookie(name, value, days) {
    const date = new Date();
    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
    document.cookie = `${name}=${value};expires=${date.toUTCString()};path=/`;
  }

  // Show popup
  function showExitPopup() {
    const popup = document.getElementById('exit-intent-popup');
    if (popup && shouldShowPopup()) {
      popup.style.display = 'flex';
      setTimeout(() => {
        popup.classList.add('active');
      }, 10);
      setCookie(COOKIE_NAME, 'true', COOKIE_DURATION);
    }
  }

  // Close popup
  window.closeExitPopup = function() {
    const popup = document.getElementById('exit-intent-popup');
    if (popup) {
      popup.classList.remove('active');
      setTimeout(() => {
        popup.style.display = 'none';
      }, 300);
    }
  };

  // Exit intent detection
  function handleMouseLeave(e) {
    if (e.clientY < 10 && shouldShowPopup()) {
      showExitPopup();
      document.removeEventListener('mouseleave', handleMouseLeave);
    }
  }

  // Mobile: Show on scroll up (indicates leaving intent)
  let lastScrollTop = 0;
  function handleMobileScroll() {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

    if (scrollTop < lastScrollTop && scrollTop < 100 && shouldShowPopup()) {
      // User is scrolling up near the top - potential exit
      if (lastScrollTop - scrollTop > 50) {
        showExitPopup();
        window.removeEventListener('scroll', handleMobileScroll);
      }
    }

    lastScrollTop = scrollTop;
  }

  // Close on overlay click
  document.addEventListener('click', function(e) {
    const popup = document.getElementById('exit-intent-popup');
    if (e.target === popup) {
      closeExitPopup();
    }
  });

  // Close on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeExitPopup();
    }
  });

  // Initialize
  document.addEventListener('DOMContentLoaded', function() {
    // Desktop: Exit intent on mouse leave
    if (window.innerWidth > 768) {
      document.addEventListener('mouseleave', handleMouseLeave);
    } else {
      // Mobile: Exit intent on scroll behavior
      window.addEventListener('scroll', handleMobileScroll);
    }
  });

  // Form submission success handling
  const form = document.getElementById('exit-popup-form');
  if (form) {
    form.addEventListener('submit', function(e) {
      // Let the form submit normally, but show success message
      const submitBtn = form.querySelector('.popup-submit-btn');
      if (submitBtn) {
        submitBtn.textContent = 'Thanks! Check your email...';
        submitBtn.disabled = true;
      }
    });
  }
})();
</script>
