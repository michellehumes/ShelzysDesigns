<style>
  .sz-announcement {
    background: linear-gradient(90deg, #4E5F4A 0%, #5a6b56 50%, #4E5F4A 100%);
    color: #ffffff;
    padding: 10px 20px;
    position: relative;
    overflow: hidden;
  }

  .sz-announcement-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 24px;
  }

  .sz-announcement-slider {
    position: relative;
    width: 100%;
    text-align: center;
  }

  .sz-announcement-slide {
    display: none;
    align-items: center;
    justify-content: center;
    gap: 8px;
    animation: szFadeIn 0.5s ease;
  }

  .sz-announcement-slide.active {
    display: flex;
  }

  @keyframes szFadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .sz-announcement-icon {
    font-size: 14px;
  }

  .sz-announcement-text {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.03em;
  }

  .sz-announcement-text a {
    color: #D1C7A1;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .sz-announcement-text a:hover {
    color: #ffffff;
  }

  .sz-announcement-highlight {
    background: rgba(255, 255, 255, 0.15);
    padding: 2px 8px;
    border-radius: 4px;
    font-weight: 600;
  }

  /* Desktop: show all 3 side by side */
  @media (min-width: 900px) {
    .sz-announcement-slide {
      display: flex !important;
      flex: 1;
    }

    .sz-announcement-slider {
      display: flex;
      justify-content: space-between;
      gap: 40px;
    }
  }

  /* Mobile: rotate through slides */
  @media (max-width: 899px) {
    .sz-announcement-text {
      font-size: 12px;
    }
  }
</style>

<div class="sz-announcement">
  <div class="sz-announcement-container">
    <div class="sz-announcement-slider" id="szAnnouncementSlider">
      <div class="sz-announcement-slide active">
        <span class="sz-announcement-icon">ðŸšš</span>
        <span class="sz-announcement-text">
          <span class="sz-announcement-highlight">FREE SHIPPING</span> on orders $50+
        </span>
      </div>
      <div class="sz-announcement-slide">
        <span class="sz-announcement-icon">âœ¨</span>
        <span class="sz-announcement-text">
          Permanent sublimation printing â€“ <strong>no vinyl, no peeling</strong>
        </span>
      </div>
      <div class="sz-announcement-slide">
        <span class="sz-announcement-icon">âš¡</span>
        <span class="sz-announcement-text">
          Ships in <span class="sz-announcement-highlight">3-5 business days</span>
        </span>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  // Only rotate on mobile
  if (window.innerWidth >= 900) return;

  var slides = document.querySelectorAll('.sz-announcement-slide');
  var currentSlide = 0;

  setInterval(function() {
    slides[currentSlide].classList.remove('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add('active');
  }, 4000);
})();
</script>
