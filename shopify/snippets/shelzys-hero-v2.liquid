{%- comment -%}
  Shelzy's Designs - Hero Section V2

  Clean, conversion-focused hero with:
  - Single strong product image (configurable)
  - Clear value proposition headline
  - Two CTAs: "Shop Custom Bottles" + "Shop by Occasion"

  Add to homepage: {% render 'shelzys-hero-v2' %}
{%- endcomment -%}

{%- liquid
  assign hero_collection = collections['best-sellers'] | default: collections.all
  assign hero_image = hero_collection.image
-%}

<section class="sz-hero-v2">
  <div class="sz-hero-v2-bg">
    {%- if hero_image -%}
      <img
        src="{{ hero_image | img_url: '2000x1200', crop: 'center' }}"
        alt="Shelzy's Designs personalized water bottles for weddings and events"
        loading="eager"
        fetchpriority="high"
      >
    {%- else -%}
      {%- comment -%} Gradient fallback if no collection image {%- endcomment -%}
      <div class="sz-hero-v2-gradient"></div>
    {%- endif -%}
  </div>

  <div class="sz-hero-v2-overlay"></div>

  <div class="sz-hero-v2-content">
    <div class="sz-hero-v2-text">
      <span class="sz-hero-v2-eyebrow">Premium Personalization</span>

      <h1 class="sz-hero-v2-title">
        Personalized Stainless Steel Water Bottles
      </h1>

      <p class="sz-hero-v2-subtitle">
        For Weddings, Events, and Everyday Life
      </p>

      <p class="sz-hero-v2-description">
        Beautiful bottles with permanent sublimation printing that never peels, cracks, or fades. Ships in 3–5 business days.
      </p>

      <div class="sz-hero-v2-ctas">
        <a href="/collections/all" class="sz-hero-btn sz-hero-btn-primary">
          Shop Custom Bottles
        </a>
        <a href="#shop-by-occasion" class="sz-hero-btn sz-hero-btn-secondary">
          Shop by Occasion
        </a>
      </div>

      <div class="sz-hero-v2-trust">
        <div class="sz-hero-trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
          </svg>
          <span>Permanent Print</span>
        </div>
        <div class="sz-hero-trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
          </svg>
          <span>3-5 Day Turnaround</span>
        </div>
        <div class="sz-hero-trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
          </svg>
          <span>4.9★ (500+ Reviews)</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .sz-hero-v2 {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    background: #FAF8F5;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .sz-hero-v2 {
      min-height: 100vh;
      min-height: 100dvh;
    }
  }

  /* ─── Background Image ─── */
  .sz-hero-v2-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .sz-hero-v2-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center right;
  }

  @media (max-width: 768px) {
    .sz-hero-v2-bg img {
      object-position: center center;
    }
  }

  .sz-hero-v2-gradient {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #F5F2ED 0%, #E8DED5 50%, #D4CFC6 100%);
  }

  /* ─── Overlay for text readability ─── */
  .sz-hero-v2-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      rgba(250, 248, 245, 0.97) 0%,
      rgba(250, 248, 245, 0.92) 35%,
      rgba(250, 248, 245, 0.6) 60%,
      rgba(250, 248, 245, 0.2) 100%
    );
  }

  @media (max-width: 768px) {
    .sz-hero-v2-overlay {
      background: linear-gradient(
        180deg,
        rgba(250, 248, 245, 0.98) 0%,
        rgba(250, 248, 245, 0.95) 50%,
        rgba(250, 248, 245, 0.75) 100%
      );
    }
  }

  /* ─── Content ─── */
  .sz-hero-v2-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 60px;
    width: 100%;
  }

  @media (max-width: 768px) {
    .sz-hero-v2-content {
      padding: 100px 24px 60px;
      text-align: center;
    }
  }

  .sz-hero-v2-text {
    max-width: 580px;
  }

  @media (max-width: 768px) {
    .sz-hero-v2-text {
      max-width: 100%;
      margin: 0 auto;
    }
  }

  /* ─── Eyebrow ─── */
  .sz-hero-v2-eyebrow {
    display: inline-block;
    font-family: "Montserrat", sans-serif;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #B5A48A;
    margin-bottom: 20px;
  }

  /* ─── Title ─── */
  .sz-hero-v2-title {
    font-family: "Montserrat", sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.75rem);
    font-weight: 500;
    line-height: 1.1;
    margin: 0 0 16px 0;
    color: #1F1F1F;
    letter-spacing: -0.02em;
  }

  /* ─── Subtitle ─── */
  .sz-hero-v2-subtitle {
    font-family: "Montserrat", sans-serif;
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 400;
    font-style: italic;
    color: #1a1a1a;
    margin: 0 0 20px 0;
    line-height: 1.3;
  }

  /* ─── Description ─── */
  .sz-hero-v2-description {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.7;
    color: #4A4A4A;
    margin: 0 0 32px 0;
  }

  @media (max-width: 768px) {
    .sz-hero-v2-description {
      font-size: 15px;
      margin-bottom: 28px;
    }
  }

  /* ─── CTAs ─── */
  .sz-hero-v2-ctas {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    margin-bottom: 40px;
  }

  @media (max-width: 768px) {
    .sz-hero-v2-ctas {
      justify-content: center;
      margin-bottom: 32px;
    }
  }

  @media (max-width: 480px) {
    .sz-hero-v2-ctas {
      flex-direction: column;
      align-items: stretch;
    }
  }

  .sz-hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 18px 36px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sz-hero-btn-primary {
    background: #2C3E2D;
    color: #FFFFFF;
    border: 2px solid #2C3E2D;
  }

  .sz-hero-btn-primary:hover {
    background: #1F1F1F;
    border-color: #1F1F1F;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .sz-hero-btn-secondary {
    background: transparent;
    color: #1F1F1F;
    border: 2px solid #1F1F1F;
  }

  .sz-hero-btn-secondary:hover {
    background: #1F1F1F;
    color: #FFFFFF;
  }

  /* ─── Trust Items ─── */
  .sz-hero-v2-trust {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .sz-hero-v2-trust {
      justify-content: center;
      gap: 16px;
    }
  }

  .sz-hero-trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: "Inter", sans-serif;
    font-size: 13px;
    color: #4A4A4A;
  }

  .sz-hero-trust-item svg {
    color: #1a1a1a;
    flex-shrink: 0;
  }
</style>
