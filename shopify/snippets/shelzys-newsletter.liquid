{%- comment -%}
  Shelzy's Designs - Newsletter Footer Section

  Email signup with 10% off incentive
  Add above footer: {% render 'shelzys-newsletter' %}
{%- endcomment -%}

<style>
  .sz-newsletter {
    background: linear-gradient(135deg, #4E5F4A 0%, #3d4a3b 100%);
    padding: 60px 20px;
    text-align: center;
  }

  .sz-newsletter-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .sz-newsletter-icon {
    font-size: 40px;
    margin-bottom: 16px;
  }

  .sz-newsletter-title {
    font-family: "Playfair Display", serif;
    font-size: 32px;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 12px 0;
  }

  .sz-newsletter-subtitle {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 28px 0;
    line-height: 1.6;
  }

  .sz-newsletter-form {
    display: flex;
    gap: 12px;
    max-width: 480px;
    margin: 0 auto;
  }

  @media (max-width: 500px) {
    .sz-newsletter-form {
      flex-direction: column;
    }

    .sz-newsletter-title {
      font-size: 26px;
    }
  }

  .sz-newsletter-input {
    flex: 1;
    padding: 16px 20px;
    border: none;
    border-radius: 999px;
    font-family: "Inter", sans-serif;
    font-size: 15px;
    outline: none;
    background: #ffffff;
    color: #2B2B2B;
  }

  .sz-newsletter-input::placeholder {
    color: #999;
  }

  .sz-newsletter-input:focus {
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
  }

  .sz-newsletter-button {
    padding: 16px 32px;
    background: #D1C7A1;
    color: #4E5F4A;
    border: none;
    border-radius: 999px;
    font-family: "Inter", sans-serif;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .sz-newsletter-button:hover {
    background: #ffffff;
    transform: translateY(-2px);
  }

  .sz-newsletter-disclaimer {
    font-family: "Inter", sans-serif;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.6);
    margin: 16px 0 0 0;
  }

  .sz-newsletter-success {
    display: none;
    padding: 20px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    margin-top: 20px;
  }

  .sz-newsletter-success.visible {
    display: block;
    animation: szFadeIn 0.3s ease;
  }

  @keyframes szFadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .sz-newsletter-success-title {
    font-family: "Playfair Display", serif;
    font-size: 22px;
    color: #ffffff;
    margin: 0 0 8px 0;
  }

  .sz-newsletter-success-text {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 12px 0;
  }

  .sz-newsletter-code {
    display: inline-block;
    background: #ffffff;
    color: #4E5F4A;
    padding: 10px 20px;
    border-radius: 8px;
    font-family: "Montserrat", sans-serif;
    font-size: 18px;
    font-weight: 700;
    letter-spacing: 0.1em;
  }
</style>

<section class="sz-newsletter">
  <div class="sz-newsletter-container">
    <div class="sz-newsletter-icon">‚úâÔ∏è</div>
    <h2 class="sz-newsletter-title">Get 10% Off Your First Order</h2>
    <p class="sz-newsletter-subtitle">Join our email list for exclusive offers, new designs, and hydration inspiration.</p>

    <form class="sz-newsletter-form" id="szNewsletterForm" onsubmit="szHandleNewsletter(event)">
      <input
        type="email"
        class="sz-newsletter-input"
        placeholder="Enter your email address"
        required
        id="szNewsletterEmail"
      >
      <button type="submit" class="sz-newsletter-button">Get My 10% Off</button>
    </form>

    <p class="sz-newsletter-disclaimer">No spam, ever. Unsubscribe anytime.</p>

    <div class="sz-newsletter-success" id="szNewsletterSuccess">
      <h3 class="sz-newsletter-success-title">Welcome to Shelzy's! üéâ</h3>
      <p class="sz-newsletter-success-text">Use this code at checkout:</p>
      <span class="sz-newsletter-code">WELCOME10</span>
    </div>
  </div>
</section>

<script>
function szHandleNewsletter(e) {
  e.preventDefault();

  var email = document.getElementById('szNewsletterEmail').value;
  var form = document.getElementById('szNewsletterForm');
  var success = document.getElementById('szNewsletterSuccess');

  // Submit to Shopify
  fetch('/contact#contact_form', {
    method: 'POST',
    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    body: 'form_type=customer&utf8=‚úì&contact[email]=' + encodeURIComponent(email) + '&contact[tags]=newsletter,footer'
  }).catch(function() {});

  // Show success
  form.style.display = 'none';
  success.classList.add('visible');

  // Store in localStorage to not show popup
  localStorage.setItem('sz_popup_shown', 'true');
}
</script>
