{% comment %}
  Email Popup - 10% Off First Order
  Installation: Add {% render 'email-popup' %} before </body> in theme.liquid
{% endcomment %}

<style>
  .shelzy-popup-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9999;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .shelzy-popup-overlay.active {
    display: flex;
    opacity: 1;
  }

  .shelzy-popup {
    background: #fff;
    max-width: 480px;
    width: 90%;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    transform: translateY(20px);
    transition: transform 0.3s ease;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .shelzy-popup-overlay.active .shelzy-popup {
    transform: translateY(0);
  }

  .shelzy-popup-close {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 20px;
    line-height: 1;
    color: #333;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shelzy-popup-close:hover {
    background: #fff;
  }

  .shelzy-popup-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: linear-gradient(135deg, #321004 0%, #5a3825 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shelzy-popup-image-text {
    color: #fff;
    font-size: 48px;
    font-weight: 700;
    text-align: center;
    line-height: 1.1;
  }

  .shelzy-popup-image-text span {
    display: block;
    font-size: 18px;
    font-weight: 400;
    margin-top: 8px;
    opacity: 0.9;
  }

  .shelzy-popup-content {
    padding: 32px;
    text-align: center;
  }

  .shelzy-popup-title {
    font-size: 24px;
    font-weight: 600;
    color: #321004;
    margin: 0 0 12px 0;
  }

  .shelzy-popup-text {
    font-size: 15px;
    color: #666;
    margin: 0 0 24px 0;
    line-height: 1.5;
  }

  .shelzy-popup-form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .shelzy-popup-input {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    font-size: 15px;
    transition: border-color 0.2s;
    box-sizing: border-box;
  }

  .shelzy-popup-input:focus {
    outline: none;
    border-color: #321004;
  }

  .shelzy-popup-button {
    width: 100%;
    padding: 14px 24px;
    background: #321004;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .shelzy-popup-button:hover {
    background: #4a1a08;
  }

  .shelzy-popup-button:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .shelzy-popup-disclaimer {
    font-size: 12px;
    color: #999;
    margin-top: 16px;
  }

  .shelzy-popup-success {
    display: none;
    text-align: center;
    padding: 20px 0;
  }

  .shelzy-popup-success.active {
    display: block;
  }

  .shelzy-popup-success-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .shelzy-popup-success-title {
    font-size: 20px;
    font-weight: 600;
    color: #321004;
    margin-bottom: 8px;
  }

  .shelzy-popup-success-text {
    color: #666;
    font-size: 14px;
  }

  .shelzy-popup-success-code {
    background: #f5f5f5;
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 20px;
    font-weight: 700;
    color: #321004;
    margin: 16px 0;
    letter-spacing: 2px;
  }

  @media (max-width: 480px) {
    .shelzy-popup-content {
      padding: 24px;
    }

    .shelzy-popup-image {
      height: 160px;
    }

    .shelzy-popup-image-text {
      font-size: 36px;
    }
  }
</style>

<div class="shelzy-popup-overlay" id="shelzyPopup">
  <div class="shelzy-popup">
    <button class="shelzy-popup-close" id="shelzyPopupClose" aria-label="Close popup">&times;</button>

    <div class="shelzy-popup-image">
      <div class="shelzy-popup-image-text">
        10% OFF
        <span>Your First Order</span>
      </div>
    </div>

    <div class="shelzy-popup-content">
      <div id="shelzyPopupForm">
        <h2 class="shelzy-popup-title">Welcome to Shelzy's Designs!</h2>
        <p class="shelzy-popup-text">
          Join our community and get 10% off your first personalized water bottle.
          Plus, be the first to know about new designs and exclusive offers.
        </p>

        <form class="shelzy-popup-form" id="shelzyEmailForm">
          <input
            type="email"
            class="shelzy-popup-input"
            placeholder="Enter your email address"
            required
            id="shelzyEmailInput"
          >
          <button type="submit" class="shelzy-popup-button" id="shelzySubmitBtn">
            Get My 10% Off
          </button>
        </form>

        <p class="shelzy-popup-disclaimer">
          No spam, ever. Unsubscribe anytime.
        </p>
      </div>

      <div class="shelzy-popup-success" id="shelzyPopupSuccess">
        <div class="shelzy-popup-success-icon">ðŸŽ‰</div>
        <div class="shelzy-popup-success-title">You're In!</div>
        <p class="shelzy-popup-success-text">Use this code at checkout:</p>
        <div class="shelzy-popup-success-code">WELCOME10</div>
        <p class="shelzy-popup-success-text">Check your email for your discount code and exclusive offers.</p>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  const POPUP_DELAY = 5000; // 5 seconds
  const POPUP_COOKIE_DAYS = 7; // Don't show again for 7 days after closing
  const EXIT_INTENT_ENABLED = true;

  const popup = document.getElementById('shelzyPopup');
  const closeBtn = document.getElementById('shelzyPopupClose');
  const form = document.getElementById('shelzyEmailForm');
  const formContainer = document.getElementById('shelzyPopupForm');
  const successContainer = document.getElementById('shelzyPopupSuccess');
  const emailInput = document.getElementById('shelzyEmailInput');
  const submitBtn = document.getElementById('shelzySubmitBtn');

  function getCookie(name) {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop().split(';').shift();
    return null;
  }

  function setCookie(name, value, days) {
    const date = new Date();
    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
    document.cookie = `${name}=${value};expires=${date.toUTCString()};path=/`;
  }

  function showPopup() {
    if (getCookie('shelzy_popup_shown')) return;
    popup.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function hidePopup() {
    popup.classList.remove('active');
    document.body.style.overflow = '';
    setCookie('shelzy_popup_shown', 'true', POPUP_COOKIE_DAYS);
  }

  // Close on button click
  closeBtn.addEventListener('click', hidePopup);

  // Close on overlay click
  popup.addEventListener('click', function(e) {
    if (e.target === popup) hidePopup();
  });

  // Close on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && popup.classList.contains('active')) {
      hidePopup();
    }
  });

  // Form submission
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    const email = emailInput.value;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Subscribing...';

    // Shopify customer creation (newsletter signup)
    fetch('/contact#contact_form', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/x-www-form-urlencoded',
      },
      body: `form_type=customer&email=${encodeURIComponent(email)}&tags=newsletter,popup-signup,welcome10`
    }).then(function() {
      // Show success state
      formContainer.style.display = 'none';
      successContainer.classList.add('active');
      setCookie('shelzy_popup_subscribed', 'true', 365);

      // Close popup after 5 seconds
      setTimeout(hidePopup, 5000);
    }).catch(function() {
      // Still show success (Shopify may redirect)
      formContainer.style.display = 'none';
      successContainer.classList.add('active');
      setTimeout(hidePopup, 5000);
    });
  });

  // Don't show if already subscribed
  if (getCookie('shelzy_popup_subscribed')) return;

  // Timed popup
  setTimeout(showPopup, POPUP_DELAY);

  // Exit intent popup (desktop only)
  if (EXIT_INTENT_ENABLED && window.innerWidth > 768) {
    let exitIntentShown = false;
    document.addEventListener('mouseout', function(e) {
      if (exitIntentShown) return;
      if (e.clientY < 10 && !popup.classList.contains('active')) {
        exitIntentShown = true;
        showPopup();
      }
    });
  }
})();
</script>
