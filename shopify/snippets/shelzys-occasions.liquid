{%- comment -%}
  Shelzy's Designs - Shop by Occasion Tiles

  4 large clickable tiles for occasion categories
  Add to homepage: {% render 'shelzys-occasions' %}
{%- endcomment -%}

{%- liquid
  assign wedding_collection = collections['wedding'] | default: collections['bridal']
  assign birthday_collection = collections['birthday'] | default: collections['celebration']
  assign corporate_collection = collections['corporate'] | default: collections['bulk-orders']
  assign sports_collection = collections['sports'] | default: collections['team']
-%}

<section class="sz-occasions">
  <div class="sz-occasions-container">
    <header class="sz-occasions-header">
      <span class="sz-eyebrow">Find Your Perfect Bottle</span>
      <h2>Shop by Occasion</h2>
    </header>

    <div class="sz-occasions-grid">
      {%- comment -%} Wedding Tile {%- endcomment -%}
      <a href="{{ wedding_collection.url | default: '/collections/all?filter.p.tag=wedding' }}" class="sz-occasion-tile">
        <div class="sz-occasion-tile-bg">
          {% if wedding_collection.image %}
            <img src="{{ wedding_collection.image | img_url: '600x800', crop: 'center' }}" alt="Wedding bottles" loading="lazy">
          {% else %}
            <div class="sz-occasion-tile-placeholder" style="background: linear-gradient(135deg, #F5F2ED 0%, #E8DED5 100%);"></div>
          {% endif %}
        </div>
        <div class="sz-occasion-tile-overlay"></div>
        <div class="sz-occasion-tile-content">
          <h3 class="sz-occasion-tile-title">Weddings</h3>
          <p class="sz-occasion-tile-subtitle">Bridesmaids, groomsmen & party favors</p>
          <span class="sz-occasion-tile-cta">Shop Wedding →</span>
        </div>
      </a>

      {%- comment -%} Birthday Tile {%- endcomment -%}
      <a href="{{ birthday_collection.url | default: '/collections/all?filter.p.tag=birthday' }}" class="sz-occasion-tile">
        <div class="sz-occasion-tile-bg">
          {% if birthday_collection.image %}
            <img src="{{ birthday_collection.image | img_url: '600x800', crop: 'center' }}" alt="Birthday bottles" loading="lazy">
          {% else %}
            <div class="sz-occasion-tile-placeholder" style="background: linear-gradient(135deg, #E8DED5 0%, #D4C8BC 100%);"></div>
          {% endif %}
        </div>
        <div class="sz-occasion-tile-overlay"></div>
        <div class="sz-occasion-tile-content">
          <h3 class="sz-occasion-tile-title">Birthdays</h3>
          <p class="sz-occasion-tile-subtitle">Unique gifts they'll actually use</p>
          <span class="sz-occasion-tile-cta">Shop Birthday →</span>
        </div>
      </a>

      {%- comment -%} Corporate Tile {%- endcomment -%}
      <a href="{{ corporate_collection.url | default: '/pages/bulk-orders' }}" class="sz-occasion-tile">
        <div class="sz-occasion-tile-bg">
          {% if corporate_collection.image %}
            <img src="{{ corporate_collection.image | img_url: '600x800', crop: 'center' }}" alt="Corporate bottles" loading="lazy">
          {% else %}
            <div class="sz-occasion-tile-placeholder" style="background: linear-gradient(135deg, #D4CFC6 0%, #B5A48A 100%);"></div>
          {% endif %}
        </div>
        <div class="sz-occasion-tile-overlay"></div>
        <div class="sz-occasion-tile-content">
          <h3 class="sz-occasion-tile-title">Corporate</h3>
          <p class="sz-occasion-tile-subtitle">Employee gifts & event swag</p>
          <span class="sz-occasion-tile-cta">Get Quote →</span>
        </div>
      </a>

      {%- comment -%} Sports & Teams Tile {%- endcomment -%}
      <a href="{{ sports_collection.url | default: '/collections/all?filter.p.tag=sports' }}" class="sz-occasion-tile">
        <div class="sz-occasion-tile-bg">
          {% if sports_collection.image %}
            <img src="{{ sports_collection.image | img_url: '600x800', crop: 'center' }}" alt="Sports team bottles" loading="lazy">
          {% else %}
            <div class="sz-occasion-tile-placeholder" style="background: linear-gradient(135deg, #B5A48A 0%, #9A9082 100%);"></div>
          {% endif %}
        </div>
        <div class="sz-occasion-tile-overlay"></div>
        <div class="sz-occasion-tile-content">
          <h3 class="sz-occasion-tile-title">Sports & Teams</h3>
          <p class="sz-occasion-tile-subtitle">Dance, cheer, soccer & more</p>
          <span class="sz-occasion-tile-cta">Shop Teams →</span>
        </div>
      </a>
    </div>
  </div>
</section>

<style>
  .sz-occasions {
    padding: 100px 20px;
    background: #FFFFFF;
  }

  @media (max-width: 768px) {
    .sz-occasions {
      padding: 60px 20px;
    }
  }

  .sz-occasions-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .sz-occasions-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .sz-occasions-header .sz-eyebrow {
    display: inline-block;
    font-family: "Montserrat", sans-serif;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #B5A48A;
    margin-bottom: 12px;
  }

  .sz-occasions-header h2 {
    font-family: "Cormorant Garamond", "Playfair Display", Georgia, serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 500;
    color: #1F1F1F;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .sz-occasions-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  @media (max-width: 1024px) {
    .sz-occasions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .sz-occasions-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }

  .sz-occasion-tile {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
    text-decoration: none;
    display: block;
  }

  @media (max-width: 1024px) {
    .sz-occasion-tile {
      aspect-ratio: 4/3;
    }
  }

  @media (max-width: 600px) {
    .sz-occasion-tile {
      aspect-ratio: 16/9;
    }
  }

  .sz-occasion-tile-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .sz-occasion-tile-bg img,
  .sz-occasion-tile-placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sz-occasion-tile:hover .sz-occasion-tile-bg img,
  .sz-occasion-tile:hover .sz-occasion-tile-placeholder {
    transform: scale(1.08);
  }

  .sz-occasion-tile-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      180deg,
      rgba(31, 31, 31, 0) 0%,
      rgba(31, 31, 31, 0.6) 100%
    );
    transition: all 0.3s ease;
  }

  .sz-occasion-tile:hover .sz-occasion-tile-overlay {
    background: linear-gradient(
      180deg,
      rgba(31, 31, 31, 0.1) 0%,
      rgba(31, 31, 31, 0.75) 100%
    );
  }

  .sz-occasion-tile-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px;
    color: #FFFFFF;
    z-index: 2;
  }

  @media (max-width: 600px) {
    .sz-occasion-tile-content {
      padding: 20px;
    }
  }

  .sz-occasion-tile-title {
    font-family: "Cormorant Garamond", Georgia, serif;
    font-size: 26px;
    font-weight: 500;
    margin: 0 0 6px 0;
  }

  @media (max-width: 600px) {
    .sz-occasion-tile-title {
      font-size: 22px;
    }
  }

  .sz-occasion-tile-subtitle {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    opacity: 0.85;
    margin: 0 0 12px 0;
    font-weight: 400;
  }

  .sz-occasion-tile-cta {
    font-family: "Inter", sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
    display: inline-block;
  }

  .sz-occasion-tile:hover .sz-occasion-tile-cta {
    opacity: 1;
    transform: translateY(0);
  }
</style>
