      {{ collection.title }}
    </nav>

    <h1 class="sz-collection-title">{{ collection.title }}</h1>

    {% if collection.description != blank %}
      <p class="sz-collection-desc">{{ collection.description | strip_html | truncate: 200 }}</p>
    {% endif %}

    <div class="sz-collection-meta">
      <span class="sz-collection-count">
        <strong>{{ collection.products_count }}</strong> products
      </span>

      <div class="sz-collection-badges">
        <span class="sz-collection-badge">
