<script>
(function() {
  var cards = document.querySelectorAll('.sz-testimonial-card');
  var dotsContainer = document.getElementById('szTestimonialDots');
  var currentIndex = 0;
  var autoplayInterval;

  if (!cards.length) return;

  // Create dots
  cards.forEach(function(_, i) {
    var dot = document.createElement('button');
    dot.className = 'sz-testimonial-dot' + (i === 0 ? ' active' : '');
    dot.setAttribute('aria-label', 'Go to review ' + (i + 1));
    dot.onclick = function() { goToSlide(i); };
    dotsContainer.appendChild(dot);
  });

  var dots = document.querySelectorAll('.sz-testimonial-dot');

  function goToSlide(index) {
    cards[currentIndex].classList.remove('active');
    dots[currentIndex].classList.remove('active');

    currentIndex = index;
    if (currentIndex >= cards.length) currentIndex = 0;
    if (currentIndex < 0) currentIndex = cards.length - 1;

    cards[currentIndex].classList.add('active');
    dots[currentIndex].classList.add('active');

    resetAutoplay();
  }

  window.szNextTestimonial = function() {
    goToSlide(currentIndex + 1);
  };

  window.szPrevTestimonial = function() {
    goToSlide(currentIndex - 1);
  };

  function resetAutoplay() {
    clearInterval(autoplayInterval);
    autoplayInterval = setInterval(function() {
      goToSlide(currentIndex + 1);
    }, 6000);
  }

  // Start autoplay
  resetAutoplay();

  // Pause on hover
  var carousel = document.querySelector('.sz-testimonial-carousel');
  carousel.addEventListener('mouseenter', function() {
    clearInterval(autoplayInterval);
  });
  carousel.addEventListener('mouseleave', function() {
    resetAutoplay();
  });
})();
</script>

