    flex-shrink: 0;
  }

  .sz-logo-link {
    display: block;
  }

  .sz-logo-img {
    height: 44px;
    width: auto;
    display: block;
  }

  .sz-logo-text {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 24px;
    font-weight: 500;
    color: #1F1F1F;
  }

  @media (max-width: 768px) {
    .sz-logo-img {
      height: 36px;
    }
  }

  /* ═══════════════════════════════════════════════════════════════════
