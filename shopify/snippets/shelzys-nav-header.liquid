<style>
  /* ═══════════════════════════════════════════════════════════════════
     HEADER CONTAINER
     ═══════════════════════════════════════════════════════════════════ */
  .sz-header {
    background: #FFFFFF;
    border-bottom: 1px solid #E8E4DE;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .sz-header-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
    gap: 32px;
  }

  @media (max-width: 1024px) {
    .sz-header-inner {
      padding: 12px 16px;
      gap: 16px;
    }
  }

  /* ═══════════════════════════════════════════════════════════════════
     LOGO
     ═══════════════════════════════════════════════════════════════════ */
