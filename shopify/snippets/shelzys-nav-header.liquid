    flex: 1;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 1024px) {
    .sz-main-nav {
      display: none;
    }
  }

  .sz-nav-list {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sz-nav-item {
    position: relative;
  }

  .sz-nav-link {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 10px 16px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #1F1F1F;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .sz-nav-link:hover {
    color: #4E5F4A;
  }

  .sz-nav-chevron {
    transition: transform 0.2s ease;
  }

  .sz-nav-item:hover .sz-nav-chevron {
