<script>
(function() {
  // Import Google Fonts for previews
  var link = document.createElement('link');
  link.href = 'https://fonts.googleapis.com/css2?family=Pinyon+Script&family=Playfair+Display:wght@400;600&family=Montserrat:wght@400;500;600&family=Dancing+Script:wght@400;500&family=Oswald:wght@400;600&family=Inter:wght@300;400;500&display=swap';
  link.rel = 'stylesheet';
  document.head.appendChild(link);

  var currentStep = 1;
  var selections = {
    bottleColor: 'White',
    font: 'script',
    fontLabel: 'Elegant Script',
    text: '',
    textColor: 'Black'
  };

  // Step Navigation
  window.szNextStep = function(step) {
    showStep(step);
  };

  window.szPrevStep = function(step) {
    showStep(step);
  };

  function showStep(step) {
    document.querySelectorAll('.sz-step').forEach(function(el) {
      el.classList.remove('sz-step-active');
    });
    document.querySelector('.sz-step[data-step="' + step + '"]').classList.add('sz-step-active');

    document.querySelectorAll('.sz-step-indicator').forEach(function(el, i) {
      el.classList.remove('active', 'completed');
      if (i + 1 < step) el.classList.add('completed');
      if (i + 1 === step) el.classList.add('active');
    });

    currentStep = step;
  }

  // Bottle Color Selection
  document.querySelectorAll('#szBottleColors .sz-color-swatch').forEach(function(swatch) {
    swatch.addEventListener('click', function() {
      document.querySelectorAll('#szBottleColors .sz-color-swatch').forEach(function(s) {
        s.classList.remove('selected');
      });
      this.classList.add('selected');
      selections.bottleColor = this.dataset.label;
      document.getElementById('szBottleColorLabel').textContent = this.dataset.label;
      document.getElementById('szBottleColorInput').value = this.dataset.label;
    });
  });

  // Font Selection
  document.querySelectorAll('#szFonts .sz-font-option').forEach(function(option) {
    option.addEventListener('click', function() {
      document.querySelectorAll('#szFonts .sz-font-option').forEach(function(o) {
        o.classList.remove('selected');
      });
      this.classList.add('selected');
      selections.font = this.dataset.font;
      selections.fontLabel = this.dataset.label;
      document.getElementById('szFontInput').value = this.dataset.label;

      // Update preview font
      var previewStyle = this.querySelector('.sz-font-preview').style.cssText;
      document.getElementById('szTextPreview').style.cssText = previewStyle + 'font-size: 28px;';
    });
  });

  // Text Input
  var nameInput = document.getElementById('szNameInput');
  var charCount = document.getElementById('szCharCount');
  var textPreview = document.getElementById('szTextPreview');
  var nameHidden = document.getElementById('szNameInputHidden');

  if (nameInput) {
    nameInput.addEventListener('input', function() {
      var val = this.value;
      charCount.textContent = val.length;
      textPreview.textContent = val || 'Your Name';
      nameHidden.value = val;
      selections.text = val;

      // Change count color when near limit
      if (val.length >= 18) {
        charCount.parentElement.classList.add('near-limit');
      } else {
        charCount.parentElement.classList.remove('near-limit');
      }
    });
  }

  // Text Color Selection
  document.querySelectorAll('#szTextColors .sz-text-color-swatch').forEach(function(swatch) {
    swatch.addEventListener('click', function() {
      document.querySelectorAll('#szTextColors .sz-text-color-swatch').forEach(function(s) {
        s.classList.remove('selected');
      });
      this.classList.add('selected');
      selections.textColor = this.dataset.label;
      document.getElementById('szTextColorLabel').textContent = this.dataset.label;
      document.getElementById('szTextColorInput').value = this.dataset.label;
    });
  });

  // Complete Personalization
  window.szCompletePersonalization = function() {
    // Validate text input
    if (!selections.text.trim()) {
      alert('Please enter a name or text for your bottle.');
      showStep(3);
      nameInput.focus();
      return;
    }

    // Show all steps as completed
    document.querySelectorAll('.sz-step-indicator').forEach(function(el) {
      el.classList.add('completed');
      el.classList.remove('active');
    });

    // Show summary or scroll to add to cart
    var addToCartBtn = document.querySelector('[name="add"], .product-form__submit, #AddToCart, .add-to-cart');
    if (addToCartBtn) {
      addToCartBtn.scrollIntoView({ behavior: 'smooth', block: 'center' });
      addToCartBtn.classList.add('sz-highlight-btn');
      setTimeout(function() {
        addToCartBtn.classList.remove('sz-highlight-btn');
      }, 2000);
    }
  };
})();
</script>

