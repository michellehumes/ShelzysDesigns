  --sz-beige: #F7F4EF;
  --sz-charcoal: #2B2B2B;
  --sz-soft-black: #111111;
  --sz-gray: #7A7A7A;

  /* Accents */
  --sz-gold: #D1C7A1;
  --sz-blush: #F8D9C5;
  --sz-success: #4E5F4A;
  --sz-error: #DC2626;

  /* Typography - 2 fonts only */
  --sz-font-heading: 'Playfair Display', Georgia, serif;
  --sz-font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;

  /* Sizes */
