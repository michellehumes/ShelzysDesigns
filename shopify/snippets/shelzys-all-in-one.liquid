  /* Borders & Shadows */
  --sz-radius-sm: 4px;
  --sz-radius-md: 8px;
  --sz-border-light: #E0E3DF;
  --sz-shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
}

/* Base Typography */
.sz-heading {
  font-family: var(--sz-font-heading);
  font-weight: 600;
  line-height: 1.2;
  color: var(--sz-soft-black);
}

.sz-body {
  font-family: var(--sz-font-body);
  font-size: var(--sz-text-base);
  line-height: 1.6;
  color: var(--sz-charcoal);
}

/* Buttons */
.sz-btn {
  display: inline-block;
  padding: 14px 28px;
  font-family: var(--sz-font-body);
  font-weight: 600;
  font-size: var(--sz-text-base);
  text-decoration: none;
  border-radius: var(--sz-radius-sm);
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
}

.sz-btn-primary {
  background: var(--sz-primary);
  color: var(--sz-white);
}

.sz-btn-primary:hover {
  background: var(--sz-primary-hover);
  transform: translateY(-2px);
}

.sz-btn-secondary {
  background: transparent;
  color: var(--sz-soft-black);
  border: 2px solid var(--sz-soft-black);
}

.sz-btn-secondary:hover {
  background: var(--sz-soft-black);
  color: var(--sz-white);
}
</style>

