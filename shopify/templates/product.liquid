{%- comment -%}
  Shelzy's Designs - Product Template

  Optimized product page for personalized water bottles.
  Includes product gallery, customization form, trust signals, and upsells.
{%- endcomment -%}

{%- comment -%} Product Schema for SEO {%- endcomment -%}
{% render 'shelzys-product-schema' %}

<div class="sz-product-page">
  <div class="sz-product-container">

    {%- comment -%} Breadcrumbs {%- endcomment -%}
    {% render 'shelzys-breadcrumbs' %}

    <div class="sz-product-layout">

      {%- comment -%} Left: Product Gallery {%- endcomment -%}
      <div class="sz-product-gallery">
        <div class="sz-product-main-image">
          {%- if product.featured_image -%}
            <img
              src="{{ product.featured_image | image_url: width: 800 }}"
              srcset="{{ product.featured_image | image_url: width: 400 }} 400w,
                      {{ product.featured_image | image_url: width: 600 }} 600w,
                      {{ product.featured_image | image_url: width: 800 }} 800w"
              sizes="(max-width: 768px) 100vw, 50vw"
              alt="{{ product.featured_image.alt | default: product.title }}"
              loading="eager"
              class="sz-main-img"
              id="szProductMainImage"
            >
          {%- else -%}
            <div class="sz-placeholder-image">No image available</div>
          {%- endif -%}

          {%- comment -%} Product Badges {%- endcomment -%}
          {% render 'shelzys-product-badges', product: product %}
        </div>

        {%- comment -%} Thumbnail Gallery {%- endcomment -%}
        {%- if product.images.size > 1 -%}
          <div class="sz-product-thumbnails">
            {%- for image in product.images -%}
              <button
                type="button"
                class="sz-thumbnail{% if forloop.first %} sz-thumbnail-active{% endif %}"
                data-image-url="{{ image | image_url: width: 800 }}"
                aria-label="View image {{ forloop.index }}"
              >
                <img
                  src="{{ image | image_url: width: 100 }}"
                  alt="{{ image.alt | default: product.title }}"
                  loading="lazy"
                >
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Right: Product Info {%- endcomment -%}
      <div class="sz-product-info">

        {%- comment -%} Product Title & Price {%- endcomment -%}
        <h1 class="sz-product-title">{{ product.title }}</h1>

        <div class="sz-product-price-row">
          <span class="sz-product-price">{{ product.price | money }}</span>
          {%- if product.compare_at_price > product.price -%}
            <span class="sz-product-compare-price">{{ product.compare_at_price | money }}</span>
            <span class="sz-product-sale-badge">Sale</span>
          {%- endif -%}
        </div>

        {%- comment -%} Trust Indicators {%- endcomment -%}
        <div class="sz-product-trust-strip">
          <span class="sz-trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
            Free shipping over $75
          </span>
          <span class="sz-trust-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            Ships in 3-5 days
          </span>
        </div>

        {%- comment -%} Product Form {%- endcomment -%}
        <form method="post" action="/cart/add" id="szProductForm" class="sz-product-form">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          {%- comment -%} Variant Selector (if variants exist) {%- endcomment -%}
          {%- unless product.has_only_default_variant -%}
            {%- for option in product.options_with_values -%}
              <div class="sz-form-group">
                <label class="sz-form-label" for="Option-{{ forloop.index }}">
                  {{ option.name }}
                </label>
                <select
                  name="options[{{ option.name | escape }}]"
                  id="Option-{{ forloop.index }}"
                  class="sz-form-select"
                >
                  {%- for value in option.values -%}
                    <option
                      value="{{ value | escape }}"
                      {% if option.selected_value == value %}selected{% endif %}
                    >
                      {{ value }}
                    </option>
                  {%- endfor -%}
                </select>
              </div>
            {%- endfor -%}
          {%- endunless -%}

          {%- comment -%} Personalization Fields {%- endcomment -%}
          {% render 'shelzys-personalization-form' %}

          {%- comment -%} Quantity {%- endcomment -%}
          <div class="sz-form-group">
            <label class="sz-form-label" for="Quantity">Quantity</label>
            <div class="sz-quantity-selector">
              <button type="button" class="sz-qty-btn" data-action="decrease" aria-label="Decrease quantity">-</button>
              <input
                type="number"
                name="quantity"
                id="Quantity"
                value="1"
                min="1"
                max="99"
                class="sz-qty-input"
              >
              <button type="button" class="sz-qty-btn" data-action="increase" aria-label="Increase quantity">+</button>
            </div>
          </div>

          {%- comment -%} Add to Cart Button {%- endcomment -%}
          <button
            type="submit"
            name="add"
            class="sz-btn sz-btn-primary sz-btn-atc"
            {% unless product.available %}disabled{% endunless %}
          >
            {%- if product.available -%}
              Add to Cart
            {%- else -%}
              Sold Out
            {%- endif -%}
          </button>
        </form>

        {%- comment -%} Delivery Estimator {%- endcomment -%}
        {% render 'shelzys-delivery-estimator' %}

        {%- comment -%} Product Description {%- endcomment -%}
        <div class="sz-product-description">
          <h2 class="sz-description-heading">About This Bottle</h2>
          <div class="sz-description-content">
            {{ product.description }}
          </div>
        </div>

        {%- comment -%} Why Sublimation Section {%- endcomment -%}
        <div class="sz-sublimation-info">
          <h3 class="sz-sublimation-heading">Why Our Bottles Don't Peel</h3>
          <p class="sz-sublimation-text">
            Unlike vinyl stickers, our sublimation printing infuses the design directly into the bottle's coating.
            The result? A smooth, permanent finish that won't peel, crack, or fade.
          </p>
        </div>

      </div>

    </div>

    {%- comment -%} Product FAQ {%- endcomment -%}
    {% render 'shelzys-product-faq' %}

    {%- comment -%} Recently Viewed {%- endcomment -%}
    {% render 'shelzys-recently-viewed' %}

    {%- comment -%} Upsells / Frequently Bought Together {%- endcomment -%}
    {% render 'shelzys-upsell-frequently-bought' %}

  </div>
</div>

<style>
  /* ═══════════════════════════════════════════════════════════════════
     PRODUCT PAGE LAYOUT
     ═══════════════════════════════════════════════════════════════════ */
  .sz-product-page {
    padding: var(--sz-space-xl) var(--sz-space-md);
    background: var(--sz-white);
  }

  .sz-product-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .sz-product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--sz-space-2xl);
    margin-top: var(--sz-space-lg);
  }

  @media (max-width: 900px) {
    .sz-product-layout {
      grid-template-columns: 1fr;
      gap: var(--sz-space-xl);
    }
  }

  /* ═══════════════════════════════════════════════════════════════════
     PRODUCT GALLERY
     ═══════════════════════════════════════════════════════════════════ */
  .sz-product-gallery {
    position: sticky;
    top: 100px;
    align-self: start;
  }

  @media (max-width: 900px) {
    .sz-product-gallery {
      position: static;
    }
  }

  .sz-product-main-image {
    position: relative;
    background: var(--sz-warm-white);
    border-radius: var(--sz-radius-md);
    overflow: hidden;
    margin-bottom: var(--sz-space-md);
  }

  .sz-main-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .sz-product-thumbnails {
    display: flex;
    gap: var(--sz-space-sm);
    flex-wrap: wrap;
  }

  .sz-thumbnail {
    width: 80px;
    height: 80px;
    padding: 0;
    border: 2px solid transparent;
    border-radius: var(--sz-radius-sm);
    overflow: hidden;
    cursor: pointer;
    background: var(--sz-warm-white);
    transition: border-color var(--sz-transition-fast);
  }

  .sz-thumbnail:hover,
  .sz-thumbnail-active {
    border-color: var(--sz-primary);
  }

  .sz-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* ═══════════════════════════════════════════════════════════════════
     PRODUCT INFO
     ═══════════════════════════════════════════════════════════════════ */
  .sz-product-title {
    font-family: var(--sz-font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--sz-charcoal);
    margin: 0 0 var(--sz-space-md) 0;
    line-height: 1.2;
  }

  .sz-product-price-row {
    display: flex;
    align-items: center;
    gap: var(--sz-space-sm);
    margin-bottom: var(--sz-space-lg);
  }

  .sz-product-price {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-2xl);
    font-weight: 600;
    color: var(--sz-charcoal);
  }

  .sz-product-compare-price {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-lg);
    color: var(--sz-gray);
    text-decoration: line-through;
  }

  .sz-product-sale-badge {
    background: var(--sz-error);
    color: var(--sz-white);
    font-family: var(--sz-font-body);
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 4px 10px;
    border-radius: var(--sz-radius-sm);
  }

  /* Trust Strip */
  .sz-product-trust-strip {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sz-space-md);
    padding: var(--sz-space-md) 0;
    border-top: 1px solid var(--sz-border-light);
    border-bottom: 1px solid var(--sz-border-light);
    margin-bottom: var(--sz-space-lg);
  }

  .sz-trust-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-primary-dark);
  }

  .sz-trust-item svg {
    color: var(--sz-primary);
  }

  /* ═══════════════════════════════════════════════════════════════════
     PRODUCT FORM
     ═══════════════════════════════════════════════════════════════════ */
  .sz-product-form {
    margin-bottom: var(--sz-space-xl);
  }

  .sz-form-group {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-label {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-charcoal);
    margin-bottom: var(--sz-space-xs);
  }

  .sz-form-select {
    width: 100%;
    padding: var(--sz-space-sm) var(--sz-space-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    color: var(--sz-charcoal);
    background: var(--sz-white);
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
    cursor: pointer;
    transition: border-color var(--sz-transition-fast);
  }

  .sz-form-select:focus {
    outline: none;
    border-color: var(--sz-primary);
  }

  /* Quantity Selector */
  .sz-quantity-selector {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
  }

  .sz-qty-btn {
    width: 44px;
    height: 44px;
    background: var(--sz-warm-white);
    border: none;
    font-size: 20px;
    cursor: pointer;
    transition: background var(--sz-transition-fast);
  }

  .sz-qty-btn:hover {
    background: var(--sz-beige);
  }

  .sz-qty-input {
    width: 60px;
    height: 44px;
    text-align: center;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    border: none;
    border-left: 1px solid var(--sz-border-light);
    border-right: 1px solid var(--sz-border-light);
  }

  .sz-qty-input:focus {
    outline: none;
  }

  /* Add to Cart Button */
  .sz-btn-atc {
    width: 100%;
    padding: var(--sz-space-md) var(--sz-space-xl);
    font-size: var(--sz-text-base);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .sz-btn-atc:disabled {
    background: var(--sz-gray);
    cursor: not-allowed;
  }

  /* ═══════════════════════════════════════════════════════════════════
     PRODUCT DESCRIPTION & SUBLIMATION INFO
     ═══════════════════════════════════════════════════════════════════ */
  .sz-product-description {
    margin-bottom: var(--sz-space-xl);
  }

  .sz-description-heading {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-xl);
    font-weight: 600;
    color: var(--sz-charcoal);
    margin: 0 0 var(--sz-space-md) 0;
  }

  .sz-description-content {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    line-height: 1.7;
    color: var(--sz-charcoal);
  }

  .sz-description-content p {
    margin: 0 0 1em 0;
  }

  .sz-sublimation-info {
    background: var(--sz-warm-white);
    padding: var(--sz-space-lg);
    border-radius: var(--sz-radius-md);
    border-left: 4px solid var(--sz-primary);
  }

  .sz-sublimation-heading {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-lg);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
  }

  .sz-sublimation-text {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    line-height: 1.6;
    color: var(--sz-charcoal);
    margin: 0;
  }
</style>

<script>
(function() {
  // Thumbnail gallery switcher
  var thumbnails = document.querySelectorAll('.sz-thumbnail');
  var mainImage = document.getElementById('szProductMainImage');

  thumbnails.forEach(function(thumb) {
    thumb.addEventListener('click', function() {
      var imageUrl = this.getAttribute('data-image-url');
      mainImage.src = imageUrl;

      thumbnails.forEach(function(t) { t.classList.remove('sz-thumbnail-active'); });
      this.classList.add('sz-thumbnail-active');
    });
  });

  // Quantity selector
  var qtyBtns = document.querySelectorAll('.sz-qty-btn');
  var qtyInput = document.getElementById('Quantity');

  qtyBtns.forEach(function(btn) {
    btn.addEventListener('click', function() {
      var action = this.getAttribute('data-action');
      var currentValue = parseInt(qtyInput.value) || 1;

      if (action === 'increase') {
        qtyInput.value = currentValue + 1;
      } else if (action === 'decrease' && currentValue > 1) {
        qtyInput.value = currentValue - 1;
      }
    });
  });
})();
</script>
