{%- comment -%} ═══════ EMAIL SIGNUP ═══════ {%- endcomment -%}
<section class="sz-section sz-bg-sage">
  <div class="sz-container sz-container-narrow">
    <div class="sz-signup">
      <h2>Get 10% Off Your First Order</h2>
      <p>Join our email list for exclusive offers, new designs, and hydration inspiration.</p>
      <form action="/contact#newsletter" method="post" class="sz-signup-form">
        <input type="hidden" name="contact[tags]" value="newsletter,homepage">
        <div class="sz-signup-row">
          <input
            type="email"
            name="contact[email]"
            placeholder="Enter your email"
            required
            class="sz-signup-input"
            aria-label="Email address"
          >
          <button type="submit" class="sz-btn sz-btn-dark">Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════════
     HERO SECTION
     ═══════════════════════════════════════════════════════════════════ */
  .sz-hero {
    background: var(--sz-white);
    padding: 60px 24px;
  }

  .sz-hero-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  @media (max-width: 900px) {
    .sz-hero-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    .sz-hero-image { order: -1; }
  }

  .sz-hero-title {
    font-family: var(--sz-font-heading);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    line-height: 1.15;
    color: var(--sz-charcoal);
    margin: 0 0 20px 0;
  }

  .sz-hero-subtitle {
    font-family: var(--sz-font-body);
    font-size: 18px;
    line-height: 1.6;
    color: var(--sz-charcoal);
    margin: 0 0 28px 0;
    max-width: 480px;
  }

  .sz-hero-cta {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 24px;
  }

  .sz-hero-trust {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
    font-family: var(--sz-font-body);
    font-size: 13px;
    color: var(--sz-primary-dark);
    font-weight: 500;
  }

  .sz-hero-trust span::before {
    content: "✓ ";
    color: var(--sz-primary);
  }

  .sz-hero-img {
    width: 100%;
    height: auto;
    border-radius: var(--sz-radius-md);
  }

  .sz-hero-placeholder {
    width: 100%;
    aspect-ratio: 1;
    background: var(--sz-warm-white);
    border-radius: var(--sz-radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-gray);
  }

  /* ═══════════════════════════════════════════════════════════════════
     PRODUCT GRID
     ═══════════════════════════════════════════════════════════════════ */
  .sz-product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-bottom: 40px;
  }

  @media (max-width: 1024px) {
    .sz-product-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 500px) {
    .sz-product-grid { grid-template-columns: 1fr; }
  }

  .sz-product-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .sz-product-placeholder {
    width: 100%;
    aspect-ratio: 1;
    background: var(--sz-cream);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: var(--sz-gray);
  }

  .sz-badge-sale {
    background: var(--sz-error) !important;
  }

  .sz-section-cta {
    text-align: center;
  }

  /* ═══════════════════════════════════════════════════════════════════
     VALUE PROPOSITION
     ═══════════════════════════════════════════════════════════════════ */
  .sz-value-prop {
    text-align: center;
  }

  .sz-value-prop .sz-lead {
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .sz-value-list {
    list-style: none;
    padding: 0;
    margin: 0 auto 32px;
    max-width: 400px;
    text-align: left;
  }

  .sz-value-list li {
    display: flex;
    align-items: center;
    gap: 12px;
    font-family: var(--sz-font-body);
    font-size: 16px;
    color: var(--sz-charcoal);
    padding: 12px 0;
    border-bottom: 1px solid var(--sz-border-light);
  }

  .sz-value-list li:last-child {
    border-bottom: none;
  }

  .sz-value-list svg {
    color: var(--sz-primary);
    flex-shrink: 0;
  }

  .sz-tagline {
    font-family: var(--sz-font-heading);
    font-size: 22px;
    font-weight: 500;
    color: var(--sz-primary-dark);
    font-style: italic;
  }

  /* ═══════════════════════════════════════════════════════════════════
     STEPS
     ═══════════════════════════════════════════════════════════════════ */
  .sz-steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-bottom: 40px;
  }

  @media (max-width: 768px) {
    .sz-steps { grid-template-columns: 1fr; gap: 32px; }
  }

  .sz-step {
    text-align: center;
  }

  .sz-step-number {
    width: 56px;
    height: 56px;
    background: var(--sz-primary);
    color: var(--sz-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--sz-font-body);
    font-size: 22px;
    font-weight: 600;
    margin: 0 auto 20px;
  }

  .sz-step h3 {
    font-family: var(--sz-font-heading);
    font-size: 20px;
    font-weight: 600;
    color: var(--sz-charcoal);
    margin: 0 0 12px 0;
  }

  .sz-step p {
    font-family: var(--sz-font-body);
    font-size: 15px;
    line-height: 1.6;
    color: var(--sz-gray);
    margin: 0;
    max-width: 280px;
    margin-left: auto;
    margin-right: auto;
  }

  /* ═══════════════════════════════════════════════════════════════════
     EMAIL SIGNUP
     ═══════════════════════════════════════════════════════════════════ */
  .sz-bg-sage {
    background: var(--sz-primary);
    color: var(--sz-white);
  }

  .sz-signup {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .sz-signup h2 {
    font-family: var(--sz-font-heading);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--sz-white);
    margin: 0 0 12px 0;
  }

  .sz-signup p {
    font-family: var(--sz-font-body);
    font-size: 16px;
    opacity: 0.9;
    margin: 0 0 24px 0;
  }

  .sz-signup-row {
    display: flex;
    gap: 0;
  }

  @media (max-width: 500px) {
    .sz-signup-row {
      flex-direction: column;
      gap: 12px;
    }
  }

  .sz-signup-input {
    flex: 1;
    padding: 16px 20px;
    font-family: var(--sz-font-body);
    font-size: 16px;
    border: none;
    border-radius: var(--sz-radius-sm) 0 0 var(--sz-radius-sm);
  }

  @media (max-width: 500px) {
    .sz-signup-input {
      border-radius: var(--sz-radius-sm);
    }
  }

  .sz-signup-input:focus {
    outline: 2px solid var(--sz-white);
    outline-offset: -2px;
  }

  .sz-btn-dark {
    background: var(--sz-charcoal);
    color: var(--sz-white);
    border: none;
    padding: 16px 28px;
    font-family: var(--sz-font-body);
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    border-radius: 0 var(--sz-radius-sm) var(--sz-radius-sm) 0;
    transition: background 0.3s ease;
  }

  @media (max-width: 500px) {
    .sz-btn-dark {
      border-radius: var(--sz-radius-sm);
    }
  }

  .sz-btn-dark:hover {
    background: #000;
  }
</style>

{% schema %}
{
  "name": "Homepage",
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Premium Personalized Water Bottles"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Custom-made bottles for bridesmaids, weddings, kids, and every special occasion. True sublimation printing that never peels or fades."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "default": "/collections/best-sellers"
    }
  ]
}
{% endschema %}
