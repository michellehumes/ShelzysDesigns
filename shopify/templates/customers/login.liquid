{%- comment -%}
  Shelzy's Designs - Customer Login Template

  Login page for returning customers with:
  - Email and password login
  - Forgot password link
  - Register account link
{%- endcomment -%}

<div class="sz-customer-page">
  <div class="sz-customer-container">

    <div class="sz-customer-card">

      <header class="sz-customer-header">
        <h1 class="sz-customer-title">Welcome Back</h1>
        <p class="sz-customer-subtitle">Log in to your account to track orders and manage your information.</p>
      </header>

      {%- comment -%} Login Form {%- endcomment -%}
      <div id="customer-login" class="sz-customer-form-wrapper">
        {% form 'customer_login' %}
          {%- if form.errors -%}
            <div class="sz-form-errors">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="sz-form-group">
            <label for="customer-email" class="sz-form-label">Email Address</label>
            <input
              type="email"
              name="customer[email]"
              id="customer-email"
              class="sz-form-input"
              autocomplete="email"
              autocapitalize="off"
              required
            >
          </div>

          <div class="sz-form-group">
            <label for="customer-password" class="sz-form-label">Password</label>
            <input
              type="password"
              name="customer[password]"
              id="customer-password"
              class="sz-form-input"
              autocomplete="current-password"
              required
            >
          </div>

          <div class="sz-form-actions">
            <button type="submit" class="sz-btn sz-btn-primary sz-btn-full">Sign In</button>
          </div>

          <div class="sz-form-links">
            <a href="#recover" id="recover-link" class="sz-form-link">Forgot your password?</a>
          </div>
        {% endform %}
      </div>

      {%- comment -%} Password Recovery Form {%- endcomment -%}
      <div id="recover-password" class="sz-customer-form-wrapper" style="display: none;">
        <h2 class="sz-recover-title">Reset Your Password</h2>
        <p class="sz-recover-text">Enter your email address and we'll send you a link to reset your password.</p>

        {% form 'recover_customer_password' %}
          {%- if form.posted_successfully? -%}
            <div class="sz-form-success">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
              <p>If that email address is in our system, you will receive an email with instructions about how to reset your password in a few minutes.</p>
            </div>
          {%- else -%}
            {%- if form.errors -%}
              <div class="sz-form-errors">
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}

            <div class="sz-form-group">
              <label for="recover-email" class="sz-form-label">Email Address</label>
              <input
                type="email"
                name="email"
                id="recover-email"
                class="sz-form-input"
                autocomplete="email"
                autocapitalize="off"
                required
              >
            </div>

            <div class="sz-form-actions">
              <button type="submit" class="sz-btn sz-btn-primary sz-btn-full">Submit</button>
            </div>
          {%- endif -%}

          <div class="sz-form-links">
            <a href="#login" id="login-link" class="sz-form-link">Back to login</a>
          </div>
        {% endform %}
      </div>

      {%- comment -%} Register Link {%- endcomment -%}
      <div class="sz-customer-footer">
        <p>Don't have an account? <a href="{{ routes.account_register_url }}">Create one</a></p>
      </div>

    </div>

  </div>
</div>

<style>
  /* ═══════════════════════════════════════════════════════════════════
     CUSTOMER PAGE STYLES
     ═══════════════════════════════════════════════════════════════════ */
  .sz-customer-page {
    padding: var(--sz-space-2xl) var(--sz-space-md);
    background: var(--sz-warm-white);
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sz-customer-container {
    width: 100%;
    max-width: 440px;
  }

  .sz-customer-card {
    background: var(--sz-white);
    border-radius: var(--sz-radius-lg);
    padding: var(--sz-space-2xl);
    box-shadow: var(--sz-shadow-lg);
  }

  .sz-customer-header {
    text-align: center;
    margin-bottom: var(--sz-space-xl);
  }

  .sz-customer-title {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-2xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
  }

  .sz-customer-subtitle {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
    line-height: 1.5;
  }

  .sz-customer-form-wrapper {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-group {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-label {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-charcoal);
    margin-bottom: var(--sz-space-xs);
  }

  .sz-form-input {
    width: 100%;
    padding: var(--sz-space-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
    background: var(--sz-white);
    transition: border-color var(--sz-transition-fast);
  }

  .sz-form-input:focus {
    outline: none;
    border-color: var(--sz-primary);
  }

  .sz-form-actions {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-btn-full {
    width: 100%;
    padding: var(--sz-space-md);
  }

  .sz-form-links {
    text-align: center;
  }

  .sz-form-link {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-primary);
    text-decoration: none;
  }

  .sz-form-link:hover {
    text-decoration: underline;
  }

  .sz-recover-title {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
    text-align: center;
  }

  .sz-recover-text {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    text-align: center;
    margin: 0 0 var(--sz-space-xl) 0;
    line-height: 1.5;
  }

  .sz-form-errors {
    background: #FEF2F2;
    border: 1px solid var(--sz-error);
    border-radius: var(--sz-radius-sm);
    padding: var(--sz-space-md);
    margin-bottom: var(--sz-space-lg);
    color: var(--sz-error);
    font-size: var(--sz-text-sm);
  }

  .sz-form-success {
    text-align: center;
    padding: var(--sz-space-lg);
    background: #F0FDF4;
    border: 1px solid #22C55E;
    border-radius: var(--sz-radius-sm);
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-success svg {
    color: #22C55E;
    margin-bottom: var(--sz-space-sm);
  }

  .sz-form-success p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-charcoal);
    margin: 0;
    line-height: 1.5;
  }

  .sz-customer-footer {
    text-align: center;
    padding-top: var(--sz-space-lg);
    border-top: 1px solid var(--sz-border-light);
  }

  .sz-customer-footer p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
  }

  .sz-customer-footer a {
    color: var(--sz-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .sz-customer-footer a:hover {
    text-decoration: underline;
  }
</style>

<script>
(function() {
  var loginForm = document.getElementById('customer-login');
  var recoverForm = document.getElementById('recover-password');
  var recoverLink = document.getElementById('recover-link');
  var loginLink = document.getElementById('login-link');

  if (recoverLink) {
    recoverLink.addEventListener('click', function(e) {
      e.preventDefault();
      loginForm.style.display = 'none';
      recoverForm.style.display = 'block';
      window.location.hash = 'recover';
    });
  }

  if (loginLink) {
    loginLink.addEventListener('click', function(e) {
      e.preventDefault();
      recoverForm.style.display = 'none';
      loginForm.style.display = 'block';
      window.location.hash = '';
    });
  }

  // Check hash on page load
  if (window.location.hash === '#recover') {
    loginForm.style.display = 'none';
    recoverForm.style.display = 'block';
  }
})();
</script>
