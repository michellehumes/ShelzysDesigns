{%- comment -%}
  Shelzy's Designs - Customer Addresses Template

  Address management page for customers to:
  - View saved addresses
  - Add new addresses
  - Edit existing addresses
  - Set default address
{%- endcomment -%}

<div class="sz-account-page">
  <div class="sz-account-container">

    {%- comment -%} Account Header {%- endcomment -%}
    <header class="sz-account-header">
      <div class="sz-account-header-content">
        <h1 class="sz-account-title">My Addresses</h1>
        <p class="sz-account-subtitle">Manage your shipping addresses</p>
      </div>
      <a href="{{ routes.account_url }}" class="sz-btn sz-btn-secondary sz-btn-sm">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"/>
          <polyline points="12 19 5 12 12 5"/>
        </svg>
        Back to Account
      </a>
    </header>

    <div class="sz-addresses-layout">

      {%- comment -%} Add New Address Button {%- endcomment -%}
      <button type="button" class="sz-add-address-btn" id="add-address-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"/>
          <line x1="5" y1="12" x2="19" y2="12"/>
        </svg>
        Add New Address
      </button>

      {%- comment -%} New Address Form {%- endcomment -%}
      <div id="add-address-form" class="sz-address-form-wrapper" style="display: none;">
        <h2 class="sz-form-title">Add New Address</h2>
        {% form 'customer_address', customer.new_address %}
          <div class="sz-form-row">
            <div class="sz-form-group">
              <label for="address-first-name" class="sz-form-label">First Name</label>
              <input type="text" name="address[first_name]" id="address-first-name" class="sz-form-input" autocomplete="given-name">
            </div>
            <div class="sz-form-group">
              <label for="address-last-name" class="sz-form-label">Last Name</label>
              <input type="text" name="address[last_name]" id="address-last-name" class="sz-form-input" autocomplete="family-name">
            </div>
          </div>

          <div class="sz-form-group">
            <label for="address-company" class="sz-form-label">Company (optional)</label>
            <input type="text" name="address[company]" id="address-company" class="sz-form-input" autocomplete="organization">
          </div>

          <div class="sz-form-group">
            <label for="address-address1" class="sz-form-label">Address</label>
            <input type="text" name="address[address1]" id="address-address1" class="sz-form-input" autocomplete="address-line1" required>
          </div>

          <div class="sz-form-group">
            <label for="address-address2" class="sz-form-label">Apartment, suite, etc. (optional)</label>
            <input type="text" name="address[address2]" id="address-address2" class="sz-form-input" autocomplete="address-line2">
          </div>

          <div class="sz-form-row">
            <div class="sz-form-group">
              <label for="address-city" class="sz-form-label">City</label>
              <input type="text" name="address[city]" id="address-city" class="sz-form-input" autocomplete="address-level2" required>
            </div>
            <div class="sz-form-group">
              <label for="address-country" class="sz-form-label">Country/Region</label>
              <select name="address[country]" id="address-country" class="sz-form-select" data-default="{{ customer.default_address.country | default: 'United States' }}">
                {{ all_country_option_tags }}
              </select>
            </div>
          </div>

          <div class="sz-form-row">
            <div class="sz-form-group">
              <label for="address-province" class="sz-form-label">State/Province</label>
              <select name="address[province]" id="address-province" class="sz-form-select"></select>
            </div>
            <div class="sz-form-group">
              <label for="address-zip" class="sz-form-label">ZIP/Postal Code</label>
              <input type="text" name="address[zip]" id="address-zip" class="sz-form-input" autocomplete="postal-code" required>
            </div>
          </div>

          <div class="sz-form-group">
            <label for="address-phone" class="sz-form-label">Phone (optional)</label>
            <input type="tel" name="address[phone]" id="address-phone" class="sz-form-input" autocomplete="tel">
          </div>

          <div class="sz-form-group sz-checkbox-group">
            <label class="sz-checkbox-label">
              <input type="checkbox" name="address[default]" value="1">
              <span>Set as default address</span>
            </label>
          </div>

          <div class="sz-form-actions">
            <button type="submit" class="sz-btn sz-btn-primary">Add Address</button>
            <button type="button" class="sz-btn sz-btn-secondary" id="cancel-add">Cancel</button>
          </div>
        {% endform %}
      </div>

      {%- comment -%} Addresses Grid {%- endcomment -%}
      {%- if customer.addresses.size > 0 -%}
        <div class="sz-addresses-grid">
          {%- for address in customer.addresses -%}
            <div class="sz-address-card">
              {%- if address == customer.default_address -%}
                <span class="sz-default-badge">Default</span>
              {%- endif -%}

              <div class="sz-address-content">
                <p class="sz-address-name">{{ address.first_name }} {{ address.last_name }}</p>
                {%- if address.company != blank -%}
                  <p>{{ address.company }}</p>
                {%- endif -%}
                <p>{{ address.address1 }}</p>
                {%- if address.address2 != blank -%}
                  <p>{{ address.address2 }}</p>
                {%- endif -%}
                <p>{{ address.city }}, {{ address.province_code }} {{ address.zip }}</p>
                <p>{{ address.country }}</p>
                {%- if address.phone != blank -%}
                  <p>{{ address.phone }}</p>
                {%- endif -%}
              </div>

              <div class="sz-address-actions">
                <button type="button" class="sz-address-edit" data-address-id="{{ address.id }}">Edit</button>
                <span class="sz-action-divider">|</span>
                <button type="button" class="sz-address-delete" data-form-id="delete-address-{{ address.id }}">Delete</button>
              </div>

              {%- comment -%} Delete Form {%- endcomment -%}
              {% form 'customer_address', address, id: 'delete-address-' | append: address.id %}
                <input type="hidden" name="_method" value="delete">
              {% endform %}

              {%- comment -%} Edit Form (hidden by default) {%- endcomment -%}
              <div class="sz-edit-form" id="edit-form-{{ address.id }}" style="display: none;">
                {% form 'customer_address', address %}
                  <div class="sz-form-row">
                    <div class="sz-form-group">
                      <label class="sz-form-label">First Name</label>
                      <input type="text" name="address[first_name]" class="sz-form-input" value="{{ address.first_name }}">
                    </div>
                    <div class="sz-form-group">
                      <label class="sz-form-label">Last Name</label>
                      <input type="text" name="address[last_name]" class="sz-form-input" value="{{ address.last_name }}">
                    </div>
                  </div>

                  <div class="sz-form-group">
                    <label class="sz-form-label">Company</label>
                    <input type="text" name="address[company]" class="sz-form-input" value="{{ address.company }}">
                  </div>

                  <div class="sz-form-group">
                    <label class="sz-form-label">Address</label>
                    <input type="text" name="address[address1]" class="sz-form-input" value="{{ address.address1 }}" required>
                  </div>

                  <div class="sz-form-group">
                    <label class="sz-form-label">Apartment, suite, etc.</label>
                    <input type="text" name="address[address2]" class="sz-form-input" value="{{ address.address2 }}">
                  </div>

                  <div class="sz-form-row">
                    <div class="sz-form-group">
                      <label class="sz-form-label">City</label>
                      <input type="text" name="address[city]" class="sz-form-input" value="{{ address.city }}" required>
                    </div>
                    <div class="sz-form-group">
                      <label class="sz-form-label">Country</label>
                      <select name="address[country]" class="sz-form-select edit-country" data-default="{{ address.country }}">
                        {{ all_country_option_tags }}
                      </select>
                    </div>
                  </div>

                  <div class="sz-form-row">
                    <div class="sz-form-group">
                      <label class="sz-form-label">State/Province</label>
                      <select name="address[province]" class="sz-form-select edit-province" data-default="{{ address.province }}"></select>
                    </div>
                    <div class="sz-form-group">
                      <label class="sz-form-label">ZIP/Postal Code</label>
                      <input type="text" name="address[zip]" class="sz-form-input" value="{{ address.zip }}" required>
                    </div>
                  </div>

                  <div class="sz-form-group">
                    <label class="sz-form-label">Phone</label>
                    <input type="tel" name="address[phone]" class="sz-form-input" value="{{ address.phone }}">
                  </div>

                  <div class="sz-form-group sz-checkbox-group">
                    <label class="sz-checkbox-label">
                      <input type="checkbox" name="address[default]" value="1" {% if address == customer.default_address %}checked{% endif %}>
                      <span>Set as default address</span>
                    </label>
                  </div>

                  <div class="sz-form-actions">
                    <button type="submit" class="sz-btn sz-btn-primary">Update Address</button>
                    <button type="button" class="sz-btn sz-btn-secondary cancel-edit">Cancel</button>
                  </div>
                {% endform %}
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="sz-addresses-empty">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="var(--sz-primary)" stroke-width="1.5">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <h3>No addresses saved</h3>
          <p>Add an address for faster checkout.</p>
        </div>
      {%- endif -%}

    </div>

  </div>
</div>

<style>
  .sz-account-page {
    padding: var(--sz-space-xl) var(--sz-space-md);
    background: var(--sz-warm-white);
    min-height: 70vh;
  }

  .sz-account-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .sz-account-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--sz-space-md);
    margin-bottom: var(--sz-space-xl);
    padding-bottom: var(--sz-space-lg);
    border-bottom: 1px solid var(--sz-border-light);
  }

  .sz-account-title {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-2xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-xs) 0;
  }

  .sz-account-subtitle {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    color: var(--sz-gray);
    margin: 0;
  }

  .sz-btn-sm {
    display: inline-flex;
    align-items: center;
    gap: var(--sz-space-sm);
    padding: var(--sz-space-sm) var(--sz-space-lg);
    font-size: var(--sz-text-sm);
  }

  .sz-add-address-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--sz-space-sm);
    width: 100%;
    padding: var(--sz-space-lg);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    font-weight: 500;
    color: var(--sz-primary);
    background: var(--sz-white);
    border: 2px dashed var(--sz-primary);
    border-radius: var(--sz-radius-md);
    cursor: pointer;
    margin-bottom: var(--sz-space-xl);
    transition: all var(--sz-transition-fast);
  }

  .sz-add-address-btn:hover {
    background: var(--sz-primary);
    color: var(--sz-white);
    border-style: solid;
  }

  .sz-address-form-wrapper {
    background: var(--sz-white);
    border-radius: var(--sz-radius-md);
    padding: var(--sz-space-xl);
    margin-bottom: var(--sz-space-xl);
    box-shadow: var(--sz-shadow-md);
  }

  .sz-form-title {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-xl) 0;
  }

  .sz-form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--sz-space-md);
  }

  @media (max-width: 600px) {
    .sz-form-row {
      grid-template-columns: 1fr;
    }
  }

  .sz-form-group {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-label {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-charcoal);
    margin-bottom: var(--sz-space-xs);
  }

  .sz-form-input,
  .sz-form-select {
    width: 100%;
    padding: var(--sz-space-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
    background: var(--sz-white);
  }

  .sz-form-input:focus,
  .sz-form-select:focus {
    outline: none;
    border-color: var(--sz-primary);
  }

  .sz-checkbox-group {
    margin-top: var(--sz-space-md);
  }

  .sz-checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--sz-space-sm);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-charcoal);
    cursor: pointer;
  }

  .sz-checkbox-label input {
    accent-color: var(--sz-primary);
    width: 18px;
    height: 18px;
  }

  .sz-form-actions {
    display: flex;
    gap: var(--sz-space-md);
    margin-top: var(--sz-space-lg);
  }

  .sz-addresses-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--sz-space-lg);
  }

  @media (max-width: 700px) {
    .sz-addresses-grid {
      grid-template-columns: 1fr;
    }
  }

  .sz-address-card {
    background: var(--sz-white);
    border-radius: var(--sz-radius-md);
    padding: var(--sz-space-lg);
    box-shadow: var(--sz-shadow-sm);
    position: relative;
  }

  .sz-default-badge {
    position: absolute;
    top: var(--sz-space-md);
    right: var(--sz-space-md);
    background: var(--sz-primary);
    color: var(--sz-white);
    font-family: var(--sz-font-body);
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    padding: 4px 8px;
    border-radius: var(--sz-radius-sm);
  }

  .sz-address-content {
    margin-bottom: var(--sz-space-md);
  }

  .sz-address-content p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-charcoal);
    margin: 0 0 var(--sz-space-xs) 0;
    line-height: 1.4;
  }

  .sz-address-name {
    font-weight: 600;
    color: var(--sz-primary-dark) !important;
    margin-bottom: var(--sz-space-sm) !important;
  }

  .sz-address-actions {
    display: flex;
    align-items: center;
    gap: var(--sz-space-sm);
    padding-top: var(--sz-space-md);
    border-top: 1px solid var(--sz-border-light);
  }

  .sz-address-edit,
  .sz-address-delete {
    background: none;
    border: none;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-primary);
    cursor: pointer;
    padding: 0;
  }

  .sz-address-delete {
    color: var(--sz-error);
  }

  .sz-address-edit:hover,
  .sz-address-delete:hover {
    text-decoration: underline;
  }

  .sz-action-divider {
    color: var(--sz-border-light);
  }

  .sz-edit-form {
    margin-top: var(--sz-space-lg);
    padding-top: var(--sz-space-lg);
    border-top: 1px solid var(--sz-border-light);
  }

  .sz-addresses-empty {
    text-align: center;
    padding: var(--sz-space-3xl);
    background: var(--sz-white);
    border-radius: var(--sz-radius-md);
    box-shadow: var(--sz-shadow-sm);
  }

  .sz-addresses-empty svg {
    margin-bottom: var(--sz-space-md);
  }

  .sz-addresses-empty h3 {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-lg);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
  }

  .sz-addresses-empty p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
  }
</style>

<script>
(function() {
  // Toggle add address form
  var addBtn = document.getElementById('add-address-btn');
  var addForm = document.getElementById('add-address-form');
  var cancelAdd = document.getElementById('cancel-add');

  if (addBtn && addForm) {
    addBtn.addEventListener('click', function() {
      addForm.style.display = 'block';
      addBtn.style.display = 'none';
    });
  }

  if (cancelAdd && addForm && addBtn) {
    cancelAdd.addEventListener('click', function() {
      addForm.style.display = 'none';
      addBtn.style.display = 'flex';
    });
  }

  // Edit address
  document.querySelectorAll('.sz-address-edit').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var addressId = this.getAttribute('data-address-id');
      var editForm = document.getElementById('edit-form-' + addressId);
      if (editForm) {
        editForm.style.display = editForm.style.display === 'none' ? 'block' : 'none';
      }
    });
  });

  // Cancel edit
  document.querySelectorAll('.cancel-edit').forEach(function(btn) {
    btn.addEventListener('click', function() {
      this.closest('.sz-edit-form').style.display = 'none';
    });
  });

  // Delete address
  document.querySelectorAll('.sz-address-delete').forEach(function(btn) {
    btn.addEventListener('click', function() {
      if (confirm('Are you sure you want to delete this address?')) {
        var formId = this.getAttribute('data-form-id');
        var form = document.getElementById(formId);
        if (form) {
          form.submit();
        }
      }
    });
  });
})();
</script>
