{%- comment -%}
  Shelzy's Designs - Customer Registration Template

  Account creation page for new customers.
{%- endcomment -%}

<div class="sz-customer-page">
  <div class="sz-customer-container">

    <div class="sz-customer-card">

      <header class="sz-customer-header">
        <h1 class="sz-customer-title">Create an Account</h1>
        <p class="sz-customer-subtitle">Join us to track orders, save favorites, and get exclusive offers.</p>
      </header>

      {%- comment -%} Registration Form {%- endcomment -%}
      <div class="sz-customer-form-wrapper">
        {% form 'create_customer' %}
          {%- if form.errors -%}
            <div class="sz-form-errors">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="sz-form-row">
            <div class="sz-form-group">
              <label for="customer-first-name" class="sz-form-label">First Name</label>
              <input
                type="text"
                name="customer[first_name]"
                id="customer-first-name"
                class="sz-form-input"
                autocomplete="given-name"
                required
              >
            </div>

            <div class="sz-form-group">
              <label for="customer-last-name" class="sz-form-label">Last Name</label>
              <input
                type="text"
                name="customer[last_name]"
                id="customer-last-name"
                class="sz-form-input"
                autocomplete="family-name"
                required
              >
            </div>
          </div>

          <div class="sz-form-group">
            <label for="customer-email" class="sz-form-label">Email Address</label>
            <input
              type="email"
              name="customer[email]"
              id="customer-email"
              class="sz-form-input"
              autocomplete="email"
              autocapitalize="off"
              required
            >
          </div>

          <div class="sz-form-group">
            <label for="customer-password" class="sz-form-label">Password</label>
            <input
              type="password"
              name="customer[password]"
              id="customer-password"
              class="sz-form-input"
              autocomplete="new-password"
              minlength="5"
              required
            >
            <span class="sz-form-hint">Minimum 5 characters</span>
          </div>

          <div class="sz-form-actions">
            <button type="submit" class="sz-btn sz-btn-primary sz-btn-full">Create Account</button>
          </div>
        {% endform %}
      </div>

      {%- comment -%} Login Link {%- endcomment -%}
      <div class="sz-customer-footer">
        <p>Already have an account? <a href="{{ routes.account_login_url }}">Sign in</a></p>
      </div>

    </div>

  </div>
</div>

<style>
  .sz-customer-page {
    padding: var(--sz-space-2xl) var(--sz-space-md);
    background: var(--sz-warm-white);
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sz-customer-container {
    width: 100%;
    max-width: 480px;
  }

  .sz-customer-card {
    background: var(--sz-white);
    border-radius: var(--sz-radius-lg);
    padding: var(--sz-space-2xl);
    box-shadow: var(--sz-shadow-lg);
  }

  .sz-customer-header {
    text-align: center;
    margin-bottom: var(--sz-space-xl);
  }

  .sz-customer-title {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-2xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-sm) 0;
  }

  .sz-customer-subtitle {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
    line-height: 1.5;
  }

  .sz-form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--sz-space-md);
  }

  @media (max-width: 500px) {
    .sz-form-row {
      grid-template-columns: 1fr;
    }
  }

  .sz-form-group {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-label {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-charcoal);
    margin-bottom: var(--sz-space-xs);
  }

  .sz-form-input {
    width: 100%;
    padding: var(--sz-space-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
    background: var(--sz-white);
    transition: border-color var(--sz-transition-fast);
  }

  .sz-form-input:focus {
    outline: none;
    border-color: var(--sz-primary);
  }

  .sz-form-hint {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs);
    color: var(--sz-gray);
    margin-top: var(--sz-space-xs);
  }

  .sz-form-actions {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-btn-full {
    width: 100%;
    padding: var(--sz-space-md);
  }

  .sz-form-errors {
    background: #FEF2F2;
    border: 1px solid var(--sz-error);
    border-radius: var(--sz-radius-sm);
    padding: var(--sz-space-md);
    margin-bottom: var(--sz-space-lg);
    color: var(--sz-error);
    font-size: var(--sz-text-sm);
  }

  .sz-customer-footer {
    text-align: center;
    padding-top: var(--sz-space-lg);
    border-top: 1px solid var(--sz-border-light);
  }

  .sz-customer-footer p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
  }

  .sz-customer-footer a {
    color: var(--sz-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .sz-customer-footer a:hover {
    text-decoration: underline;
  }
</style>
