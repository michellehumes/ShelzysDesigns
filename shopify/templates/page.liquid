{%- comment -%}
  Shelzy's Designs - Page Template

  Clean, branded template for static pages like:
  - About Us
  - Contact
  - FAQ
  - Privacy Policy
  - Terms of Service
{%- endcomment -%}

<div class="sz-page">
  <div class="sz-page-container">

    {%- comment -%} Breadcrumbs {%- endcomment -%}
    {% render 'shelzys-breadcrumbs' %}

    {%- comment -%} Page Header {%- endcomment -%}
    <header class="sz-page-header">
      <h1 class="sz-page-title">{{ page.title }}</h1>
    </header>

    {%- comment -%} Page Content {%- endcomment -%}
    <article class="sz-page-content">
      {{ page.content }}
    </article>

    {%- comment -%} Contact Section (appears on contact page) {%- endcomment -%}
    {%- if page.handle == 'contact' or page.handle == 'contact-us' -%}
      <div class="sz-contact-section">
        <div class="sz-contact-grid">

          <div class="sz-contact-info">
            <h2 class="sz-contact-heading">Get in Touch</h2>
            <p class="sz-contact-text">Have questions about personalization, bulk orders, or shipping? We're here to help!</p>

            <div class="sz-contact-methods">
              <div class="sz-contact-method">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <div>
                  <h3>Email Us</h3>
                  <a href="mailto:hello@shelzysdesigns.com">hello@shelzysdesigns.com</a>
                </div>
              </div>

              <div class="sz-contact-method">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                <div>
                  <h3>Response Time</h3>
                  <p>Within 24 hours</p>
                </div>
              </div>

              <div class="sz-contact-method">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
                  <line x1="8" y1="21" x2="16" y2="21"/>
                  <line x1="12" y1="17" x2="12" y2="21"/>
                </svg>
                <div>
                  <h3>Social Media</h3>
                  <div class="sz-social-links">
                    {%- if settings.social_instagram_link != blank -%}
                      <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="Instagram">Instagram</a>
                    {%- endif -%}
                    {%- if settings.social_facebook_link != blank -%}
                      <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener" aria-label="Facebook">Facebook</a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="sz-contact-form-wrapper">
            <h2 class="sz-contact-heading">Send Us a Message</h2>
            {% form 'contact' %}
              {%- if form.posted_successfully? -%}
                <div class="sz-form-success">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                  <p>Thank you for your message! We'll get back to you within 24 hours.</p>
                </div>
              {%- else -%}
                {%- if form.errors -%}
                  <div class="sz-form-errors">
                    {{ form.errors | default_errors }}
                  </div>
                {%- endif -%}

                <div class="sz-form-group">
                  <label for="contact-name" class="sz-form-label">Your Name <span class="required">*</span></label>
                  <input type="text" name="contact[name]" id="contact-name" class="sz-form-input" required>
                </div>

                <div class="sz-form-group">
                  <label for="contact-email" class="sz-form-label">Email Address <span class="required">*</span></label>
                  <input type="email" name="contact[email]" id="contact-email" class="sz-form-input" required>
                </div>

                <div class="sz-form-group">
                  <label for="contact-subject" class="sz-form-label">Subject</label>
                  <select name="contact[subject]" id="contact-subject" class="sz-form-select">
                    <option value="">Select a topic...</option>
                    <option value="Order Question">Order Question</option>
                    <option value="Personalization Help">Personalization Help</option>
                    <option value="Bulk Order Inquiry">Bulk Order Inquiry</option>
                    <option value="Shipping Question">Shipping Question</option>
                    <option value="Returns/Exchange">Returns/Exchange</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div class="sz-form-group">
                  <label for="contact-message" class="sz-form-label">Message <span class="required">*</span></label>
                  <textarea name="contact[body]" id="contact-message" class="sz-form-textarea" rows="5" required></textarea>
                </div>

                <button type="submit" class="sz-btn sz-btn-primary sz-btn-submit">Send Message</button>
              {%- endif -%}
            {% endform %}
          </div>

        </div>
      </div>
    {%- endif -%}

  </div>
</div>

<style>
  /* ═══════════════════════════════════════════════════════════════════
     PAGE TEMPLATE STYLES
     ═══════════════════════════════════════════════════════════════════ */
  .sz-page {
    padding: var(--sz-space-xl) var(--sz-space-md);
    background: var(--sz-warm-white);
    min-height: 60vh;
  }

  .sz-page-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .sz-page-header {
    text-align: center;
    margin-bottom: var(--sz-space-2xl);
    padding-bottom: var(--sz-space-xl);
    border-bottom: 1px solid var(--sz-border-light);
  }

  .sz-page-title {
    font-family: var(--sz-font-heading);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0;
  }

  /* Page Content - CMS Styles */
  .sz-page-content {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    line-height: 1.8;
    color: var(--sz-charcoal);
  }

  .sz-page-content h2 {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-2xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: var(--sz-space-2xl) 0 var(--sz-space-lg) 0;
  }

  .sz-page-content h3 {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: var(--sz-space-xl) 0 var(--sz-space-md) 0;
  }

  .sz-page-content h4 {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-lg);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: var(--sz-space-lg) 0 var(--sz-space-sm) 0;
  }

  .sz-page-content p {
    margin: 0 0 var(--sz-space-lg) 0;
  }

  .sz-page-content ul,
  .sz-page-content ol {
    margin: 0 0 var(--sz-space-lg) 0;
    padding-left: var(--sz-space-xl);
  }

  .sz-page-content li {
    margin-bottom: var(--sz-space-sm);
  }

  .sz-page-content a {
    color: var(--sz-primary);
    text-decoration: underline;
  }

  .sz-page-content a:hover {
    color: var(--sz-primary-dark);
  }

  .sz-page-content blockquote {
    margin: var(--sz-space-xl) 0;
    padding: var(--sz-space-lg) var(--sz-space-xl);
    background: var(--sz-beige);
    border-left: 4px solid var(--sz-primary);
    font-style: italic;
    border-radius: var(--sz-radius-sm);
  }

  .sz-page-content img {
    max-width: 100%;
    height: auto;
    border-radius: var(--sz-radius-md);
    margin: var(--sz-space-lg) 0;
  }

  .sz-page-content table {
    width: 100%;
    border-collapse: collapse;
    margin: var(--sz-space-lg) 0;
  }

  .sz-page-content th,
  .sz-page-content td {
    padding: var(--sz-space-md);
    text-align: left;
    border-bottom: 1px solid var(--sz-border-light);
  }

  .sz-page-content th {
    background: var(--sz-beige);
    font-weight: 600;
  }

  /* Contact Section */
  .sz-contact-section {
    margin-top: var(--sz-space-3xl);
    padding-top: var(--sz-space-2xl);
    border-top: 1px solid var(--sz-border-light);
  }

  .sz-contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--sz-space-2xl);
  }

  @media (max-width: 768px) {
    .sz-contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .sz-contact-heading {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-xl);
    font-weight: 600;
    color: var(--sz-primary-dark);
    margin: 0 0 var(--sz-space-md) 0;
  }

  .sz-contact-text {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    color: var(--sz-charcoal);
    margin: 0 0 var(--sz-space-xl) 0;
    line-height: 1.6;
  }

  .sz-contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--sz-space-lg);
  }

  .sz-contact-method {
    display: flex;
    gap: var(--sz-space-md);
    align-items: flex-start;
  }

  .sz-contact-method svg {
    color: var(--sz-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .sz-contact-method h3 {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    font-weight: 600;
    color: var(--sz-charcoal);
    margin: 0 0 var(--sz-space-xs) 0;
  }

  .sz-contact-method p,
  .sz-contact-method a {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    color: var(--sz-gray);
    margin: 0;
    text-decoration: none;
  }

  .sz-contact-method a:hover {
    color: var(--sz-primary);
  }

  .sz-social-links {
    display: flex;
    gap: var(--sz-space-md);
  }

  .sz-social-links a {
    color: var(--sz-primary);
  }

  /* Contact Form */
  .sz-contact-form-wrapper {
    background: var(--sz-white);
    padding: var(--sz-space-xl);
    border-radius: var(--sz-radius-md);
    border: 1px solid var(--sz-border-light);
  }

  .sz-form-group {
    margin-bottom: var(--sz-space-lg);
  }

  .sz-form-label {
    display: block;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: 500;
    color: var(--sz-charcoal);
    margin-bottom: var(--sz-space-xs);
  }

  .sz-form-label .required {
    color: var(--sz-error);
  }

  .sz-form-input,
  .sz-form-select,
  .sz-form-textarea {
    width: 100%;
    padding: var(--sz-space-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    border: 1px solid var(--sz-border-light);
    border-radius: var(--sz-radius-sm);
    background: var(--sz-white);
    transition: border-color var(--sz-transition-fast);
  }

  .sz-form-input:focus,
  .sz-form-select:focus,
  .sz-form-textarea:focus {
    outline: none;
    border-color: var(--sz-primary);
  }

  .sz-form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .sz-btn-submit {
    width: 100%;
    padding: var(--sz-space-md);
  }

  .sz-form-success {
    text-align: center;
    padding: var(--sz-space-xl);
  }

  .sz-form-success svg {
    color: var(--sz-success);
    margin-bottom: var(--sz-space-md);
  }

  .sz-form-success p {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    color: var(--sz-charcoal);
    margin: 0;
  }

  .sz-form-errors {
    background: #FEF2F2;
    border: 1px solid var(--sz-error);
    border-radius: var(--sz-radius-sm);
    padding: var(--sz-space-md);
    margin-bottom: var(--sz-space-lg);
    color: var(--sz-error);
    font-size: var(--sz-text-sm);
  }
</style>
