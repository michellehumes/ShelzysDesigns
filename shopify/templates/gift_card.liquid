{%- comment -%}
  Shelzy's Designs - Gift Card Template

  Gift card display page showing:
  - Gift card image
  - Gift card value
  - Gift card code
  - QR code for easy scanning
  - Print and share options
{%- endcomment -%}

<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">

  <title>{{ shop.name }} Gift Card</title>

  {%- comment -%} Fonts {%- endcomment -%}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">

  {{ 'gift-card.css' | shopify_asset_url | stylesheet_tag }}

  <style>
    :root {
      --sz-primary: #8BAA88;
      --sz-primary-dark: #4E5F4A;
      --sz-white: #FFFFFF;
      --sz-warm-white: #FAF9F6;
      --sz-charcoal: #2B2B2B;
      --sz-gray: #6B7280;
      --sz-gold: #D1C7A1;
      --sz-font-heading: 'Playfair Display', Georgia, serif;
      --sz-font-body: 'Inter', -apple-system, sans-serif;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: var(--sz-font-body);
      background: linear-gradient(135deg, var(--sz-primary) 0%, var(--sz-primary-dark) 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
    }

    .sz-gift-card {
      background: var(--sz-white);
      border-radius: 24px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      max-width: 500px;
      width: 100%;
      overflow: hidden;
    }

    .sz-gift-card-header {
      background: var(--sz-primary-dark);
      padding: 40px;
      text-align: center;
      position: relative;
    }

    .sz-gift-card-header::after {
      content: '';
      position: absolute;
      bottom: -20px;
      left: 50%;
      transform: translateX(-50%);
      width: 40px;
      height: 40px;
      background: var(--sz-primary-dark);
      clip-path: polygon(50% 100%, 0 0, 100% 0);
    }

    .sz-gift-card-logo {
      font-family: var(--sz-font-heading);
      font-size: 28px;
      font-weight: 600;
      color: var(--sz-white);
      margin: 0 0 8px 0;
    }

    .sz-gift-card-tagline {
      font-family: var(--sz-font-body);
      font-size: 14px;
      color: rgba(255, 255, 255, 0.8);
      margin: 0;
    }

    .sz-gift-card-body {
      padding: 60px 40px 40px;
      text-align: center;
    }

    .sz-gift-card-label {
      font-family: var(--sz-font-body);
      font-size: 12px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--sz-gray);
      margin: 0 0 8px 0;
    }

    .sz-gift-card-value {
      font-family: var(--sz-font-heading);
      font-size: 56px;
      font-weight: 700;
      color: var(--sz-primary-dark);
      margin: 0 0 32px 0;
      line-height: 1;
    }

    .sz-gift-card-code-wrapper {
      background: var(--sz-warm-white);
      border: 2px dashed var(--sz-primary);
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 32px;
    }

    .sz-gift-card-code {
      font-family: 'Courier New', monospace;
      font-size: 24px;
      font-weight: 700;
      color: var(--sz-charcoal);
      letter-spacing: 0.15em;
      word-break: break-all;
      margin: 0;
    }

    .sz-gift-card-copy {
      margin-top: 16px;
    }

    .sz-copy-btn {
      background: var(--sz-primary);
      color: var(--sz-white);
      border: none;
      padding: 12px 24px;
      font-family: var(--sz-font-body);
      font-size: 14px;
      font-weight: 500;
      border-radius: 999px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    .sz-copy-btn:hover {
      background: var(--sz-primary-dark);
      transform: translateY(-2px);
    }

    .sz-copy-btn.copied {
      background: #22C55E;
    }

    .sz-gift-card-qr {
      margin-bottom: 32px;
    }

    .sz-gift-card-qr img {
      width: 120px;
      height: 120px;
    }

    .sz-gift-card-balance {
      font-family: var(--sz-font-body);
      font-size: 14px;
      color: var(--sz-gray);
      margin: 0 0 24px 0;
    }

    .sz-gift-card-balance strong {
      color: var(--sz-charcoal);
    }

    .sz-gift-card-actions {
      display: flex;
      gap: 12px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .sz-action-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      font-family: var(--sz-font-body);
      font-size: 14px;
      font-weight: 500;
      color: var(--sz-charcoal);
      text-decoration: none;
      background: var(--sz-warm-white);
      border: 1px solid #E5E7EB;
      border-radius: 999px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .sz-action-btn:hover {
      background: var(--sz-primary);
      color: var(--sz-white);
      border-color: var(--sz-primary);
    }

    .sz-gift-card-footer {
      padding: 24px 40px;
      background: var(--sz-warm-white);
      text-align: center;
    }

    .sz-gift-card-shop-link {
      font-family: var(--sz-font-body);
      font-size: 14px;
      color: var(--sz-primary-dark);
      text-decoration: none;
      font-weight: 500;
    }

    .sz-gift-card-shop-link:hover {
      text-decoration: underline;
    }

    .sz-gift-card-expired {
      background: #FEF2F2;
      color: #DC2626;
      padding: 12px;
      border-radius: 8px;
      font-size: 14px;
      margin-bottom: 24px;
    }

    @media print {
      body {
        background: white;
        padding: 0;
      }

      .sz-gift-card {
        box-shadow: none;
        max-width: 100%;
      }

      .sz-gift-card-actions,
      .sz-copy-btn {
        display: none !important;
      }
    }

    @media (max-width: 500px) {
      .sz-gift-card-body {
        padding: 50px 24px 24px;
      }

      .sz-gift-card-value {
        font-size: 42px;
      }

      .sz-gift-card-code {
        font-size: 18px;
      }
    }
  </style>

  {{ content_for_header }}
</head>

<body>
  <main class="sz-gift-card">

    {%- comment -%} Header {%- endcomment -%}
    <header class="sz-gift-card-header">
      <h1 class="sz-gift-card-logo">{{ shop.name }}</h1>
      <p class="sz-gift-card-tagline">Gift Card</p>
    </header>

    {%- comment -%} Card Body {%- endcomment -%}
    <div class="sz-gift-card-body">

      {%- comment -%} Expiration Warning {%- endcomment -%}
      {%- if gift_card.expired -%}
        <div class="sz-gift-card-expired">
          This gift card has expired.
        </div>
      {%- endif -%}

      <p class="sz-gift-card-label">Gift Card Value</p>
      <p class="sz-gift-card-value">{{ gift_card.initial_value | money }}</p>

      {%- comment -%} Code {%- endcomment -%}
      <div class="sz-gift-card-code-wrapper">
        <p class="sz-gift-card-label">Your Gift Card Code</p>
        <p class="sz-gift-card-code" id="gift-card-code">{{ gift_card.code | format_code }}</p>
        <div class="sz-gift-card-copy">
          <button type="button" class="sz-copy-btn" id="copy-btn" onclick="copyCode()">
            Copy Code
          </button>
        </div>
      </div>

      {%- comment -%} QR Code {%- endcomment -%}
      <div class="sz-gift-card-qr">
        {{ gift_card.qr_code | img_tag: 'Gift card QR code' }}
      </div>

      {%- comment -%} Balance {%- endcomment -%}
      {%- if gift_card.balance != gift_card.initial_value -%}
        <p class="sz-gift-card-balance">
          Current Balance: <strong>{{ gift_card.balance | money }}</strong>
        </p>
      {%- endif -%}

      {%- unless gift_card.expired -%}
        {%- if gift_card.expires_on -%}
          <p class="sz-gift-card-balance">
            Expires: {{ gift_card.expires_on | date: '%B %d, %Y' }}
          </p>
        {%- endif -%}
      {%- endunless -%}

      {%- comment -%} Actions {%- endcomment -%}
      <div class="sz-gift-card-actions">
        <button type="button" class="sz-action-btn" onclick="window.print()">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 6 2 18 2 18 9"/>
            <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"/>
            <rect x="6" y="14" width="12" height="8"/>
          </svg>
          Print
        </button>
        {%- if gift_card.pass_url -%}
          <a href="{{ gift_card.pass_url }}" class="sz-action-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="7" width="20" height="14" rx="2" ry="2"/>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
            </svg>
            Add to Apple Wallet
          </a>
        {%- endif -%}
      </div>

    </div>

    {%- comment -%} Footer {%- endcomment -%}
    <footer class="sz-gift-card-footer">
      <a href="{{ shop.url }}" class="sz-gift-card-shop-link">
        Shop at {{ shop.name }} â†’
      </a>
    </footer>

  </main>

  <script>
    function copyCode() {
      var code = document.getElementById('gift-card-code').textContent;
      var btn = document.getElementById('copy-btn');

      navigator.clipboard.writeText(code.replace(/\s/g, '')).then(function() {
        btn.textContent = 'Copied!';
        btn.classList.add('copied');

        setTimeout(function() {
          btn.textContent = 'Copy Code';
          btn.classList.remove('copied');
        }, 2000);
      });
    }
  </script>
</body>
</html>
