COMPONENT 3: FREE SHIPPING PROGRESS BAR
Use: Cart page, cart drawer, or announcement bar
==================================================
{% endcomment %}

<div class="shipping-progress" data-threshold="{{ settings.free_shipping_threshold | default: 50 }}">
  {% assign threshold = settings.free_shipping_threshold | default: 50 %}
  {% assign cart_total = cart.total_price | divided_by: 100.0 %}
  {% assign remaining = threshold | minus: cart_total %}
  {% assign progress = cart_total | divided_by: threshold | times: 100 %}
  {% if progress > 100 %}{% assign progress = 100 %}{% endif %}

  {% if cart_total >= threshold %}
    <div class="shipping-message success">
      <span class="shipping-icon">&#10003;</span>
      <span>You've unlocked <strong>FREE SHIPPING!</strong></span>
    </div>
  {% else %}
    <div class="shipping-message">
      <span>Add <strong>${{ remaining | round: 2 }}</strong> more for <strong>FREE SHIPPING</strong></span>
    </div>
  {% endif %}

  <div class="progress-bar">
    <div class="progress-fill" style="width: {{ progress }}%"></div>
    <div class="progress-marker" style="left: {{ progress }}%">
      {% if cart_total >= threshold %}
        &#127881;
      {% else %}
        &#128666;
      {% endif %}
    </div>
  </div>

  <div class="progress-labels">
    <span>$0</span>
    <span class="threshold-label">${{ threshold }} = Free Shipping</span>
  </div>
</div>

