<script>
// Exit Intent Detection
(function() {
  var shown = sessionStorage.getItem('exitPopupShown');
  if (shown) return;

  var popup = document.getElementById('exit-popup');
  if (!popup) return;

  function showPopup() {
    popup.style.display = 'flex';
    setTimeout(function() {
      popup.classList.add('active');
    }, 10);
    sessionStorage.setItem('exitPopupShown', 'true');
  }

  function hidePopup() {
    popup.classList.remove('active');
    setTimeout(function() {
      popup.style.display = 'none';
    }, 300);
  }

  // Desktop: Mouse leaves viewport
  document.addEventListener('mouseout', function(e) {
    if (!e.toElement && !e.relatedTarget && e.clientY < 10) {
      showPopup();
    }
  });

  // Mobile: After 30 seconds on page
  setTimeout(function() {
    if (window.innerWidth <= 768 && !sessionStorage.getItem('exitPopupShown')) {
      showPopup();
    }
  }, 30000);

  // Close handlers
  popup.querySelector('.exit-popup-close').addEventListener('click', hidePopup);
  popup.addEventListener('click', function(e) {
    if (e.target === popup) hidePopup();
  });
})();
</script>


