<script>
document.addEventListener('DOMContentLoaded', function() {
  var dateInput = document.getElementById('weddingDate');
  var calculateBtn = document.getElementById('calculateBtn');
  var resultDiv = document.getElementById('timelineResult');
  var orderDateSpan = document.getElementById('orderDate');
  var messageSpan = document.getElementById('timelineMessage');

  // Set min date to today
  var today = new Date();
  dateInput.min = today.toISOString().split('T')[0];

  calculateBtn.addEventListener('click', function() {
    var weddingDate = new Date(dateInput.value);
    if (!dateInput.value || isNaN(weddingDate)) {
      alert('Please select your wedding date');
      return;
    }

    var today = new Date();
    var diffTime = weddingDate - today;
    var diffWeeks = Math.ceil(diffTime / (1000 * 60 * 60 * 24 * 7));

    // Calculate recommended order date (8 weeks before wedding)
    var orderDate = new Date(weddingDate);
    orderDate.setDate(orderDate.getDate() - 56); // 8 weeks

    var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    orderDateSpan.textContent = orderDate.toLocaleDateString('en-US', options);

    var message = '';
    if (diffWeeks > 12) {
      message = "You've got plenty of time. Order whenever you're ready!";
    } else if (diffWeeks > 8) {
      message = "Perfect timing! Order now for stress-free delivery.";
    } else if (diffWeeks > 4) {
      message = "Still time! Consider ordering this week.";
    } else if (diffWeeks > 2) {
      message = "Rush processing available (+$5/bottle). Contact us!";
    } else {
      message = "Very tight timeline. Please contact us immediately.";
    }
    messageSpan.textContent = message;

    resultDiv.style.display = 'flex';
  });
});
</script>

