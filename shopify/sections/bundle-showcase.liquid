{%- comment -%}
  Shelzy's Designs - Bundle Showcase Section
  Displays bridal party bundle products with savings calculations
{%- endcomment -%}

<section class="sz-bundles" style="--bg: {{ section.settings.background_color }};">
  <div class="sz-bundles-container">

    <header class="sz-bundles-header">
      {%- if section.settings.subheading != blank -%}
        <span class="sz-bundles-subheading">{{ section.settings.subheading }}</span>
      {%- endif -%}
      <h2 class="sz-bundles-heading">{{ section.settings.heading }}</h2>
      {%- if section.settings.description != blank -%}
        <p class="sz-bundles-desc">{{ section.settings.description }}</p>
      {%- endif -%}
    </header>

    <div class="sz-bundles-grid">
      {%- for block in section.blocks -%}
        <div class="sz-bundle-card {% if block.settings.featured %}sz-bundle-featured{% endif %}" {{ block.shopify_attributes }}>

          {%- if block.settings.featured -%}
            <div class="sz-bundle-ribbon">Most Popular</div>
          {%- endif -%}

          <div class="sz-bundle-media">
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title }}"
                loading="lazy"
                class="sz-bundle-img"
              >
            {%- else -%}
              <div class="sz-bundle-placeholder">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M20 12v10H4V12"/>
                  <path d="M2 7h20v5H2z"/>
                  <path d="M12 22V7"/>
                  <path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/>
                  <path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/>
                </svg>
              </div>
            {%- endif -%}

            {%- if block.settings.savings != blank -%}
              <span class="sz-bundle-savings-badge">Save {{ block.settings.savings }}</span>
            {%- endif -%}
          </div>

          <div class="sz-bundle-content">
            <h3 class="sz-bundle-title">{{ block.settings.title }}</h3>

            <div class="sz-bundle-includes">
              <span class="sz-bundle-includes-label">Includes:</span>
              <p>{{ block.settings.includes }}</p>
            </div>

            <div class="sz-bundle-pricing">
              {%- if block.settings.original_price != blank -%}
                <span class="sz-bundle-original">${{ block.settings.original_price }}</span>
              {%- endif -%}
              <span class="sz-bundle-price">${{ block.settings.price }}</span>
            </div>

            <a href="{{ block.settings.link | default: '/collections/all' }}" class="sz-bundle-btn">
              {{ block.settings.button_text | default: 'Shop Bundle' }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>

            {%- if block.settings.note != blank -%}
              <p class="sz-bundle-note">{{ block.settings.note }}</p>
            {%- endif -%}
          </div>

        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_custom_cta -%}
      <div class="sz-bundles-custom">
        <div class="sz-bundles-custom-content">
          <h3>Need a Custom Bundle?</h3>
          <p>Have a different party size? We can create a custom bundle just for you.</p>
        </div>
        <a href="{{ section.settings.custom_link | default: '/pages/contact' }}" class="sz-bundles-custom-btn">
          Create Custom Bundle
        </a>
      </div>
    {%- endif -%}

  </div>
</section>

<style>
  .sz-bundles {
    padding: 80px 0;
    background: var(--bg, #FFFFFF);
  }

  .sz-bundles-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .sz-bundles-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .sz-bundles-subheading {
    display: block;
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--sz-primary, #E8919A);
    margin-bottom: 12px;
  }

  .sz-bundles-heading {
    font-family: var(--sz-font-heading, 'Playfair Display', serif);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 500;
    color: var(--sz-charcoal, #2D2926);
    margin: 0 0 16px;
  }

  .sz-bundles-desc {
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 16px;
    color: var(--sz-gray, #8B8584);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .sz-bundles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 48px;
  }

  @media (max-width: 900px) {
    .sz-bundles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .sz-bundles-grid {
      grid-template-columns: 1fr;
    }
  }

  .sz-bundle-card {
    position: relative;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .sz-bundle-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
  }

  .sz-bundle-featured {
    border: 2px solid var(--sz-primary, #E8919A);
  }

  .sz-bundle-ribbon {
    position: absolute;
    top: 20px;
    left: -35px;
    width: 150px;
    padding: 8px 0;
    background: var(--sz-primary, #E8919A);
    color: white;
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 12px;
    font-weight: 600;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transform: rotate(-45deg);
    z-index: 10;
  }

  .sz-bundle-media {
    position: relative;
    aspect-ratio: 4/3;
    background: var(--sz-beige, #FDF2EF);
    overflow: hidden;
  }

  .sz-bundle-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .sz-bundle-card:hover .sz-bundle-img {
    transform: scale(1.05);
  }

  .sz-bundle-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-primary-light, #F5C6CB);
  }

  .sz-bundle-savings-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 13px;
    font-weight: 700;
    color: white;
    background: var(--sz-sage, #9CAF88);
    padding: 6px 14px;
    border-radius: 50px;
  }

  .sz-bundle-content {
    padding: 24px;
  }

  .sz-bundle-title {
    font-family: var(--sz-font-heading, 'Playfair Display', serif);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--sz-charcoal, #2D2926);
    margin: 0 0 12px;
  }

  .sz-bundle-includes {
    margin-bottom: 16px;
  }

  .sz-bundle-includes-label {
    display: block;
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--sz-gray, #8B8584);
    margin-bottom: 4px;
  }

  .sz-bundle-includes p {
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 14px;
    color: var(--sz-charcoal, #2D2926);
    margin: 0;
    line-height: 1.5;
  }

  .sz-bundle-pricing {
    display: flex;
    align-items: baseline;
    gap: 12px;
    margin-bottom: 20px;
  }

  .sz-bundle-original {
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 16px;
    color: var(--sz-gray, #8B8584);
    text-decoration: line-through;
  }

  .sz-bundle-price {
    font-family: var(--sz-font-heading, 'Playfair Display', serif);
    font-size: 2rem;
    font-weight: 700;
    color: var(--sz-primary-dark, #C75B6E);
  }

  .sz-bundle-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 14px 24px;
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 14px;
    font-weight: 600;
    color: white;
    background: var(--sz-primary, #E8919A);
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .sz-bundle-btn:hover {
    background: var(--sz-primary-dark, #C75B6E);
  }

  .sz-bundle-note {
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 12px;
    color: var(--sz-gray, #8B8584);
    text-align: center;
    margin: 12px 0 0;
    font-style: italic;
  }

  .sz-bundles-custom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 24px;
    padding: 32px;
    background: linear-gradient(135deg, var(--sz-beige, #FDF2EF) 0%, var(--sz-warm-white, #FFF8F6) 100%);
    border-radius: 16px;
    border: 2px dashed var(--sz-primary-light, #F5C6CB);
  }

  .sz-bundles-custom-content h3 {
    font-family: var(--sz-font-heading, 'Playfair Display', serif);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--sz-charcoal, #2D2926);
    margin: 0 0 8px;
  }

  .sz-bundles-custom-content p {
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 15px;
    color: var(--sz-gray, #8B8584);
    margin: 0;
  }

  .sz-bundles-custom-btn {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    font-family: var(--sz-font-body, 'Playfair Display', serif);
    font-size: 14px;
    font-weight: 600;
    color: var(--sz-primary-dark, #C75B6E);
    background: white;
    border: 2px solid var(--sz-primary, #E8919A);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .sz-bundles-custom-btn:hover {
    background: var(--sz-primary, #E8919A);
    color: white;
  }
</style>

