{%- comment -%}
  Shelzy's Designs - Collections List Section
  Shopify 2.0 section for displaying all collections
{%- endcomment -%}

<div class="sz-collections-page">
  <div class="sz-collections-container">

    <header class="sz-collections-header">
      <h1 class="sz-collections-title">{{ section.settings.title }}</h1>
      <p class="sz-collections-subtitle">{{ section.settings.subtitle }}</p>
    </header>

    <div class="sz-collections-grid">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'all' or collection.handle == 'frontpage' -%}
          <article class="sz-collection-card">
            <a href="{{ collection.url }}" class="sz-collection-link">

              <div class="sz-collection-image">
                {%- if collection.image -%}
                  <img
                    src="{{ collection.image | image_url: width: 600 }}"
                    srcset="{{ collection.image | image_url: width: 400 }} 400w,
                            {{ collection.image | image_url: width: 600 }} 600w"
                    sizes="(max-width: 768px) 100vw, 33vw"
                    alt="{{ collection.title }}"
                    loading="lazy"
                  >
                {%- elsif collection.products.first and collection.products.first.featured_image -%}
                  <img
                    src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                    alt="{{ collection.title }}"
                    loading="lazy"
                  >
                {%- else -%}
                  <div class="sz-collection-placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21 15 16 10 5 21"/>
                    </svg>
                  </div>
                {%- endif -%}

                <div class="sz-collection-overlay">
                  <span class="sz-collection-count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
                </div>
              </div>

              <div class="sz-collection-info">
                <h2 class="sz-collection-name">{{ collection.title }}</h2>
                {%- if collection.description != blank -%}
                  <p class="sz-collection-description">{{ collection.description | strip_html | truncate: 100 }}</p>
                {%- endif -%}
                <span class="sz-collection-cta">
                  Shop Now
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"/>
                    <polyline points="12 5 19 12 12 19"/>
                  </svg>
                </span>
              </div>

            </a>
          </article>
        {%- endunless -%}
      {%- endfor -%}
    </div>

    <div class="sz-collections-cta">
      <p>Can't find what you're looking for?</p>
      <a href="/collections/all" class="sz-btn sz-btn-primary">View All Products</a>
    </div>

  </div>
</div>

{% style %}
  .sz-collections-page {
    padding: var(--sz-space-xl, 32px) var(--sz-space-md, 16px);
    background: var(--sz-warm-white, #FAF9F6);
    min-height: 60vh;
  }

  .sz-collections-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .sz-collections-header {
    text-align: center;
    margin-bottom: var(--sz-space-2xl, 48px);
    padding-bottom: var(--sz-space-xl, 32px);
  }

  .sz-collections-title {
    font-family: var(--sz-font-heading, 'Playfair Display', Georgia, serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--sz-primary-dark, #4E5F4A);
    margin: 0 0 16px 0;
  }

  .sz-collections-subtitle {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 18px;
    color: var(--sz-gray, #6B7280);
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .sz-collections-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--sz-space-xl, 32px);
    margin-bottom: var(--sz-space-2xl, 48px);
  }

  @media (max-width: 900px) {
    .sz-collections-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .sz-collections-grid {
      grid-template-columns: 1fr;
    }
  }

  .sz-collection-card {
    background: var(--sz-white, #FFFFFF);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
    transition: box-shadow 0.3s, transform 0.3s;
  }

  .sz-collection-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    transform: translateY(-4px);
  }

  .sz-collection-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .sz-collection-image {
    position: relative;
    aspect-ratio: 4/3;
    background: var(--sz-beige, #F5F0EB);
    overflow: hidden;
  }

  .sz-collection-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .sz-collection-card:hover .sz-collection-image img {
    transform: scale(1.05);
  }

  .sz-collection-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-gray, #6B7280);
  }

  .sz-collection-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16px;
    background: linear-gradient(transparent, rgba(0,0,0,0.5));
  }

  .sz-collection-count {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    color: var(--sz-white, #FFFFFF);
    font-weight: 500;
  }

  .sz-collection-info {
    padding: 24px;
  }

  .sz-collection-name {
    font-family: var(--sz-font-heading, 'Playfair Display', Georgia, serif);
    font-size: 20px;
    font-weight: 600;
    color: var(--sz-primary-dark, #4E5F4A);
    margin: 0 0 8px 0;
    transition: color 0.2s;
  }

  .sz-collection-card:hover .sz-collection-name {
    color: var(--sz-primary, #8BAA88);
  }

  .sz-collection-description {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    color: var(--sz-gray, #6B7280);
    line-height: 1.5;
    margin: 0 0 16px 0;
  }

  .sz-collection-cta {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    font-weight: 500;
    color: var(--sz-primary, #8BAA88);
    transition: gap 0.2s;
  }

  .sz-collection-card:hover .sz-collection-cta {
    gap: 8px;
  }

  .sz-collections-cta {
    text-align: center;
    padding: 48px;
    background: var(--sz-white, #FFFFFF);
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  }

  .sz-collections-cta p {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 16px;
    color: var(--sz-gray, #6B7280);
    margin: 0 0 24px 0;
  }
{% endstyle %}

{% schema %}
{
  "name": "Collections List",
  "tag": "section",
  "class": "sz-collections-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page title",
      "default": "Our Collections"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Browse our curated collections of personalized water bottles for every occasion."
    }
  ]
}
{% endschema %}
