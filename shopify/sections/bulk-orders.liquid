<script>
document.addEventListener('DOMContentLoaded', function() {
  var qtyInput = document.getElementById('bulkQty');
  var priceDisplay = document.getElementById('bulkPrice');
  var savingsDisplay = document.getElementById('bulkSavings');
  var totalDisplay = document.getElementById('bulkTotal');

  var basePrice = 26; // Base price per bottle

  function calculatePrice() {
    var qty = parseInt(qtyInput.value) || 1;
    var discount = 0;
    var discountText = '';

    if (qty >= 50) {
      discount = 0.20;
      discountText = 'You save 20%!';
    } else if (qty >= 25) {
      discount = 0.15;
      discountText = 'You save 15%!';
    } else if (qty >= 10) {
      discount = 0.10;
      discountText = 'You save 10%!';
    } else {
      discountText = 'Order 10+ for bulk pricing';
    }

    var pricePerBottle = basePrice * (1 - discount);
    var total = pricePerBottle * qty;

    priceDisplay.textContent = '$' + pricePerBottle.toFixed(2);
    savingsDisplay.textContent = discountText;
