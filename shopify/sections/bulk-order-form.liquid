{% comment %}
  Bulk Order Quote Form
  Installation: Add to Bulk Orders page via theme editor or page template
{% endcomment %}

<style>
  .bulk-form-section {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .bulk-form-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .bulk-form-header h2 {
    font-size: 32px;
    color: #321004;
    margin: 0 0 12px 0;
  }

  .bulk-form-header p {
    font-size: 16px;
    color: #666;
  }

  .bulk-form-container {
    background: #fff;
    border-radius: 16px;
    padding: 40px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .bulk-form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  @media (max-width: 600px) {
    .bulk-form-row {
      grid-template-columns: 1fr;
    }
  }

  .bulk-form-group {
    margin-bottom: 20px;
  }

  .bulk-form-group.full-width {
    grid-column: 1 / -1;
  }

  .bulk-form-label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: #321004;
    margin-bottom: 8px;
  }

  .bulk-form-label .required {
    color: #dc2626;
  }

  .bulk-form-input,
  .bulk-form-select,
  .bulk-form-textarea {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e5e5e5;
    border-radius: 8px;
    font-size: 15px;
    transition: border-color 0.2s;
    box-sizing: border-box;
    font-family: inherit;
  }

  .bulk-form-input:focus,
  .bulk-form-select:focus,
  .bulk-form-textarea:focus {
    outline: none;
    border-color: #321004;
  }

  .bulk-form-textarea {
    min-height: 120px;
    resize: vertical;
  }

  .bulk-form-pricing {
    background: #faf9f7;
    padding: 24px;
    border-radius: 12px;
    margin-bottom: 30px;
  }

  .bulk-form-pricing h3 {
    font-size: 18px;
    color: #321004;
    margin: 0 0 16px 0;
  }

  .bulk-pricing-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
  }

  @media (max-width: 600px) {
    .bulk-pricing-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .bulk-pricing-tier {
    background: #fff;
    padding: 16px;
    border-radius: 8px;
    text-align: center;
    border: 1px solid #eee;
  }

  .bulk-pricing-tier.active {
    border-color: #321004;
    background: #321004;
    color: #fff;
  }

  .bulk-pricing-qty {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .bulk-pricing-discount {
    font-size: 20px;
    font-weight: 700;
  }

  .bulk-pricing-tier.active .bulk-pricing-discount {
    color: #fff;
  }

  .bulk-form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 20px;
  }

  .bulk-form-checkbox input {
    width: 20px;
    height: 20px;
    margin-top: 2px;
  }

  .bulk-form-checkbox label {
    font-size: 14px;
    color: #555;
    cursor: pointer;
  }

  .bulk-form-submit {
    width: 100%;
    padding: 16px 24px;
    background: #321004;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .bulk-form-submit:hover {
    background: #4a1a08;
  }

  .bulk-form-submit:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .bulk-form-note {
    text-align: center;
    font-size: 13px;
    color: #666;
    margin-top: 16px;
  }

  .bulk-form-success {
    display: none;
    text-align: center;
    padding: 40px;
  }

  .bulk-form-success.active {
    display: block;
  }

  .bulk-form-success-icon {
    font-size: 64px;
    margin-bottom: 20px;
  }

  .bulk-form-success h3 {
    font-size: 24px;
    color: #321004;
    margin: 0 0 12px 0;
  }

  .bulk-form-success p {
    font-size: 16px;
    color: #666;
  }

  .bulk-estimated-price {
    background: #321004;
    color: #fff;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    text-align: center;
  }

  .bulk-estimated-price span {
    font-size: 14px;
    opacity: 0.9;
  }

  .bulk-estimated-price strong {
    display: block;
    font-size: 28px;
    margin-top: 4px;
  }
</style>

<div class="bulk-form-section">
  <div class="bulk-form-header">
    <h2>Request a Bulk Quote</h2>
    <p>Fill out the form below and we'll get back to you within 24 hours with a custom quote.</p>
  </div>

  <div class="bulk-form-container">
    <form id="bulkOrderForm" action="/contact#contact_form" method="post">
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="contact[tags]" value="bulk-order-inquiry">

      <div class="bulk-form-row">
        <div class="bulk-form-group">
          <label class="bulk-form-label">
            Your Name <span class="required">*</span>
          </label>
          <input type="text" name="contact[name]" class="bulk-form-input" required>
        </div>

        <div class="bulk-form-group">
          <label class="bulk-form-label">
            Company Name
          </label>
          <input type="text" name="contact[company]" class="bulk-form-input">
        </div>
      </div>

      <div class="bulk-form-row">
        <div class="bulk-form-group">
          <label class="bulk-form-label">
            Email Address <span class="required">*</span>
          </label>
          <input type="email" name="contact[email]" class="bulk-form-input" required>
        </div>

        <div class="bulk-form-group">
          <label class="bulk-form-label">
            Phone Number
          </label>
          <input type="tel" name="contact[phone]" class="bulk-form-input">
        </div>
      </div>

      <div class="bulk-form-pricing">
        <h3>Volume Discounts</h3>
        <div class="bulk-pricing-grid">
          <div class="bulk-pricing-tier" data-min="25" data-max="49">
            <div class="bulk-pricing-qty">25-49</div>
            <div class="bulk-pricing-discount">20% off</div>
          </div>
          <div class="bulk-pricing-tier" data-min="50" data-max="99">
            <div class="bulk-pricing-qty">50-99</div>
            <div class="bulk-pricing-discount">25% off</div>
          </div>
          <div class="bulk-pricing-tier" data-min="100" data-max="499">
            <div class="bulk-pricing-qty">100-499</div>
            <div class="bulk-pricing-discount">30% off</div>
          </div>
          <div class="bulk-pricing-tier" data-min="500" data-max="9999">
            <div class="bulk-pricing-qty">500+</div>
            <div class="bulk-pricing-discount">Custom</div>
          </div>
        </div>
      </div>

      <div class="bulk-form-row">
        <div class="bulk-form-group">
          <label class="bulk-form-label">
            Quantity Needed <span class="required">*</span>
          </label>
          <input type="number" name="contact[quantity]" id="bulkQuantity" class="bulk-form-input" min="25" placeholder="Minimum 25" required>
        </div>

        <div class="bulk-form-group">
          <label class="bulk-form-label">
            Event/Need-by Date
          </label>
          <input type="date" name="contact[event_date]" class="bulk-form-input">
        </div>
      </div>

      <div id="estimatedPrice" class="bulk-estimated-price" style="display: none;">
        <span>Estimated Price (before shipping)</span>
        <strong id="priceDisplay">$0.00</strong>
      </div>

      <div class="bulk-form-group">
        <label class="bulk-form-label">
          Event Type <span class="required">*</span>
        </label>
        <select name="contact[event_type]" class="bulk-form-select" required>
          <option value="">Select an option...</option>
          <option value="corporate-event">Corporate Event / Retreat</option>
          <option value="employee-gifts">Employee Appreciation Gifts</option>
          <option value="client-gifts">Client Gifts</option>
          <option value="wedding">Wedding / Bridal Party</option>
          <option value="team-sports">Team / Sports</option>
          <option value="school">School / University</option>
          <option value="nonprofit">Nonprofit / Fundraiser</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div class="bulk-form-group">
        <label class="bulk-form-label">
          Bottle Style Preference
        </label>
        <select name="contact[bottle_style]" class="bulk-form-select">
          <option value="">No preference / Need guidance</option>
          <option value="stainless-steel">Stainless Steel (Insulated)</option>
          <option value="aluminum">Aluminum</option>
          <option value="plastic">BPA-Free Plastic</option>
        </select>
      </div>

      <div class="bulk-form-checkbox">
        <input type="checkbox" name="contact[needs_logo]" id="needsLogo" value="yes">
        <label for="needsLogo">
          I need to add a company logo to the bottles<br>
          <small style="color: #999;">No setup fees - just email your logo file after submitting</small>
        </label>
      </div>

      <div class="bulk-form-group">
        <label class="bulk-form-label">
          Additional Details
        </label>
        <textarea name="contact[body]" class="bulk-form-textarea" placeholder="Tell us about your event, any specific design ideas, questions, or special requirements..."></textarea>
      </div>

      <button type="submit" class="bulk-form-submit">
        Get My Free Quote
      </button>

      <p class="bulk-form-note">
        We'll respond within 24 hours with a detailed quote and next steps.
      </p>
    </form>

    <div id="bulkFormSuccess" class="bulk-form-success">
      <div class="bulk-form-success-icon">✅</div>
      <h3>Quote Request Received!</h3>
      <p>Thanks for reaching out! We'll review your request and send a detailed quote to your email within 24 hours.</p>
      <p style="margin-top: 20px;">
        <a href="/collections/all" style="color: #321004; font-weight: 600;">Browse our products while you wait →</a>
      </p>
    </div>
  </div>
</div>

<script>
(function() {
  const form = document.getElementById('bulkOrderForm');
  const quantityInput = document.getElementById('bulkQuantity');
  const priceDisplay = document.getElementById('estimatedPrice');
  const priceAmount = document.getElementById('priceDisplay');
  const tiers = document.querySelectorAll('.bulk-pricing-tier');
  const successDiv = document.getElementById('bulkFormSuccess');

  const BASE_PRICE = 25; // Base price per bottle

  function updatePricing() {
    const qty = parseInt(quantityInput.value) || 0;

    // Remove active state from all tiers
    tiers.forEach(t => t.classList.remove('active'));

    if (qty < 25) {
      priceDisplay.style.display = 'none';
      return;
    }

    let discount = 0;
    let activeTier = null;

    tiers.forEach(tier => {
      const min = parseInt(tier.dataset.min);
      const max = parseInt(tier.dataset.max);
      if (qty >= min && qty <= max) {
        tier.classList.add('active');
        activeTier = tier;
      }
    });

    if (qty >= 25 && qty <= 49) discount = 0.20;
    else if (qty >= 50 && qty <= 99) discount = 0.25;
    else if (qty >= 100 && qty <= 499) discount = 0.30;
    else if (qty >= 500) discount = 0.35; // Estimate for 500+

    const pricePerBottle = BASE_PRICE * (1 - discount);
    const total = pricePerBottle * qty;

    priceDisplay.style.display = 'block';
    priceAmount.textContent = '$' + total.toLocaleString('en-US', {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    });
  }

  quantityInput.addEventListener('input', updatePricing);

  // Form submission
  form.addEventListener('submit', function(e) {
    // Let form submit normally, but show success on page reload
    // For a smoother experience, you could use AJAX here

    // Store flag in sessionStorage
    sessionStorage.setItem('bulkFormSubmitted', 'true');
  });

  // Check if we should show success message (after form redirect)
  if (sessionStorage.getItem('bulkFormSubmitted')) {
    form.style.display = 'none';
    successDiv.classList.add('active');
    sessionStorage.removeItem('bulkFormSubmitted');
  }
})();
</script>
