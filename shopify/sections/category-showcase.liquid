        },
        {
          "type": "category",
          "settings": {
            "title": "Bachelorette",
            "description": "Celebrate in style",
            "icon": "sparkles"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Kids & Sports",
            "description": "For the little ones",
            "icon": "star"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Corporate",
            "description": "Bulk orders welcome",
            "icon": "users"
          }
        }
      ]
    }
  ]
}
{% endschema %}
