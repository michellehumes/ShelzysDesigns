{%- comment -%}
  Shelzy's Designs - Category Showcase
  A visually stunning grid of category cards with hover effects
{%- endcomment -%}

<section class="sz-category-showcase" style="--bg-color: {{ section.settings.background_color }};">
  <div class="sz-category-container">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="sz-category-header">
        {%- if section.settings.subheading != blank -%}
          <span class="sz-category-subheading">{{ section.settings.subheading }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="sz-category-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="sz-category-grid sz-grid-{{ section.blocks.size }}">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="sz-category-card" {{ block.shopify_attributes }}>
          <div class="sz-category-card-media">
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 800 }}"
                srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                        {{ block.settings.image | image_url: width: 600 }} 600w,
                        {{ block.settings.image | image_url: width: 800 }} 800w"
                sizes="(max-width: 768px) 50vw, 25vw"
                alt="{{ block.settings.title }}"
                loading="lazy"
                class="sz-category-card-image"
              >
            {%- else -%}
              <div class="sz-category-card-placeholder" style="background: {{ block.settings.placeholder_color | default: '#8BAA88' }};">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21 15 16 10 5 21"/>
                </svg>
              </div>
            {%- endif -%}
            <div class="sz-category-card-overlay"></div>
          </div>

          <div class="sz-category-card-content">
            {%- if block.settings.icon != 'none' -%}
              <div class="sz-category-card-icon">
                {%- case block.settings.icon -%}
                  {%- when 'heart' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                  {%- when 'star' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                  {%- when 'gift' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 12 20 22 4 22 4 12"/><rect x="2" y="7" width="20" height="5"/><line x1="12" y1="22" x2="12" y2="7"/><path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/><path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/></svg>
                  {%- when 'users' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                  {%- when 'calendar' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                  {%- when 'sparkles' -%}
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 3l1.5 6.5L20 12l-6.5 1.5L12 20l-1.5-6.5L4 12l6.5-1.5L12 3z"/></svg>
                {%- endcase -%}
              </div>
            {%- endif -%}

            <h3 class="sz-category-card-title">{{ block.settings.title }}</h3>

            {%- if block.settings.description != blank -%}
              <p class="sz-category-card-desc">{{ block.settings.description }}</p>
            {%- endif -%}

            <span class="sz-category-card-link">
              Shop Now
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .sz-category-showcase {
    padding: 80px 0;
    background: var(--bg-color);
  }

  @media (max-width: 768px) {
    .sz-category-showcase {
      padding: 60px 0;
    }
  }

  .sz-category-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .sz-category-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .sz-category-subheading {
    display: block;
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #8BAA88;
    margin-bottom: 12px;
  }

  .sz-category-heading {
    font-family: "Playfair Display", Georgia, serif;
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 500;
    color: #1F1F1F;
    margin: 0;
  }

  .sz-category-grid {
    display: grid;
    gap: 20px;
  }

  .sz-grid-2 { grid-template-columns: repeat(2, 1fr); }
  .sz-grid-3 { grid-template-columns: repeat(3, 1fr); }
  .sz-grid-4 { grid-template-columns: repeat(4, 1fr); }
  .sz-grid-5 { grid-template-columns: repeat(5, 1fr); }
  .sz-grid-6 { grid-template-columns: repeat(3, 1fr); }

  @media (max-width: 1024px) {
    .sz-grid-4, .sz-grid-5, .sz-grid-6 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .sz-category-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }
  }

  .sz-category-card {
    position: relative;
    display: flex;
    flex-direction: column;
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    background: #fff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .sz-category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  .sz-category-card-media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .sz-category-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .sz-category-card:hover .sz-category-card-image {
    transform: scale(1.08);
  }

  .sz-category-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.5);
  }

  .sz-category-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      transparent 40%,
      rgba(0, 0, 0, 0.6) 100%
    );
    opacity: 0.7;
    transition: opacity 0.4s ease;
  }

  .sz-category-card:hover .sz-category-card-overlay {
    opacity: 0.9;
  }

  .sz-category-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    color: #fff;
    transform: translateY(20px);
    transition: transform 0.4s ease;
  }

  .sz-category-card:hover .sz-category-card-content {
    transform: translateY(0);
  }

  .sz-category-card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    margin-bottom: 16px;
    color: #D4AF37;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .sz-category-card:hover .sz-category-card-icon {
    opacity: 1;
    transform: translateY(0);
  }

  .sz-category-card-title {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.5rem;
    font-weight: 500;
    margin: 0 0 8px;
    line-height: 1.2;
  }

  .sz-category-card-desc {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 16px;
    line-height: 1.5;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.4s ease 0.1s, transform 0.4s ease 0.1s;
  }

  .sz-category-card:hover .sz-category-card-desc {
    opacity: 1;
    transform: translateY(0);
  }

  .sz-category-card-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #D4AF37;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.4s ease 0.15s, transform 0.4s ease 0.15s, gap 0.3s ease;
  }

  .sz-category-card:hover .sz-category-card-link {
    opacity: 1;
    transform: translateY(0);
  }

  .sz-category-card-link:hover {
    gap: 12px;
  }

  @media (max-width: 768px) {
    .sz-category-card-content {
      padding: 16px;
      transform: none;
    }

    .sz-category-card-title {
      font-size: 1.1rem;
    }

    .sz-category-card-icon,
    .sz-category-card-desc {
      display: none;
    }

    .sz-category-card-link {
      opacity: 1;
      transform: none;
      font-size: 12px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sz-category-card,
    .sz-category-card-image,
    .sz-category-card-content,
    .sz-category-card-icon,
    .sz-category-card-desc,
    .sz-category-card-link {
      transition: none;
      transform: none;
      opacity: 1;
    }
  }
</style>

