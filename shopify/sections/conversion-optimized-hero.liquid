{% comment %}
==================================================
CONVERSION-OPTIMIZED HERO SECTION
Includes: Trust badges, urgency messaging, social proof
==================================================
{% endcomment %}

<section class="hero-section-optimized" style="background: {{ section.settings.bg_color }};">
  <!-- Announcement Bar / Urgency Banner -->
  <div class="urgency-banner">
    <div class="banner-content">
      <span class="urgency-icon">‚ö°</span>
      <span class="urgency-text">{{ section.settings.urgency_text }}</span>
      <span class="shipping-badge">{{ section.settings.shipping_text }}</span>
    </div>
  </div>

  <div class="hero-container">
    <div class="hero-content">
      <!-- Trust Badges Above Fold -->
      <div class="trust-badges-inline">
        <div class="badge">
          <span class="badge-icon">‚≠ê</span>
          <span class="badge-text">4.9 Stars</span>
        </div>
        <div class="badge">
          <span class="badge-icon">‚úì</span>
          <span class="badge-text">500+ Reviews</span>
        </div>
        <div class="badge">
          <span class="badge-icon">üöö</span>
          <span class="badge-text">Fast Shipping</span>
        </div>
      </div>

      <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
      <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>

      <!-- Key Differentiators -->
      <ul class="hero-benefits">
        <li><span class="check">‚úì</span> Permanent sublimation - never peels or fades</li>
        <li><span class="check">‚úì</span> Ships in 3-5 business days</li>
        <li><span class="check">‚úì</span> Gift-ready packaging included</li>
      </ul>

      <div class="hero-ctas">
        <a href="{{ section.settings.cta_link }}" class="btn btn-primary btn-large">
          {{ section.settings.cta_text }}
        </a>
        <a href="{{ section.settings.secondary_cta_link }}" class="btn btn-secondary-outline">
          {{ section.settings.secondary_cta_text }}
        </a>
      </div>

      <!-- Social Proof Snippet -->
      <div class="social-proof-snippet">
        <div class="customer-avatars">
          <span class="avatar">üë©</span>
          <span class="avatar">üë∞</span>
          <span class="avatar">üë©‚Äçüíº</span>
        </div>
        <p class="proof-text">"<em>{{ section.settings.testimonial_snippet }}</em>" - {{ section.settings.testimonial_author }}</p>
      </div>
    </div>

    <div class="hero-image">
      {% if section.settings.hero_image %}
        <img
          src="{{ section.settings.hero_image | img_url: '1200x' }}"
          alt="{{ section.settings.hero_title }}"
          loading="eager"
          fetchpriority="high"
        >
      {% else %}
        <div class="placeholder-image">
          <p>Hero Image</p>
          <small>Upload in theme customizer</small>
        </div>
      {% endif %}

      <!-- Floating Badge on Image -->
      <div class="floating-badge">
        <span class="badge-main">{{ section.settings.floating_badge_text }}</span>
        <span class="badge-sub">{{ section.settings.floating_badge_subtext }}</span>
      </div>
    </div>
  </div>
</section>

<style>
/* Urgency Banner */
.urgency-banner {
  background: #111111;
  color: #FFFFFF;
  padding: 10px 20px;
  text-align: center;
}

.banner-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
  font-family: 'Inter', sans-serif;
  font-size: 14px;
}

.urgency-icon {
  font-size: 16px;
}

.urgency-text {
  font-weight: 600;
}

.shipping-badge {
  background: #9CAE8C;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
}

/* Hero Section */
.hero-section-optimized {
  padding: 0;
}

.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 60px 40px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

/* Trust Badges Inline */
.trust-badges-inline {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
  flex-wrap: wrap;
}

.trust-badges-inline .badge {
  display: flex;
  align-items: center;
  gap: 6px;
  font-family: 'Inter', sans-serif;
  font-size: 13px;
  color: #666;
}

.trust-badges-inline .badge-icon {
  font-size: 14px;
}

/* Hero Content */
.hero-title {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 52px;
  line-height: 1.15;
  color: #111111;
  margin-bottom: 1rem;
}

.hero-subtitle {
  font-family: 'Inter', sans-serif;
  font-size: 20px;
  line-height: 1.6;
  color: #444;
  margin-bottom: 1.5rem;
}

/* Benefits List */
.hero-benefits {
  list-style: none;
  padding: 0;
  margin: 0 0 2rem 0;
}

.hero-benefits li {
  font-family: 'Inter', sans-serif;
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.hero-benefits .check {
  color: #9CAE8C;
  font-weight: bold;
  font-size: 18px;
}

/* CTAs */
.hero-ctas {
  display: flex;
  gap: 15px;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.btn-large {
  padding: 16px 32px;
  font-size: 18px;
}

.btn-primary {
  display: inline-block;
  background: #9CAE8C;
  color: #FFFFFF;
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  border: 2px solid #9CAE8C;
}

.btn-primary:hover {
  background: #7C9F8C;
  border-color: #7C9F8C;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(156, 174, 140, 0.3);
}

.btn-secondary-outline {
  display: inline-block;
  padding: 16px 32px;
  background: transparent;
  color: #111111;
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 18px;
  text-decoration: none;
  border-radius: 4px;
  border: 2px solid #111111;
  transition: all 0.3s ease;
}

.btn-secondary-outline:hover {
  background: #111111;
  color: #FFFFFF;
}

/* Social Proof Snippet */
.social-proof-snippet {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 15px 20px;
  background: #F7F4EF;
  border-radius: 8px;
  max-width: 500px;
}

.customer-avatars {
  display: flex;
  margin-right: 5px;
}

.customer-avatars .avatar {
  font-size: 24px;
  margin-left: -8px;
}

.customer-avatars .avatar:first-child {
  margin-left: 0;
}

.proof-text {
  font-family: 'Inter', sans-serif;
  font-size: 14px;
  color: #444;
  margin: 0;
  line-height: 1.4;
}

/* Hero Image */
.hero-image {
  position: relative;
}

.hero-image img {
  width: 100%;
  height: auto;
  border-radius: 12px;
  box-shadow: 0 20px 60px rgba(0,0,0,0.1);
}

.placeholder-image {
  width: 100%;
  height: 500px;
  background: #F7F4EF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  color: #666;
}

/* Floating Badge */
.floating-badge {
  position: absolute;
  bottom: 20px;
  right: 20px;
  background: #FFFFFF;
  padding: 15px 20px;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.15);
  text-align: center;
}

.floating-badge .badge-main {
  display: block;
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: 18px;
  color: #9CAE8C;
}

.floating-badge .badge-sub {
  display: block;
  font-family: 'Inter', sans-serif;
  font-size: 12px;
  color: #666;
  margin-top: 2px;
}

/* Responsive */
@media (max-width: 1024px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 40px 20px;
  }

  .hero-title {
    font-size: 40px;
  }

  .hero-content {
    text-align: center;
  }

  .trust-badges-inline {
    justify-content: center;
  }

  .hero-benefits {
    display: inline-block;
    text-align: left;
  }

  .hero-ctas {
    justify-content: center;
  }

  .social-proof-snippet {
    margin: 0 auto;
    flex-direction: column;
    text-align: center;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 32px;
  }

  .hero-subtitle {
    font-size: 16px;
  }

  .btn-large {
    width: 100%;
    text-align: center;
  }

  .hero-ctas {
    flex-direction: column;
  }

  .btn-secondary-outline {
    width: 100%;
    text-align: center;
  }
}
</style>

