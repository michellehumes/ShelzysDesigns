{%- comment -%}
  Shelzy's Designs - Product Recommendations Section
  Displays related products based on Shopify's recommendation API
{%- endcomment -%}

{%- if recommendations.products_count > 0 or recommendations.performed == false -%}
  <section class="sz-recommendations" style="background: {{ section.settings.background_color }};">
    <div class="sz-recommendations-inner">

      {%- if section.settings.heading != blank -%}
        <div class="sz-recommendations-header">
          <h2 class="sz-recommendations-heading" style="color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h2>
        </div>
      {%- endif -%}

      <div class="sz-recommendations-grid sz-grid-{{ section.settings.columns }}" id="ProductRecommendations" data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.products_to_show }}">
        {%- if recommendations.performed -%}
          {%- for product in recommendations.products -%}
            <div class="sz-rec-product-card">
              <a href="{{ product.url }}" class="sz-rec-product-link">
                <div class="sz-rec-product-image">
                  {%- if product.featured_image != blank -%}
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="400"
                      height="{{ 400 | divided_by: product.featured_image.aspect_ratio | round }}"
                    >
                    {%- if product.images.size > 1 and section.settings.show_secondary_image -%}
                      <img
                        src="{{ product.images[1] | image_url: width: 400 }}"
                        alt="{{ product.images[1].alt | escape }}"
                        loading="lazy"
                        class="sz-rec-image-hover"
                      >
                    {%- endif -%}
                  {%- else -%}
                    <div class="sz-rec-placeholder">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {%- endif -%}

                  {%- if section.settings.show_badges -%}
                    <div class="sz-rec-badges">
                      {%- if product.available == false -%}
                        <span class="sz-rec-badge sz-rec-badge--soldout">Sold Out</span>
                      {%- elsif product.compare_at_price > product.price -%}
                        {%- assign savings = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price -%}
                        <span class="sz-rec-badge sz-rec-badge--sale">{{ savings }}% Off</span>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>

                <div class="sz-rec-product-info">
                  <h3 class="sz-rec-product-title" style="color: {{ section.settings.text_color }};">{{ product.title }}</h3>
                  <div class="sz-rec-product-price">
                    {%- if product.compare_at_price > product.price -%}
                      <span class="sz-rec-price sz-rec-price--sale">{{ product.price | money }}</span>
                      <span class="sz-rec-price sz-rec-price--compare">{{ product.compare_at_price | money }}</span>
                    {%- else -%}
                      <span class="sz-rec-price" style="color: {{ section.settings.text_color }};">{{ product.price | money }}</span>
                    {%- endif -%}
                  </div>
                </div>
              </a>
            </div>
          {%- endfor -%}
        {%- else -%}
          {%- comment -%} Placeholder grid while loading {%- endcomment -%}
          {%- for i in (1..section.settings.products_to_show) -%}
            <div class="sz-rec-product-card sz-rec-product-card--loading">
              <div class="sz-rec-product-image">
                <div class="sz-rec-placeholder sz-rec-skeleton"></div>
              </div>
              <div class="sz-rec-product-info">
                <div class="sz-rec-skeleton sz-rec-skeleton--text"></div>
                <div class="sz-rec-skeleton sz-rec-skeleton--price"></div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>

    </div>
  </section>
{%- endif -%}

{% style %}
  .sz-recommendations {
    padding: {{ section.settings.padding_top }}px 24px {{ section.settings.padding_bottom }}px;
  }

  .sz-recommendations-inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  .sz-recommendations-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .sz-recommendations-heading {
    font-family: "Playfair Display", Georgia, serif;
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 500;
    margin: 0;
  }

  .sz-recommendations-grid {
    display: grid;
    gap: 24px;
  }

  .sz-grid-2 { grid-template-columns: repeat(2, 1fr); }
  .sz-grid-3 { grid-template-columns: repeat(3, 1fr); }
  .sz-grid-4 { grid-template-columns: repeat(4, 1fr); }
  .sz-grid-5 { grid-template-columns: repeat(5, 1fr); }

  @media (max-width: 1024px) {
    .sz-grid-4, .sz-grid-5 { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .sz-grid-3, .sz-grid-4, .sz-grid-5 { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 480px) {
    .sz-recommendations-grid { gap: 16px; }
  }

  .sz-rec-product-card {
    position: relative;
  }

  .sz-rec-product-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .sz-rec-product-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #F5F2ED;
    margin-bottom: 12px;
  }

  .sz-rec-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .sz-rec-image-hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .sz-rec-product-card:hover .sz-rec-product-image img:first-child {
    transform: scale(1.05);
  }

  .sz-rec-product-card:hover .sz-rec-image-hover {
    opacity: 1;
  }

  .sz-rec-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #CCCCCC;
  }

  .sz-rec-badges {
    position: absolute;
    top: 8px;
    left: 8px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sz-rec-badge {
    font-family: "Inter", sans-serif;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 4px 8px;
  }

  .sz-rec-badge--sale { background: #C41E3A; color: #FFFFFF; }
  .sz-rec-badge--soldout { background: #1F1F1F; color: #FFFFFF; }

  .sz-rec-product-info {
    text-align: {{ section.settings.text_alignment }};
  }

  .sz-rec-product-title {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 500;
    margin: 0 0 6px 0;
    line-height: 1.4;
  }

  .sz-rec-product-price {
    display: flex;
    gap: 8px;
    justify-content: {{ section.settings.text_alignment }};
    align-items: center;
  }

  .sz-rec-price {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 600;
  }

  .sz-rec-price--sale { color: #C41E3A; }

  .sz-rec-price--compare {
    font-weight: 400;
    color: #7A7A7A;
    text-decoration: line-through;
    font-size: 13px;
  }

  /* Loading skeleton styles */
  .sz-rec-skeleton {
    background: linear-gradient(90deg, #F0F0F0 25%, #E0E0E0 50%, #F0F0F0 75%);
    background-size: 200% 100%;
    animation: szSkeletonPulse 1.5s ease-in-out infinite;
  }

  .sz-rec-skeleton--text {
    height: 16px;
    width: 80%;
    margin-bottom: 8px;
  }

  .sz-rec-skeleton--price {
    height: 14px;
    width: 40%;
  }

  @keyframes szSkeletonPulse {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
{% endstyle %}

{%- comment -%} Load recommendations via AJAX if not already loaded {%- endcomment -%}
<script>
  (function() {
    var container = document.getElementById('ProductRecommendations');
    if (!container || container.dataset.loaded) return;

    var url = container.dataset.url;
    if (!url) return;

    fetch(url)
      .then(function(response) { return response.text(); })
      .then(function(html) {
        var parser = new DOMParser();
        var doc = parser.parseFromString(html, 'text/html');
        var recommendations = doc.getElementById('ProductRecommendations');
        if (recommendations && recommendations.innerHTML.trim() !== '') {
          container.innerHTML = recommendations.innerHTML;
          container.dataset.loaded = 'true';
        }
      })
      .catch(function(error) {
        console.error('Error loading product recommendations:', error);
      });
  })();
</script>

{% schema %}
{
  "name": "Product Recommendations",
  "tag": "section",
  "class": "sz-recommendations-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You May Also Like"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show second image on hover",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show product badges",
      "default": true
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F5F2ED"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1F1F1F"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 8,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 8,
      "default": 60,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Product Recommendations"
    }
  ],
  "templates": ["product"]
}
{% endschema %}
