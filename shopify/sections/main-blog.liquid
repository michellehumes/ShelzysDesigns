{%- comment -%}
  Shelzy's Designs - Blog Section
  Shopify 2.0 section for blog listing
{%- endcomment -%}

<div class="sz-blog-page">
  <div class="sz-blog-container">

    {%- comment -%} Blog Header {%- endcomment -%}
    <header class="sz-blog-header">
      <h1 class="sz-blog-title">{{ blog.title }}</h1>
      {%- if current_tags -%}
        <p class="sz-blog-subtitle">Posts tagged "{{ current_tags | join: ', ' }}"</p>
      {%- else -%}
        <p class="sz-blog-subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </header>

    {%- comment -%} Blog Tags {%- endcomment -%}
    {%- if blog.all_tags.size > 0 and section.settings.show_tags -%}
      <nav class="sz-blog-tags" aria-label="Blog categories">
        <a href="{{ blog.url }}" class="sz-blog-tag {% unless current_tags %}sz-tag-active{% endunless %}">All Posts</a>
        {%- for tag in blog.all_tags -%}
          <a
            href="{{ blog.url }}/tagged/{{ tag | handle }}"
            class="sz-blog-tag {% if current_tags contains tag %}sz-tag-active{% endif %}"
          >
            {{ tag }}
          </a>
        {%- endfor -%}
      </nav>
    {%- endif -%}

    {%- comment -%} Blog Articles {%- endcomment -%}
    {%- paginate blog.articles by section.settings.articles_per_page -%}

      {%- if blog.articles.size > 0 -%}

        <div class="sz-blog-grid">
          {%- for article in blog.articles -%}
            <article class="sz-blog-card">
              <a href="{{ article.url }}" class="sz-blog-card-link">

                <div class="sz-blog-card-image">
                  {%- if article.image -%}
                    <img
                      src="{{ article.image | image_url: width: 600 }}"
                      srcset="{{ article.image | image_url: width: 400 }} 400w,
                              {{ article.image | image_url: width: 600 }} 600w"
                      sizes="(max-width: 768px) 100vw, 33vw"
                      alt="{{ article.image.alt | default: article.title }}"
                      loading="lazy"
                    >
                  {%- else -%}
                    <div class="sz-blog-card-placeholder">
                      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                        <circle cx="8.5" cy="8.5" r="1.5"/>
                        <polyline points="21 15 16 10 5 21"/>
                      </svg>
                    </div>
                  {%- endif -%}
                </div>

                <div class="sz-blog-card-content">
                  <div class="sz-blog-card-meta">
                    <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </time>
                    {%- if article.tags.size > 0 -%}
                      <span class="sz-meta-divider">|</span>
                      <span class="sz-blog-card-tag">{{ article.tags | first }}</span>
                    {%- endif -%}
                  </div>

                  <h2 class="sz-blog-card-title">{{ article.title }}</h2>

                  <p class="sz-blog-card-excerpt">
                    {{ article.excerpt_or_content | strip_html | truncate: 150 }}
                  </p>

                  <span class="sz-blog-card-readmore">
                    Read More
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"/>
                      <polyline points="12 5 19 12 12 19"/>
                    </svg>
                  </span>
                </div>

              </a>
            </article>
          {%- endfor -%}
        </div>

        {%- if paginate.pages > 1 -%}
          <nav class="sz-pagination" aria-label="Blog pagination">
            <ul class="sz-pagination-list">
              {%- if paginate.previous -%}
                <li>
                  <a href="{{ paginate.previous.url }}" class="sz-pagination-prev">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="15 18 9 12 15 6"/>
                    </svg>
                    Newer Posts
                  </a>
                </li>
              {%- endif -%}

              {%- for part in paginate.parts -%}
                {%- if part.is_link -%}
                  <li><a href="{{ part.url }}" class="sz-pagination-page">{{ part.title }}</a></li>
                {%- else -%}
                  {%- if part.title == paginate.current_page -%}
                    <li><span class="sz-pagination-page sz-pagination-current" aria-current="page">{{ part.title }}</span></li>
                  {%- else -%}
                    <li><span class="sz-pagination-ellipsis">{{ part.title }}</span></li>
                  {%- endif -%}
                {%- endif -%}
              {%- endfor -%}

              {%- if paginate.next -%}
                <li>
                  <a href="{{ paginate.next.url }}" class="sz-pagination-next">
                    Older Posts
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="9 18 15 12 9 6"/>
                    </svg>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </nav>
        {%- endif -%}

      {%- else -%}

        <div class="sz-blog-empty">
          <p>No blog posts found.</p>
          <a href="/" class="sz-btn sz-btn-primary">Back to Home</a>
        </div>

      {%- endif -%}

    {%- endpaginate -%}

    {%- if section.settings.show_newsletter -%}
      <section class="sz-blog-newsletter">
        <div class="sz-blog-newsletter-content">
          <h2>{{ section.settings.newsletter_heading }}</h2>
          <p>{{ section.settings.newsletter_text }}</p>
          <form action="/contact#newsletter" method="post" class="sz-newsletter-form">
            <input type="hidden" name="contact[tags]" value="newsletter,blog">
            <div class="sz-newsletter-row">
              <input
                type="email"
                name="contact[email]"
                placeholder="Enter your email"
                required
                class="sz-newsletter-input"
                aria-label="Email address"
              >
              <button type="submit" class="sz-btn sz-btn-primary">Subscribe</button>
            </div>
          </form>
        </div>
      </section>
    {%- endif -%}

  </div>
</div>

{% style %}
  .sz-blog-page {
    padding: var(--sz-space-xl, 32px) var(--sz-space-md, 16px);
    background: var(--sz-warm-white, #FAF9F6);
    min-height: 60vh;
  }

  .sz-blog-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .sz-blog-header {
    text-align: center;
    margin-bottom: var(--sz-space-xl, 32px);
  }

  .sz-blog-title {
    font-family: var(--sz-font-heading, 'Playfair Display', Georgia, serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--sz-primary-dark, #4E5F4A);
    margin: 0 0 16px 0;
  }

  .sz-blog-subtitle {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 18px;
    color: var(--sz-gray, #6B7280);
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .sz-blog-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 8px;
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--sz-border-light, #E5E7EB);
  }

  .sz-blog-tag {
    padding: 8px 16px;
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    color: var(--sz-charcoal, #2B2B2B);
    text-decoration: none;
    border: 1px solid var(--sz-border-light, #E5E7EB);
    border-radius: 999px;
    background: var(--sz-white, #FFFFFF);
    transition: all 0.2s;
  }

  .sz-blog-tag:hover,
  .sz-tag-active {
    background: var(--sz-primary, #8BAA88);
    border-color: var(--sz-primary, #8BAA88);
    color: var(--sz-white, #FFFFFF);
  }

  .sz-blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-bottom: 48px;
  }

  @media (max-width: 900px) {
    .sz-blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .sz-blog-grid {
      grid-template-columns: 1fr;
    }
  }

  .sz-blog-card {
    background: var(--sz-white, #FFFFFF);
    border-radius: 8px;
    overflow: hidden;
    transition: box-shadow 0.3s;
  }

  .sz-blog-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  }

  .sz-blog-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .sz-blog-card-image {
    aspect-ratio: 16/10;
    background: var(--sz-beige, #F5F0EB);
    overflow: hidden;
  }

  .sz-blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .sz-blog-card:hover .sz-blog-card-image img {
    transform: scale(1.05);
  }

  .sz-blog-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-gray, #6B7280);
  }

  .sz-blog-card-content {
    padding: 24px;
  }

  .sz-blog-card-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 12px;
    color: var(--sz-gray, #6B7280);
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .sz-meta-divider {
    color: var(--sz-border-light, #E5E7EB);
  }

  .sz-blog-card-tag {
    color: var(--sz-primary, #8BAA88);
  }

  .sz-blog-card-title {
    font-family: var(--sz-font-heading, 'Playfair Display', Georgia, serif);
    font-size: 20px;
    font-weight: 600;
    color: var(--sz-primary-dark, #4E5F4A);
    margin: 0 0 8px 0;
    line-height: 1.3;
    transition: color 0.2s;
  }

  .sz-blog-card:hover .sz-blog-card-title {
    color: var(--sz-primary, #8BAA88);
  }

  .sz-blog-card-excerpt {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    color: var(--sz-charcoal, #2B2B2B);
    line-height: 1.6;
    margin: 0 0 16px 0;
  }

  .sz-blog-card-readmore {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    font-weight: 500;
    color: var(--sz-primary, #8BAA88);
    transition: gap 0.2s;
  }

  .sz-blog-card:hover .sz-blog-card-readmore {
    gap: 8px;
  }

  .sz-blog-empty {
    text-align: center;
    padding: 64px 16px;
  }

  .sz-blog-empty p {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 18px;
    color: var(--sz-gray, #6B7280);
    margin: 0 0 32px 0;
  }

  .sz-blog-newsletter {
    background: var(--sz-primary, #8BAA88);
    border-radius: 12px;
    padding: 48px;
    text-align: center;
    margin-top: 48px;
  }

  .sz-blog-newsletter-content {
    max-width: 500px;
    margin: 0 auto;
  }

  .sz-blog-newsletter h2 {
    font-family: var(--sz-font-heading, 'Playfair Display', Georgia, serif);
    font-size: 24px;
    font-weight: 600;
    color: var(--sz-white, #FFFFFF);
    margin: 0 0 8px 0;
  }

  .sz-blog-newsletter p {
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 16px;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 24px 0;
  }

  .sz-newsletter-form {
    max-width: 400px;
    margin: 0 auto;
  }

  .sz-newsletter-row {
    display: flex;
    gap: 0;
  }

  @media (max-width: 500px) {
    .sz-newsletter-row {
      flex-direction: column;
      gap: 8px;
    }
  }

  .sz-newsletter-input {
    flex: 1;
    padding: 16px;
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 16px;
    border: none;
    border-radius: 4px 0 0 4px;
  }

  @media (max-width: 500px) {
    .sz-newsletter-input {
      border-radius: 4px;
    }
  }

  .sz-newsletter-input:focus {
    outline: none;
  }

  .sz-blog-newsletter .sz-btn-primary {
    border-radius: 0 4px 4px 0;
    background: var(--sz-charcoal, #2B2B2B);
  }

  @media (max-width: 500px) {
    .sz-blog-newsletter .sz-btn-primary {
      border-radius: 4px;
      width: 100%;
    }
  }

  .sz-blog-newsletter .sz-btn-primary:hover {
    background: #000;
  }

  .sz-pagination {
    display: flex;
    justify-content: center;
  }

  .sz-pagination-list {
    display: flex;
    align-items: center;
    gap: 4px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sz-pagination-page,
  .sz-pagination-prev,
  .sz-pagination-next {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 8px 16px;
    font-family: var(--sz-font-body, 'Inter', sans-serif);
    font-size: 14px;
    color: var(--sz-charcoal, #2B2B2B);
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .sz-pagination-page:hover,
  .sz-pagination-prev:hover,
  .sz-pagination-next:hover {
    background: var(--sz-beige, #F5F0EB);
    color: var(--sz-primary, #8BAA88);
  }

  .sz-pagination-current {
    background: var(--sz-primary, #8BAA88);
    color: var(--sz-white, #FFFFFF);
  }

  .sz-pagination-ellipsis {
    padding: 8px;
    color: var(--sz-gray, #6B7280);
  }
{% endstyle %}

{% schema %}
{
  "name": "Blog Posts",
  "tag": "section",
  "class": "sz-blog-section",
  "settings": [
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Blog subtitle",
      "default": "Tips, inspiration, and stories about personalized gifts and special occasions"
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tag filters",
      "default": true
    },
    {
      "type": "range",
      "id": "articles_per_page",
      "label": "Articles per page",
      "min": 6,
      "max": 18,
      "step": 3,
      "default": 9
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter section",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Stay Inspired"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Get our latest tips, designs, and exclusive offers delivered to your inbox."
    }
  ]
}
{% endschema %}
