<div class="sticky-atc" id="sticky-atc">
  <div class="sticky-atc-inner">
    <div class="sticky-atc-info">
      <p class="sticky-atc-title">{{ product.title }}</p>
      <p class="sticky-atc-price">{{ product.selected_or_first_available_variant.price | money }}</p>
    </div>
    <button type="button" class="sticky-atc-button" id="sticky-atc-btn">
      Add to Cart
    </button>
  </div>
</div>

<script>
(function() {
  var stickyATC = document.getElementById('sticky-atc');
  var stickyBtn = document.getElementById('sticky-atc-btn');
  var mainATC = document.querySelector('.product-form__submit, [name="add"]');

  if (!stickyATC || !mainATC) return;

  // Add class to body for padding
  document.body.classList.add('has-sticky-atc');

  // Show/hide sticky bar based on scroll
  function checkStickyVisibility() {
    var mainATCRect = mainATC.getBoundingClientRect();
    var isMainATCVisible = mainATCRect.top < window.innerHeight && mainATCRect.bottom > 0;

    if (isMainATCVisible) {
      stickyATC.classList.remove('visible');
    } else {
      stickyATC.classList.add('visible');
    }
  }

  // Click handler - scroll to main ATC or submit form
  stickyBtn.addEventListener('click', function() {
    var mainATCRect = mainATC.getBoundingClientRect();

    if (mainATCRect.top < 0 || mainATCRect.bottom > window.innerHeight) {
      mainATC.scrollIntoView({ behavior: 'smooth', block: 'center' });
    } else {
      mainATC.click();
    }
  });

  // Throttled scroll listener
  var scrollTimeout;
  window.addEventListener('scroll', function() {
    if (scrollTimeout) return;
    scrollTimeout = setTimeout(function() {
      scrollTimeout = null;
      checkStickyVisibility();
    }, 100);
  });

  // Initial check
  checkStickyVisibility();
})();
</script>


