<script>
  {%- comment -%} Product card interactions {%- endcomment -%}
  document.addEventListener('DOMContentLoaded', function() {
    // Quick view functionality
    const quickViewButtons = document.querySelectorAll('.product-quick-view');
    
    quickViewButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Here you would open a modal with product details
        console.log('Opening quick view modal');
        
        // Example: You could integrate with Shopify's quick view
        // or create a custom modal
      });
    });

    // Wishlist functionality
    const wishlistButtons = document.querySelectorAll('.product-wishlist');
    
    wishlistButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Toggle wishlist state
        this.classList.toggle('active');
        
        // Here you would add/remove from wishlist
        console.log('Toggled wishlist');
      });
    });

    // Add to cart functionality
    const addToCartButtons = document.querySelectorAll('.product-add-to-cart');
    
    addToCartButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Here you would integrate with Shopify's Ajax Cart API
        console.log('Adding to cart');
        
        // Show success feedback
        const originalText = this.textContent;
        this.textContent = 'Added! ‚úì';
        this.style.background = '#4caf50';
        
        setTimeout(function() {
          button.textContent = originalText;
          button.style.background = '';
        }, 2000);
      });
    });

    // Color swatch selection
    const colorSwatches = document.querySelectorAll('.product-color-swatch');
    
    colorSwatches.forEach(function(swatch) {
      swatch.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Remove active state from siblings
        const siblings = this.parentElement.querySelectorAll('.product-color-swatch');
        siblings.forEach(s => s.style.borderColor = '#e0e0e0');
        
        // Add active state to clicked swatch
        this.style.borderColor = '#667eea';
        this.style.borderWidth = '3px';
      });
    });
  });
</script>
