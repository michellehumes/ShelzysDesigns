{% comment %}
================================================================================
SHELZY'S DESIGNS - PRODUCT CARD SNIPPET
Version: 2.0.0
Last Updated: 2024-12
================================================================================
Reusable product card component.
Use via: {% render 'product-card', product: product %}

Parameters:
- product: Product object (required)
- show_secondary_image: Boolean (optional, default: true)
- show_badges: Boolean (optional, default: true)
- show_vendor: Boolean (optional, default: false)
- show_rating: Boolean (optional, default: true)
- show_quick_add: Boolean (optional, default: true)
- lazy_load: Boolean (optional, default: true)
================================================================================
{% endcomment %}

{%- liquid
  assign show_secondary_image = show_secondary_image | default: settings.product_show_secondary_image | default: true
  assign show_badges = show_badges | default: settings.product_show_badges | default: true
  assign show_vendor = show_vendor | default: settings.product_show_vendor | default: false
  assign show_rating = show_rating | default: settings.product_show_rating | default: true
  assign show_quick_add = show_quick_add | default: true
  assign lazy_load = lazy_load | default: true
-%}

<div class="sz-product-card" data-product-handle="{{ product.handle }}">
  <a href="{{ product.url }}" class="sz-product-card__link" aria-label="{{ product.title }}">

    {%- comment -%} Image {%- endcomment -%}
    <div class="sz-product-card__media">
      {%- if product.featured_image != blank -%}
        {{
          product.featured_image
          | image_url: width: 600
          | image_tag:
            class: 'sz-product-card__image sz-product-card__image--primary',
            loading: lazy_load | default: 'lazy',
            widths: '300, 400, 500, 600',
            sizes: '(min-width: 1200px) 300px, (min-width: 768px) 33vw, 50vw',
            alt: product.featured_image.alt | default: product.title
        }}

        {%- if show_secondary_image and product.images.size > 1 -%}
          {{
            product.images[1]
            | image_url: width: 600
            | image_tag:
              class: 'sz-product-card__image sz-product-card__image--secondary',
              loading: 'lazy',
              widths: '300, 400, 500, 600',
              sizes: '(min-width: 1200px) 300px, (min-width: 768px) 33vw, 50vw',
              alt: product.images[1].alt | default: product.title
          }}
        {%- endif -%}
      {%- else -%}
        <div class="sz-product-card__placeholder">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21 15 16 10 5 21"/>
          </svg>
        </div>
      {%- endif -%}

      {%- comment -%} Badges {%- endcomment -%}
      {%- if show_badges -%}
        <div class="sz-product-card__badges">
          {%- if product.available == false -%}
            <span class="sz-badge sz-badge--soldout">Sold Out</span>
          {%- elsif product.compare_at_price > product.price -%}
            {%- assign savings = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price -%}
            <span class="sz-badge sz-badge--sale">{{ savings }}% Off</span>
          {%- endif -%}
          {%- if product.tags contains 'bestseller' -%}
            <span class="sz-badge sz-badge--bestseller">Best Seller</span>
          {%- endif -%}
          {%- if product.tags contains 'new' -%}
            <span class="sz-badge sz-badge--new">New</span>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- comment -%} Quick Add {%- endcomment -%}
      {%- if show_quick_add and product.available -%}
        <div class="sz-product-card__quick-add">
          <button
            type="button"
            class="sz-product-card__quick-btn"
            data-product-handle="{{ product.handle }}"
            data-variant-id="{{ product.selected_or_first_available_variant.id }}"
            aria-label="Quick add {{ product.title }} to cart"
          >
            Quick Add
          </button>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Info {%- endcomment -%}
    <div class="sz-product-card__info">
      {%- if show_vendor and product.vendor != blank -%}
        <p class="sz-product-card__vendor">{{ product.vendor }}</p>
      {%- endif -%}

      <h3 class="sz-product-card__title">{{ product.title }}</h3>

      <div class="sz-product-card__price">
        {%- if product.compare_at_price > product.price -%}
          <span class="sz-price sz-price--sale">{{ product.price | money }}</span>
          <span class="sz-price sz-price--compare">{{ product.compare_at_price | money }}</span>
        {%- else -%}
          <span class="sz-price">{{ product.price | money }}</span>
        {%- endif -%}
      </div>

      {%- if show_rating and product.metafields.reviews.rating.value != blank -%}
        {%- assign rating = product.metafields.reviews.rating.value | round: 1 -%}
        <div class="sz-product-card__rating">
          <div class="sz-stars" style="--rating: {{ rating }};" aria-label="{{ rating }} out of 5 stars">
            <span aria-hidden="true">★★★★★</span>
          </div>
          {%- if product.metafields.reviews.rating_count.value != blank -%}
            <span class="sz-rating-count">({{ product.metafields.reviews.rating_count.value }})</span>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </a>
</div>

<style>
  .sz-product-card {
    position: relative;
  }

  .sz-product-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  /* Media */
  .sz-product-card__media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background-color: var(--sz-surface);
    border-radius: var(--sz-radius-lg);
    margin-bottom: var(--sz-space-md);
  }

  .sz-product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--sz-transition-normal), opacity var(--sz-transition-normal);
  }

  .sz-product-card__image--secondary {
    position: absolute;
    inset: 0;
    opacity: 0;
  }

  .sz-product-card:hover .sz-product-card__image--primary {
    transform: scale(1.05);
  }

  .sz-product-card:hover .sz-product-card__image--secondary {
    opacity: 1;
  }

  .sz-product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-text-muted);
  }

  /* Badges */
  .sz-product-card__badges {
    position: absolute;
    top: var(--sz-space-sm);
    left: var(--sz-space-sm);
    display: flex;
    flex-direction: column;
    gap: var(--sz-space-xs);
    z-index: 2;
  }

  /* Quick Add */
  .sz-product-card__quick-add {
    position: absolute;
    bottom: var(--sz-space-sm);
    left: var(--sz-space-sm);
    right: var(--sz-space-sm);
    opacity: 0;
    transform: translateY(10px);
    transition: all var(--sz-transition-normal);
    z-index: 2;
  }

  .sz-product-card:hover .sz-product-card__quick-add {
    opacity: 1;
    transform: translateY(0);
  }

  .sz-product-card__quick-btn {
    width: 100%;
    padding: var(--sz-space-sm) var(--sz-space-md);
    background-color: var(--sz-background);
    border: none;
    border-radius: var(--sz-radius-md);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: var(--sz-font-semibold);
    color: var(--sz-text);
    cursor: pointer;
    transition: background-color var(--sz-transition-fast);
  }

  .sz-product-card__quick-btn:hover {
    background-color: var(--sz-surface);
  }

  /* Info */
  .sz-product-card__info {
    display: flex;
    flex-direction: column;
    gap: var(--sz-space-xs);
  }

  .sz-product-card__vendor {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs);
    color: var(--sz-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .sz-product-card__title {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: var(--sz-font-medium);
    color: var(--sz-text);
    line-height: var(--sz-leading-snug);
    margin: 0;
  }

  .sz-product-card__price {
    display: flex;
    gap: var(--sz-space-sm);
    align-items: center;
  }

  .sz-price {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-sm);
    font-weight: var(--sz-font-semibold);
    color: var(--sz-text);
  }

  .sz-price--sale {
    color: var(--sz-sale);
  }

  .sz-price--compare {
    font-weight: var(--sz-font-normal);
    color: var(--sz-text-muted);
    text-decoration: line-through;
    font-size: var(--sz-text-xs);
  }

  /* Rating */
  .sz-product-card__rating {
    display: flex;
    gap: var(--sz-space-xs);
    align-items: center;
  }

  .sz-stars {
    font-size: var(--sz-text-sm);
    color: var(--sz-accent);
    background: linear-gradient(
      90deg,
      var(--sz-accent) calc(var(--rating) / 5 * 100%),
      var(--sz-border) calc(var(--rating) / 5 * 100%)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .sz-rating-count {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs);
    color: var(--sz-text-muted);
  }
</style>
