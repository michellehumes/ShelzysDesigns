{%- comment -%}
  Shelzy's Designs - Collection Hero Banner

  Dynamic collection header with:
  - Banner image (from collection)
  - H1 title
  - Collection description
  - Product count

  Add to collection templates: {% render 'shelzys-collection-hero', collection: collection %}
{%- endcomment -%}

{%- liquid
  assign col = collection
  assign product_count = col.products_count | default: 0
-%}

<section class="sz-collection-hero">
  <div class="sz-collection-hero-bg">
    {%- if col.image -%}
      <img
        src="{{ col.image | img_url: '1600x600', crop: 'center' }}"
        alt="{{ col.title }}"
        loading="eager"
      >
    {%- else -%}
      <div class="sz-collection-hero-gradient"></div>
    {%- endif -%}
  </div>

  <div class="sz-collection-hero-overlay"></div>

  <div class="sz-collection-hero-content">
    <div class="sz-collection-hero-text">
      <span class="sz-collection-eyebrow">{{ product_count }} Products</span>
      <h1 class="sz-collection-title">{{ col.title }}</h1>

      {%- if col.description != blank -%}
        <div class="sz-collection-description">
          {{ col.description }}
        </div>
      {%- else -%}
        {%- comment -%} Fallback descriptions by collection handle {%- endcomment -%}
        {%- case col.handle -%}
          {%- when 'custom-water-bottles' -%}
            <p class="sz-collection-description">
              Beautiful personalized bottles with permanent sublimation printing. No vinyl, no peeling — ever.
            </p>
          {%- when 'kids' or 'sports' -%}
            <p class="sz-collection-description">
              Durable, personalized bottles for kids, dance teams, sports leagues, school, and everyday adventures.
            </p>
          {%- when 'holiday' -%}
            <p class="sz-collection-description">
              Festive personalized bottles for Christmas, holidays, and seasonal celebrations. Perfect gifts!
            </p>
          {%- else -%}
            <p class="sz-collection-description">
              Premium personalized water bottles with permanent sublimation printing. No vinyl, no peeling — ever.
            </p>
        {%- endcase -%}
      {%- endif -%}
    </div>
  </div>
</section>

{%- comment -%} Quick Category Links (for custom-water-bottles or all collections) {%- endcomment -%}
{%- if col.handle == 'all' or col.handle == 'custom-water-bottles' -%}
<div class="sz-collection-quicklinks">
  <div class="sz-quicklinks-container">
    <span class="sz-quicklinks-label">Shop by category:</span>
    <div class="sz-quicklinks-list">
      <a href="/collections/custom-water-bottles" class="sz-quicklink">Custom Water Bottles</a>
      <a href="/collections/kids" class="sz-quicklink">Kids Custom Water Bottles</a>
      <a href="/collections/holiday" class="sz-quicklink">Holiday Water Bottles</a>
    </div>
  </div>
</div>
{%- endif -%}

<style>
  .sz-collection-hero {
    position: relative;
    min-height: 320px;
    display: flex;
    align-items: center;
    background: #FAF8F5;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .sz-collection-hero {
      min-height: 280px;
    }
  }

  .sz-collection-hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .sz-collection-hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sz-collection-hero-gradient {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #F5F2ED 0%, #E8DED5 50%, #D4CFC6 100%);
  }

  .sz-collection-hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      90deg,
      rgba(250, 248, 245, 0.95) 0%,
      rgba(250, 248, 245, 0.85) 40%,
      rgba(250, 248, 245, 0.6) 100%
    );
  }

  @media (max-width: 768px) {
    .sz-collection-hero-overlay {
      background: rgba(250, 248, 245, 0.92);
    }
  }

  .sz-collection-hero-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px;
    width: 100%;
  }

  @media (max-width: 768px) {
    .sz-collection-hero-content {
      padding: 40px 24px;
      text-align: center;
    }
  }

  .sz-collection-hero-text {
    max-width: 600px;
  }

  @media (max-width: 768px) {
    .sz-collection-hero-text {
      max-width: 100%;
      margin: 0 auto;
    }
  }

  .sz-collection-eyebrow {
    display: inline-block;
    font-family: "Montserrat", sans-serif;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #B5A48A;
    margin-bottom: 12px;
  }

  .sz-collection-title {
    font-family: "Montserrat", sans-serif;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 500;
    line-height: 1.15;
    margin: 0 0 16px 0;
    color: #1F1F1F;
  }

  .sz-collection-description {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    line-height: 1.7;
    color: #4A4A4A;
    margin: 0;
    max-width: 500px;
  }

  .sz-collection-description p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .sz-collection-description {
      font-size: 15px;
      max-width: 100%;
    }
  }

  /* ─── Quick Links Bar ─── */
  .sz-collection-quicklinks {
    background: #FFFFFF;
    padding: 20px;
    border-bottom: 1px solid #E8E4DE;
  }

  .sz-quicklinks-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  @media (max-width: 600px) {
    .sz-quicklinks-container {
      justify-content: center;
    }
  }

  .sz-quicklinks-label {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: #7A7A7A;
  }

  .sz-quicklinks-list {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .sz-quicklink {
    display: inline-block;
    padding: 8px 16px;
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: #4A4A4A;
    background: #FAF8F5;
    border: 1px solid #E8E4DE;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .sz-quicklink:hover {
    background: #1F1F1F;
    color: #FFFFFF;
    border-color: #1F1F1F;
  }
</style>
