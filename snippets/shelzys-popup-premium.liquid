{%- comment -%}
  Shelzy's Designs - Premium Email Popup

  Single consolidated popup with WELCOME10 code
  Add before </body>: {% render 'shelzys-popup-premium' %}
{%- endcomment -%}

<div class="sz-popup-overlay" id="szPopupOverlay">
  <div class="sz-popup-modal">
    <button class="sz-popup-close" onclick="szClosePopup()" aria-label="Close popup">&times;</button>

    <div class="sz-popup-content">
      <div class="sz-popup-image">
        {%- comment -%} Background handled by CSS {%- endcomment -%}
      </div>

      <div class="sz-popup-form-wrap">
        <span class="sz-popup-eyebrow">Welcome to Shelzy's</span>
        <h2 class="sz-popup-title">Get 10% Off</h2>
        <p class="sz-popup-subtitle">Join our list and save on your first order of personalized water bottles.</p>

        <form class="sz-popup-form" id="szPopupForm">
          <input
            type="email"
            id="szPopupEmail"
            placeholder="Enter your email"
            required
            class="sz-popup-input"
          >
          <button type="submit" class="sz-popup-btn">Unlock My 10% Off</button>
        </form>

        <div class="sz-popup-success" id="szPopupSuccess" style="display: none;">
          <p class="sz-popup-code-label">Your discount code:</p>
          <p class="sz-popup-code">WELCOME10</p>
          <a href="/collections/all" class="sz-popup-shop-btn">Start Shopping</a>
        </div>

        <p class="sz-popup-note">No spam. Unsubscribe anytime.</p>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  var overlay = document.getElementById('szPopupOverlay');
  var form = document.getElementById('szPopupForm');
  var success = document.getElementById('szPopupSuccess');
  var STORAGE_KEY = 'szPopupShown';

  // Check if already shown this session or if user already subscribed
  if (sessionStorage.getItem(STORAGE_KEY) || localStorage.getItem('szSubscribed')) return;

  // Don't show on checkout or cart pages
  if (window.location.pathname.includes('/checkout') || window.location.pathname.includes('/cart')) return;

  // Show popup after 25 seconds OR on exit intent (whichever comes first)
  var showTimeout = setTimeout(showPopup, 25000);

  // Exit intent (desktop only) - triggers when mouse leaves viewport at top
  if (window.innerWidth > 768) {
    document.addEventListener('mouseout', function(e) {
      if (e.clientY < 10 && !sessionStorage.getItem(STORAGE_KEY)) {
        clearTimeout(showTimeout);
        showPopup();
      }
    }, { once: true });
  }

  function showPopup() {
    if (sessionStorage.getItem(STORAGE_KEY)) return;
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
    sessionStorage.setItem(STORAGE_KEY, 'true');
  }

  window.szClosePopup = function() {
    overlay.classList.remove('active');
    document.body.style.overflow = '';
  };

  // Close on overlay click
  overlay.addEventListener('click', function(e) {
    if (e.target === overlay) szClosePopup();
  });

  // Close on escape
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') szClosePopup();
  });

  // Handle form submit
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      var email = document.getElementById('szPopupEmail').value;

      // Submit to Shopify (you can also integrate with Klaviyo/Mailchimp)
      fetch('/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: 'form_type=customer&utf8=%E2%9C%93&contact[email]=' + encodeURIComponent(email) + '&contact[tags]=newsletter,popup'
      });

      // Show success
      form.style.display = 'none';
      success.style.display = 'block';

      // Save that they subscribed
      localStorage.setItem('szSubscribed', 'true');
    });
  }
})();
</script>

