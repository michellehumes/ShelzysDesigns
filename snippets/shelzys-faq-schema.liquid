{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Shelzy's Designs",
  "url": "{{ shop.url }}",
  "logo": "{{ 'logo.png' | asset_url }}",
  "description": "Premium personalized water bottles with permanent sublimation printing. Perfect for gifts, kids, holidays, and everyday use.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Encinitas",
    "addressRegion": "CA",
    "addressCountry": "US"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-724-316-8296",
    "contactType": "customer service",
    "email": "hello@shelzysdesigns.com",
    "availableLanguage": "English"
  },
  "sameAs": [
    "https://www.instagram.com/shelzysdesigns",
    "https://www.facebook.com/shelzysdesigns",
    "https://www.pinterest.com/shelzysdesigns"
  ]
}
</script>
