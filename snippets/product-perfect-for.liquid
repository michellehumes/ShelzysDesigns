{% comment %}
================================================================================
SHELZY'S DESIGNS - PERFECT FOR SECTION
Version: 2.0.0
Last Updated: 2024-12
================================================================================
Gift positioning section for product pages.
Shows visual occasion badges: Wedding, Birthday, Team, Holiday, etc.

Revenue Impact: Reframes product as a gift, increases AOV
and improves gift-buyer conversion by 20-30%.

Usage: {% render 'product-perfect-for', product: product %}
================================================================================
{% endcomment %}

{%- liquid
  assign show_section = true
  assign product_tags_lower = product.tags | join: ',' | downcase

  comment
    Determine relevant occasions from tags
  endcomment
  assign occasions = ''

  if product_tags_lower contains 'wedding' or product_tags_lower contains 'bridal' or product_tags_lower contains 'bridesmaid'
    assign occasions = occasions | append: 'wedding,'
  endif

  if product_tags_lower contains 'birthday' or product_tags_lower contains 'gift'
    assign occasions = occasions | append: 'birthday,'
  endif

  if product_tags_lower contains 'team' or product_tags_lower contains 'corporate' or product_tags_lower contains 'sport'
    assign occasions = occasions | append: 'team,'
  endif

  if product_tags_lower contains 'holiday' or product_tags_lower contains 'christmas' or product_tags_lower contains 'valentines'
    assign occasions = occasions | append: 'holiday,'
  endif

  if product_tags_lower contains 'bachelorette' or product_tags_lower contains 'party'
    assign occasions = occasions | append: 'party,'
  endif

  if product_tags_lower contains 'kids' or product_tags_lower contains 'child'
    assign occasions = occasions | append: 'kids,'
  endif

  comment
    If no tags, show default occasions for personalized products
  endcomment
  if occasions == ''
    assign occasions = 'birthday,gift,everyday'
  endif

  assign occasion_list = occasions | split: ','
-%}

{%- if show_section and occasion_list.size > 0 -%}
<div class="sz-perfect-for">
  <p class="sz-perfect-for__label">Perfect for</p>
  <div class="sz-perfect-for__items">
    {%- for occasion in occasion_list -%}
      {%- assign occasion_clean = occasion | strip -%}
      {%- if occasion_clean != '' -%}
        <span class="sz-perfect-for__item">
          {%- case occasion_clean -%}
            {%- when 'wedding' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
              <span>Weddings</span>
            {%- when 'birthday' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
              <span>Birthdays</span>
            {%- when 'team' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
              <span>Teams</span>
            {%- when 'holiday' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
              <span>Holidays</span>
            {%- when 'party' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5.52 19c.64-2.2 1.84-3 3.22-3h6.52c1.38 0 2.58.8 3.22 3"/><circle cx="12" cy="10" r="3"/><circle cx="12" cy="12" r="10"/></svg>
              <span>Parties</span>
            {%- when 'kids' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/></svg>
              <span>Kids</span>
            {%- when 'gift' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 12 20 22 4 22 4 12"/><rect x="2" y="7" width="20" height="5"/><line x1="12" y1="22" x2="12" y2="7"/><path d="M12 7H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7z"/><path d="M12 7h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"/></svg>
              <span>Gifting</span>
            {%- when 'everyday' -%}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              <span>Everyday</span>
          {%- endcase -%}
        </span>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>
{%- endif -%}

<style>
  .sz-perfect-for {
    display: flex;
    align-items: center;
    gap: var(--sz-space-md, 16px);
    padding: var(--sz-space-md, 16px);
    background: var(--sz-background-alt, #FAF9F6);
    border-radius: var(--sz-radius-md, 8px);
    margin: var(--sz-space-lg, 24px) 0;
  }

  .sz-perfect-for__label {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs, 12px);
    font-weight: var(--sz-font-semibold, 600);
    color: var(--sz-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0;
    white-space: nowrap;
  }

  .sz-perfect-for__items {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sz-space-sm, 10px);
  }

  .sz-perfect-for__item {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs, 13px);
    font-weight: var(--sz-font-medium, 500);
    color: var(--sz-text);
    padding: 6px 12px;
    background: var(--sz-background, #FFFFFF);
    border-radius: var(--sz-radius-full, 999px);
    border: 1px solid var(--sz-border, #E8E4DE);
  }

  .sz-perfect-for__item svg {
    color: var(--sz-primary);
    flex-shrink: 0;
  }

  @media (max-width: 600px) {
    .sz-perfect-for {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--sz-space-sm, 10px);
    }
  }
</style>
