<script>
(function() {
  'use strict';

  var menuToggle = document.getElementById('szMenuToggle');
  var mobileMenu = document.getElementById('szMobileMenu');
  var accordions = document.querySelectorAll('.sz-accordion-toggle');
  var header = document.getElementById('szHeader');

  // ═══════════════════════════════════════════════════════════
  // MOBILE MENU
  // ═══════════════════════════════════════════════════════════

  function openMobileMenu() {
    menuToggle.setAttribute('aria-expanded', 'true');
    mobileMenu.classList.add('sz-open');
    mobileMenu.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';

    // Focus first interactive element
    var firstLink = mobileMenu.querySelector('a, button');
    if (firstLink) {
      setTimeout(function() { firstLink.focus(); }, 100);
    }
  }

  function closeMobileMenu() {
    menuToggle.setAttribute('aria-expanded', 'false');
    mobileMenu.classList.remove('sz-open');
    mobileMenu.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    menuToggle.focus();
  }

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', function() {
      var expanded = this.getAttribute('aria-expanded') === 'true';
      if (expanded) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    });
  }

  // ═══════════════════════════════════════════════════════════
  // ACCORDION TOGGLES (Mobile)
  // ═══════════════════════════════════════════════════════════

  accordions.forEach(function(toggle) {
    toggle.addEventListener('click', function() {
      var expanded = this.getAttribute('aria-expanded') === 'true';
      var content = this.nextElementSibling;

      // Close all other accordions
      accordions.forEach(function(other) {
        if (other !== toggle) {
          other.setAttribute('aria-expanded', 'false');
          if (other.nextElementSibling) {
            other.nextElementSibling.classList.remove('sz-open');
          }
        }
      });

      // Toggle this one
      this.setAttribute('aria-expanded', !expanded);
      if (content) {
        content.classList.toggle('sz-open');
      }
    });
  });

  // ═══════════════════════════════════════════════════════════
  // KEYBOARD NAVIGATION
  // ═══════════════════════════════════════════════════════════

  document.addEventListener('keydown', function(e) {
    // Close mobile menu on Escape
    if (e.key === 'Escape' && mobileMenu && mobileMenu.classList.contains('sz-open')) {
      e.preventDefault();
      closeMobileMenu();
    }
  });

  // ═══════════════════════════════════════════════════════════
  // DESKTOP DROPDOWN KEYBOARD SUPPORT
  // ═══════════════════════════════════════════════════════════

  var dropdownItems = document.querySelectorAll('.sz-has-dropdown');

  dropdownItems.forEach(function(item) {
    var link = item.querySelector('.sz-nav-link');
    var dropdown = item.querySelector('.sz-dropdown');

    if (link && dropdown) {
      // Show dropdown on focus
      link.addEventListener('focus', function() {
        link.setAttribute('aria-expanded', 'true');
      });

      // Hide dropdown when focus leaves the item
      item.addEventListener('focusout', function(e) {
        if (!item.contains(e.relatedTarget)) {
          link.setAttribute('aria-expanded', 'false');
        }
      });

      // Enter key opens dropdown links
      link.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && dropdown) {
          var firstLink = dropdown.querySelector('a');
          if (firstLink) {
            e.preventDefault();
            firstLink.focus();
          }
        }
      });
    }
  });

  // ═══════════════════════════════════════════════════════════
  // CART DRAWER TRIGGER (if available)
  // ═══════════════════════════════════════════════════════════

  var cartToggle = document.querySelector('[data-cart-toggle]');
  if (cartToggle) {
    cartToggle.addEventListener('click', function(e) {
      // If cart drawer exists, open it instead of navigating
      var cartDrawer = document.getElementById('szCartDrawer') || document.querySelector('[data-cart-drawer]');
      if (cartDrawer && typeof window.ShelzysCart !== 'undefined' && window.ShelzysCart.open) {
        e.preventDefault();
        window.ShelzysCart.open();
      } else {
        // Fallback: navigate to cart page
        window.location.href = '/cart';
      }
    });
  }

  // ═══════════════════════════════════════════════════════════
  // SEARCH TOGGLE (optional)
  // ═══════════════════════════════════════════════════════════

  var searchToggle = document.querySelector('[data-search-toggle]');
  if (searchToggle) {
    searchToggle.addEventListener('click', function() {
      // Navigate to search page (or implement search modal)
      window.location.href = '/search';
    });
  }

})();
</script>
