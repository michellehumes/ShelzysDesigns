   STYLES
══════════════════════════════════════════════════════════════ {%- endcomment -%}
<style>
  /* ─────────────────────────────────────────────────────────
     HEADER CONTAINER
  ───────────────────────────────────────────────────────── */
  .sz-header {
    background: var(--sz-background, #FFFFFF);
    border-bottom: 1px solid var(--sz-border, #E8E4DE);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .sz-header-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 24px;
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .sz-header-inner {
      padding: 12px 16px;
      gap: 12px;
    }
  }

  /* ─────────────────────────────────────────────────────────
     LOGO
  ───────────────────────────────────────────────────────── */
  .sz-header-logo {
    flex-shrink: 0;
  }

  .sz-logo-link {
    display: block;
  }

  .sz-logo-img {
    height: 44px;
    width: auto;
    display: block;
  }

  .sz-logo-text {
    font-family: var(--sz-font-display, "Playfair Display", Georgia, serif);
    font-size: 22px;
    font-weight: 500;
    color: var(--sz-heading, #1F1F1F);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .sz-logo-img {
      height: 36px;
    }
    .sz-logo-text {
      font-size: 18px;
    }
  }

  /* ─────────────────────────────────────────────────────────
     MAIN NAVIGATION (Desktop)
  ───────────────────────────────────────────────────────── */
  .sz-main-nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 1024px) {
    .sz-main-nav {
      display: none;
    }
  }

  .sz-nav-list {
    display: flex;
    align-items: center;
    gap: 4px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sz-nav-item {
    position: relative;
  }

  .sz-nav-link {
    display: flex;
    align-items: center;
    gap: 5px;
    padding: 10px 14px;
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 14px;
    font-weight: 500;
    color: var(--sz-text, #1F1F1F);
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .sz-nav-link:hover,
  .sz-nav-link:focus {
    color: var(--sz-primary-dark, #4E5F4A);
  }

  .sz-nav-chevron {
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .sz-nav-item:hover .sz-nav-chevron,
  .sz-nav-item:focus-within .sz-nav-chevron {
    transform: rotate(180deg);
  }

  /* Featured Link (Best Sellers) */
  .sz-nav-featured {
    color: var(--sz-primary-dark, #4E5F4A) !important;
    font-weight: 600 !important;
  }

  .sz-nav-featured svg {
    color: var(--sz-accent, #D4AF37);
    flex-shrink: 0;
  }

  /* ─────────────────────────────────────────────────────────
     DROPDOWN MENUS
  ───────────────────────────────────────────────────────── */
  .sz-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: var(--sz-background, #FFFFFF);
    border: 1px solid var(--sz-border, #E8E4DE);
    border-radius: var(--sz-radius-md, 8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s ease;
    min-width: 200px;
    padding: 16px 20px;
    z-index: 100;
  }

  .sz-nav-item:hover .sz-dropdown,
  .sz-nav-item:focus-within .sz-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .sz-dropdown-inner {
    display: flex;
    gap: 32px;
  }

  .sz-dropdown-col {
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 140px;
  }

  .sz-dropdown-heading {
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--sz-text-muted, #7A7A7A);
    padding-bottom: 8px;
    margin-bottom: 4px;
    border-bottom: 1px solid var(--sz-border, #E8E4DE);
  }

  .sz-dropdown-link {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 14px;
    color: var(--sz-text, #1F1F1F);
    text-decoration: none;
    padding: 8px 0;
    transition: color 0.15s ease;
  }

  .sz-dropdown-link:hover,
  .sz-dropdown-link:focus {
    color: var(--sz-primary-dark, #4E5F4A);
  }

  .sz-dropdown-featured {
    color: var(--sz-primary-dark, #4E5F4A) !important;
    font-weight: 600;
  }

  .sz-dropdown-featured svg {
    color: var(--sz-accent, #D4AF37);
  }

  /* Mega Menu (2 columns) */
  .sz-dropdown-mega {
    min-width: 360px;
  }

  .sz-dropdown-mega .sz-dropdown-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  /* ─────────────────────────────────────────────────────────
     HEADER ACTIONS
  ───────────────────────────────────────────────────────── */
  .sz-header-actions {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
  }

  .sz-header-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--sz-text, #1F1F1F);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: color 0.2s ease;
    text-decoration: none;
  }

  .sz-header-icon:hover,
  .sz-header-icon:focus {
    color: var(--sz-primary-dark, #4E5F4A);
  }

  .sz-cart-icon {
    position: relative;
  }

  .sz-cart-count {
    position: absolute;
    top: 2px;
    right: 2px;
    min-width: 18px;
    height: 18px;
    background: var(--sz-primary-dark, #2C3E2D);
    color: #FFFFFF;
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 10px;
    font-weight: 700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sz-cart-count:empty,
  .sz-cart-count[data-cart-count="0"] {
    display: none;
  }

  .sz-hide-mobile {
    display: flex;
  }

  @media (max-width: 768px) {
    .sz-hide-mobile {
      display: none;
    }
  }

  /* ─────────────────────────────────────────────────────────
     MOBILE MENU TOGGLE
  ───────────────────────────────────────────────────────── */
  .sz-menu-toggle {
    display: none;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    order: -1;
  }

  @media (max-width: 1024px) {
    .sz-menu-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .sz-hamburger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 22px;
  }

  .sz-hamburger span {
    height: 2px;
    background: var(--sz-text, #1F1F1F);
    transition: all 0.3s ease;
    border-radius: 1px;
  }

  .sz-menu-toggle[aria-expanded="true"] .sz-hamburger span:nth-child(1) {
    transform: rotate(45deg) translateY(10px);
  }

  .sz-menu-toggle[aria-expanded="true"] .sz-hamburger span:nth-child(2) {
    opacity: 0;
  }

  .sz-menu-toggle[aria-expanded="true"] .sz-hamburger span:nth-child(3) {
    transform: rotate(-45deg) translateY(-10px);
  }

  /* ─────────────────────────────────────────────────────────
     MOBILE MENU OVERLAY
  ───────────────────────────────────────────────────────── */
  .sz-mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--sz-background, #FFFFFF);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    padding-top: 68px;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .sz-mobile-menu.sz-open {
    opacity: 1;
    visibility: visible;
  }

  .sz-mobile-menu-inner {
    padding: 20px;
    max-width: 480px;
  }

  /* Mobile Quick Actions (Best Sellers + Gifts) */
  .sz-mobile-quick-actions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 24px;
  }

  .sz-mobile-quick-btn {
    display: flex;
    align-items: center;
    justify-content: center;
