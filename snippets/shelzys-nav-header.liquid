<style>
  .sz-header {
    background: var(--sz-background, #FFFFFF);
    border-bottom: 1px solid var(--sz-border, #E8E4DE);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .sz-header-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 24px;
    gap: 20px;
  }

  @media (max-width: 1024px) {
    .sz-header-inner { padding: 10px 16px; gap: 12px; }
  }

  .sz-header-logo { flex-shrink: 0; }
  .sz-logo-link { display: block; }
  .sz-logo-img { height: 40px; width: auto; display: block; }
  .sz-logo-text {
    font-family: var(--sz-font-display, "Playfair Display", Georgia, serif);
    font-size: 20px; font-weight: 500; color: var(--sz-heading, #1F1F1F);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .sz-logo-img { height: 34px; }
    .sz-logo-text { font-size: 18px; }
  }

  .sz-main-nav { flex: 1; display: flex; justify-content: center; }
  @media (max-width: 1024px) { .sz-main-nav { display: none; } }

  .sz-nav-list {
    display: flex; align-items: center; gap: 2px;
    list-style: none; margin: 0; padding: 0;
  }

  .sz-nav-item { position: relative; }

  .sz-nav-link {
    display: flex; align-items: center; gap: 4px;
    padding: 10px 12px;
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 14px; font-weight: 500;
    color: var(--sz-text, #1F1F1F);
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap; border-radius: 6px;
  }

  .sz-nav-link:hover, .sz-nav-link:focus { color: var(--sz-primary-dark, #4E5F4A); }

  .sz-nav-chevron { transition: transform 0.2s ease; flex-shrink: 0; opacity: 0.7; }
  .sz-nav-item:hover .sz-nav-chevron,
  .sz-nav-item:focus-within .sz-nav-chevron { transform: rotate(180deg); }

  /* CTA Link - "Customize Yours" */
  .sz-nav-cta {
    background: var(--sz-primary-dark, #4E5F4A);
    color: #FFFFFF !important; font-weight: 600;
    border-radius: 6px; padding: 10px 14px;
  }
  .sz-nav-cta:hover, .sz-nav-cta:focus {
    background: var(--sz-primary, #3A4D3A);
    color: #FFFFFF !important;
  }
  .sz-nav-cta .sz-nav-chevron { opacity: 0.9; }

  /* Dropdown Menus */
  .sz-dropdown {
    position: absolute; top: 100%; left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: var(--sz-background, #FFFFFF);
    border: 1px solid var(--sz-border, #E8E4DE);
    border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
    opacity: 0; visibility: hidden;
    transition: opacity 0.2s ease, visibility 0.2s ease, transform 0.2s ease;
    min-width: 220px; padding: 16px 20px; z-index: 100;
  }

  .sz-nav-item:hover .sz-dropdown,
  .sz-nav-item:focus-within .sz-dropdown {
    opacity: 1; visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .sz-dropdown-wide { min-width: 400px; }
  .sz-dropdown-inner { display: flex; gap: 28px; }
  .sz-dropdown-process { display: grid; grid-template-columns: 1fr 1fr; gap: 24px; }
  .sz-dropdown-col { display: flex; flex-direction: column; gap: 2px; min-width: 150px; }

  .sz-dropdown-heading {
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 10px; font-weight: 700;
    text-transform: uppercase; letter-spacing: 0.12em;
    color: var(--sz-text-muted, #7A7A7A);
    padding-bottom: 10px; margin-bottom: 6px;
    border-bottom: 1px solid var(--sz-border, #E8E4DE);
  }

  .sz-dropdown-link {
    display: flex; align-items: center; gap: 8px;
    font-family: var(--sz-font-body, "Inter", sans-serif);
    font-size: 14px; color: var(--sz-text, #1F1F1F);
    text-decoration: none; padding: 10px 0;
    transition: color 0.15s ease;
  }
  .sz-dropdown-link:hover, .sz-dropdown-link:focus { color: var(--sz-primary-dark, #4E5F4A); }

  .sz-dropdown-featured { color: var(--sz-primary-dark, #4E5F4A) !important; font-weight: 600; }
  .sz-dropdown-featured svg { color: var(--sz-accent, #D4AF37); }

  .sz-dropdown-step { align-items: flex-start; }
  .sz-step-num {
    display: flex; align-items: center; justify-content: center;
    width: 22px; height: 22px;
    background: var(--sz-primary-light, #EDF3EC);
    color: var(--sz-primary-dark, #4E5F4A);
    font-size: 11px; font-weight: 700;
    border-radius: 50%; flex-shrink: 0;
  }

  /* Header Actions */
  .sz-header-actions { display: flex; align-items: center; gap: 4px; flex-shrink: 0; }

  .sz-header-icon {
    display: flex; align-items: center; justify-content: center;
    width: 44px; height: 44px;
    color: var(--sz-text, #1F1F1F);
    background: transparent; border: none; cursor: pointer;
    transition: color 0.2s ease; text-decoration: none; border-radius: 8px;
