{% comment %}
================================================================================
SHELZY'S DESIGNS - HERO BANNER SECTION
Version: 2.0.0
Last Updated: 2024-12
================================================================================
Reusable hero section for all page types.
Fully editor-driven with no hardcoded values.

Features:
- Responsive image with srcset
- Optional overlay with configurable opacity
- Badge, heading, subheading
- Two CTA buttons
- Trust badges
- Scroll indicator
- Container/bleed toggle
- Content positioning
================================================================================
{% endcomment %}

{%- liquid
  assign has_image = false
  if section.settings.background_image != blank
    assign has_image = true
  endif
-%}

<section
  class="sz-hero{% if section.settings.full_width %} sz-hero--bleed{% endif %}"
  style="
    --hero-height: {{ section.settings.height }}vh;
    --hero-height-mobile: {{ section.settings.mobile_height }}vh;
    --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  "
>
  {%- comment -%} Background Media {%- endcomment -%}
  <div class="sz-hero__media">
    {%- if has_image -%}
      {{
        section.settings.background_image
        | image_url: width: 2000
        | image_tag:
          srcset: '800w, 1200w, 1600w, 2000w',
          sizes: '100vw',
          class: 'sz-hero__image',
          loading: 'eager',
          fetchpriority: 'high',
          alt: section.settings.background_image.alt | default: section.settings.heading | default: shop.name
      }}
    {%- else -%}
      <div class="sz-hero__placeholder"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Overlay {%- endcomment -%}
  <div class="sz-hero__overlay" aria-hidden="true"></div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="sz-hero__content">
    <div class="sz-hero__inner sz-hero__inner--{{ section.settings.content_position }}">

      {%- comment -%} Badge {%- endcomment -%}
      {%- if section.settings.badge_text != blank -%}
        <span class="sz-hero__badge sz-animate sz-animate--fade-up">
          {%- if section.settings.badge_icon != 'none' -%}
            <span class="sz-hero__badge-icon">
              {%- case section.settings.badge_icon -%}
                {%- when 'star' -%}
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                {%- when 'heart' -%}
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                {%- when 'sparkle' -%}
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 3l1.5 6.5L20 12l-6.5 1.5L12 20l-1.5-6.5L4 12l6.5-1.5L12 3z"/></svg>
              {%- endcase -%}
            </span>
          {%- endif -%}
          {{ section.settings.badge_text }}
        </span>
      {%- endif -%}

      {%- comment -%} Heading {%- endcomment -%}
      {%- if section.settings.heading != blank -%}
        <h1 class="sz-hero__heading sz-animate sz-animate--fade-up sz-animate--delay-1">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      {%- comment -%} Subheading {%- endcomment -%}
      {%- if section.settings.subheading != blank -%}
        <p class="sz-hero__subheading sz-animate sz-animate--fade-up sz-animate--delay-2">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}

      {%- comment -%} Buttons {%- endcomment -%}
      {%- if section.settings.button_label != blank or section.settings.button_label_2 != blank -%}
        <div class="sz-hero__buttons sz-animate sz-animate--fade-up sz-animate--delay-3">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="sz-hero__btn sz-hero__btn--primary">
              {{ section.settings.button_label }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </a>
          {%- endif -%}
          {%- if section.settings.button_label_2 != blank -%}
            <a href="{{ section.settings.button_link_2 }}" class="sz-hero__btn sz-hero__btn--secondary">
              {{ section.settings.button_label_2 }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- comment -%} Trust Badges {%- endcomment -%}
      {%- if section.settings.show_trust_badges -%}
        <div class="sz-hero__trust sz-animate sz-animate--fade-up sz-animate--delay-4">
          {%- if settings.trust_badge_1 != blank -%}
            <div class="sz-hero__trust-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="M9 12l2 2 4-4"/></svg>
              <span>{{ settings.trust_badge_1 }}</span>
            </div>
          {%- endif -%}
          {%- if settings.trust_badge_2 != blank -%}
            <div class="sz-hero__trust-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
              <span>{{ settings.trust_badge_2 }}</span>
            </div>
          {%- endif -%}
          {%- if settings.trust_badge_3 != blank -%}
            <div class="sz-hero__trust-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
              <span>{{ settings.trust_badge_3 }}</span>
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {%- if section.settings.show_scroll_indicator -%}
    <div class="sz-hero__scroll" aria-hidden="true">
      <span>Scroll</span>
      <div class="sz-hero__scroll-line"></div>
    </div>
  {%- endif -%}
</section>

{% style %}
  /* Hero Container */
  .sz-hero {
    position: relative;
    height: var(--hero-height);
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .sz-hero--bleed {
    margin-inline: calc(var(--sz-container-padding) * -1);
    width: calc(100% + var(--sz-container-padding) * 2);
  }

  @media (max-width: 768px) {
    .sz-hero {
      height: var(--hero-height-mobile);
      min-height: 400px;
    }
  }

  /* Media */
  .sz-hero__media {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .sz-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .sz-hero__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--sz-primary-dark) 0%, var(--sz-primary) 50%, var(--sz-primary-light) 100%);
  }

  /* Overlay */
  .sz-hero__overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, calc(var(--overlay-opacity) * 0.5)) 0%,
      rgba(0, 0, 0, var(--overlay-opacity)) 50%,
      rgba(0, 0, 0, calc(var(--overlay-opacity) * 0.8)) 100%
    );
  }

  /* Content */
  .sz-hero__content {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: var(--sz-container-max);
    margin: 0 auto;
    padding: var(--sz-space-2xl) var(--sz-container-padding);
  }

  .sz-hero__inner {
    display: flex;
    flex-direction: column;
    gap: var(--sz-space-lg);
  }

  .sz-hero__inner--center {
    align-items: center;
    text-align: center;
  }

  .sz-hero__inner--left {
    align-items: flex-start;
    text-align: left;
    max-width: 650px;
  }

  /* Badge */
  .sz-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--sz-space-sm);
    padding: var(--sz-space-sm) var(--sz-space-md);
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--sz-radius-full);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs);
    font-weight: var(--sz-font-semibold);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--sz-background);
  }

  .sz-hero__badge-icon {
    color: var(--sz-accent);
    display: flex;
  }

  /* Heading */
  .sz-hero__heading {
    font-family: var(--sz-font-heading);
    font-size: var(--sz-text-6xl);
    font-weight: var(--sz-font-heading-weight);
    line-height: var(--sz-leading-tight);
    color: var(--sz-background);
    margin: 0;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  /* Subheading */
  .sz-hero__subheading {
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-lg);
    font-weight: var(--sz-font-normal);
    line-height: var(--sz-leading-relaxed);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 600px;
  }

  /* Buttons */
  .sz-hero__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sz-space-md);
    margin-top: var(--sz-space-sm);
  }

  .sz-hero__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--sz-space-sm);
    padding: var(--sz-space-md) var(--sz-space-xl);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-base);
    font-weight: var(--sz-font-semibold);
    text-decoration: none;
    border-radius: var(--sz-radius-full);
    transition: all var(--sz-transition-normal);
  }

  .sz-hero__btn--primary {
    background: var(--sz-background);
    color: var(--sz-heading);
  }

  .sz-hero__btn--primary:hover {
    background: var(--sz-accent);
    color: var(--sz-background);
    transform: translateY(-2px);
    box-shadow: var(--sz-shadow-lg);
  }

  .sz-hero__btn--primary svg {
    transition: transform var(--sz-transition-normal);
  }

  .sz-hero__btn--primary:hover svg {
    transform: translateX(4px);
  }

  .sz-hero__btn--secondary {
    background: transparent;
    color: var(--sz-background);
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .sz-hero__btn--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--sz-background);
  }

  /* Trust Badges */
  .sz-hero__trust {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sz-space-lg);
    margin-top: var(--sz-space-lg);
    padding-top: var(--sz-space-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .sz-hero__trust-item {
    display: flex;
    align-items: center;
    gap: var(--sz-space-sm);
    font-family: var(--sz-font-body);
    font-size: var(--sz-text-xs);
    color: rgba(255, 255, 255, 0.85);
  }

  .sz-hero__trust-item svg {
    color: var(--sz-accent);
  }

  /* Scroll Indicator */
  .sz-hero__scroll {
    position: absolute;
    bottom: var(--sz-space-xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--sz-space-sm);
    color: rgba(255, 255, 255, 0.7);
    font-family: var(--sz-font-body);
    font-size: 11px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .sz-hero__scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, rgba(255,255,255,0.7), transparent);
    animation: sz-scroll-bounce 2s ease-in-out infinite;
  }

  @keyframes sz-scroll-bounce {
    0%, 100% { transform: translateY(0); opacity: 1; }
    50% { transform: translateY(10px); opacity: 0.5; }
  }

  /* Animations */
  .sz-animate {
    opacity: 0;
    transform: translateY(30px);
    animation: sz-fade-up 0.8s ease-out forwards;
  }

  .sz-animate--delay-1 { animation-delay: 0.2s; }
  .sz-animate--delay-2 { animation-delay: 0.4s; }
  .sz-animate--delay-3 { animation-delay: 0.6s; }
  .sz-animate--delay-4 { animation-delay: 0.8s; }

  @keyframes sz-fade-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .sz-animate {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .sz-hero__scroll-line {
      animation: none;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .sz-hero__content {
      padding: var(--sz-space-xl) var(--sz-space-md);
    }

    .sz-hero__buttons {
      flex-direction: column;
      width: 100%;
    }

    .sz-hero__btn {
      width: 100%;
      justify-content: center;
    }

    .sz-hero__trust {
      flex-direction: column;
      gap: var(--sz-space-sm);
    }

    .sz-hero__scroll {
      display: none;
    }
  }
{% endstyle %}

