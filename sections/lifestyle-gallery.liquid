{%- comment -%}
  Shelzy's Designs - Lifestyle Gallery Section
  Instagram-style gallery showcasing real product photos
{%- endcomment -%}

<section class="sz-lifestyle" style="--bg: {{ section.settings.background_color }};">
  <div class="sz-lifestyle-container">

    {%- if section.settings.heading != blank -%}
      <header class="sz-lifestyle-header">
        {%- if section.settings.subheading != blank -%}
          <span class="sz-lifestyle-subheading">{{ section.settings.subheading }}</span>
        {%- endif -%}
        <h2 class="sz-lifestyle-heading">{{ section.settings.heading }}</h2>
        {%- if section.settings.description != blank -%}
          <p class="sz-lifestyle-desc">{{ section.settings.description }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    {%- assign gallery_images = 'lifestyle-bachelorette.webp,bridesmaid-proposal-box.webp,lifestyle-bridal-brunch.webp,lifestyle-couple-pool.png,seasonal-christmas.png,product-elegant-bridal.png,lifestyle-friends-couch.png' | split: ',' -%}
    <div class="sz-lifestyle-grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link | default: '#' }}" class="sz-lifestyle-item sz-lifestyle-{{ block.settings.size }}" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                      {{ block.settings.image | image_url: width: 600 }} 600w,
                      {{ block.settings.image | image_url: width: 800 }} 800w"
              sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 33vw"
              alt="{{ block.settings.caption | default: 'Lifestyle image' }}"
              loading="lazy"
              class="sz-lifestyle-img"
            >
          {%- else -%}
            {%- assign gallery_index = forloop.index0 | modulo: gallery_images.size -%}
            {%- assign default_gallery_image = gallery_images[gallery_index] -%}
            <img
              src="{{ default_gallery_image | asset_url }}"
              alt="{{ block.settings.caption | default: 'Lifestyle image' }}"
              loading="lazy"
              class="sz-lifestyle-img"
            >
          {%- endif -%}

          <div class="sz-lifestyle-overlay">
            {%- if block.settings.caption != blank -%}
              <span class="sz-lifestyle-caption">{{ block.settings.caption }}</span>
            {%- endif -%}
            <span class="sz-lifestyle-cta">
              {{ block.settings.cta_text | default: 'Shop Now' }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </div>
        </a>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_instagram -%}
      <div class="sz-lifestyle-social">
        <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="sz-lifestyle-instagram">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          Follow @{{ section.settings.instagram_handle }} for more inspiration
        </a>
      </div>
    {%- endif -%}

  </div>
</section>

<style>
  .sz-lifestyle {
    padding: 80px 0;
    background: var(--bg, #FFF8F6);
  }

  .sz-lifestyle-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .sz-lifestyle-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .sz-lifestyle-subheading {
    display: block;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--sz-primary, #E8919A);
    margin-bottom: 12px;
  }

  .sz-lifestyle-heading {
    font-family: var(--sz-font-heading, 'Montserrat', sans-serif);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 500;
    color: var(--sz-charcoal, #2D2926);
    margin: 0 0 16px;
  }

  .sz-lifestyle-desc {
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 16px;
    color: var(--sz-gray, #8B8584);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .sz-lifestyle-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: 280px;
    gap: 16px;
  }

  @media (max-width: 1024px) {
    .sz-lifestyle-grid {
      grid-template-columns: repeat(3, 1fr);
      grid-auto-rows: 240px;
    }
  }

  @media (max-width: 768px) {
    .sz-lifestyle-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: 200px;
      gap: 12px;
    }
  }

  @media (max-width: 480px) {
    .sz-lifestyle-grid {
      grid-template-columns: 1fr;
      grid-auto-rows: 280px;
    }
  }

  .sz-lifestyle-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
  }

  .sz-lifestyle-large {
    grid-column: span 2;
    grid-row: span 2;
  }

  @media (max-width: 768px) {
    .sz-lifestyle-large {
      grid-column: span 2;
      grid-row: span 1;
    }
  }

  @media (max-width: 480px) {
    .sz-lifestyle-large {
      grid-column: span 1;
    }
  }

  .sz-lifestyle-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .sz-lifestyle-item:hover .sz-lifestyle-img {
    transform: scale(1.08);
  }

  .sz-lifestyle-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .sz-lifestyle-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(transparent 40%, rgba(0,0,0,0.7) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 24px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .sz-lifestyle-item:hover .sz-lifestyle-overlay {
    opacity: 1;
  }

  .sz-lifestyle-caption {
    font-family: var(--sz-font-heading, 'Montserrat', sans-serif);
    font-size: 1.25rem;
    font-weight: 500;
    color: white;
    margin-bottom: 8px;
  }

  .sz-lifestyle-cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 14px;
    font-weight: 500;
    color: var(--sz-gold, #D4A574);
  }

  .sz-lifestyle-social {
    text-align: center;
    margin-top: 48px;
  }

  .sz-lifestyle-instagram {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 16px;
    font-weight: 500;
    color: var(--sz-charcoal, #2D2926);
    text-decoration: none;
    padding: 16px 32px;
    background: white;
    border-radius: 50px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .sz-lifestyle-instagram:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
  }

  .sz-lifestyle-instagram svg {
    color: var(--sz-primary, #E8919A);
  }
</style>

{% schema %}
{
  "name": "Lifestyle Gallery",
  "tag": "section",
  "class": "sz-lifestyle-section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Real Moments"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "See Our Bottles in Action"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "From bachelorette brunches to wedding day prep, see how brides are celebrating with Shelzy's."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFF8F6"
    },
    {
      "type": "checkbox",
      "id": "show_instagram",
      "label": "Show Instagram CTA",
      "default": true
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram Handle",
      "default": "shelzysdesigns"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
      "default": "https://instagram.com/shelzysdesigns"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "color",
          "id": "placeholder_color",
          "label": "Placeholder Color",
          "default": "#E8919A"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Bachelorette Party"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            { "value": "normal", "label": "Normal" },
            { "value": "large", "label": "Large (2x2)" }
          ],
          "default": "normal"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lifestyle Gallery",
      "blocks": [
        {
          "type": "image",
          "settings": {
            "caption": "Bachelorette Brunch",
            "link": "/collections/bachelorette",
            "size": "large",
            "placeholder_color": "#E8919A"
          }
        },
        {
          "type": "image",
          "settings": {
            "caption": "Bridesmaid Proposal",
            "link": "/collections/bridesmaid-proposal",
            "placeholder_color": "#F5C6CB"
          }
        },
        {
          "type": "image",
          "settings": {
            "caption": "Bridal Party",
            "link": "/collections/bridal-party",
            "placeholder_color": "#D4A574"
          }
        },
        {
          "type": "image",
          "settings": {
            "caption": "Wedding Day",
            "link": "/collections/wedding",
            "placeholder_color": "#C75B6E"
          }
        },
        {
          "type": "image",
          "settings": {
            "caption": "Custom Designs",
            "link": "/collections/all",
            "placeholder_color": "#9CAF88"
          }
        }
      ]
    }
  ]
}
{% endschema %}
