<section class="hero-section">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
      <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
      <a href="{{ section.settings.cta_link }}" class="btn btn-primary">
        {{ section.settings.cta_text }}
      </a>
    </div>
    <div class="hero-image">
      {% if section.settings.hero_image %}
        <img
          src="{{ section.settings.hero_image | img_url: '1200x' }}"
          alt="{{ section.settings.hero_title }}"
          loading="eager"
        >
      {% else %}
        <div class="placeholder-image">Hero Image</div>
      {% endif %}
    </div>
  </div>
</section>

<style>
.hero-section {
  background: {{ section.settings.bg_color }};
  padding: 80px 20px;
}

.hero-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.hero-content {
  text-align: left;
}

.hero-title {
  font-family: 'Playfair Display', Georgia, serif;
  font-weight: 600;
  font-size: 48px;
  line-height: 1.2;
  color: #111111;
  margin-bottom: 1rem;
}

.hero-subtitle {
  font-family: 'Inter', sans-serif;
  font-size: 18px;
  line-height: 1.6;
  color: #111111;
  margin-bottom: 2rem;
}

.btn-primary {
  display: inline-block;
  padding: 14px 28px;
  background: #9CAE8C;
  color: #FFFFFF;
  font-family: 'Inter', sans-serif;
  font-weight: 600;
  font-size: 16px;
  text-decoration: none;
  border-radius: 4px;
  transition: background 0.3s ease;
}

.btn-primary:hover {
  background: #7C9F8C;
}

.hero-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}

.placeholder-image {
  width: 100%;
  height: 500px;
  background: #F7F4EF;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  color: #666;
}

@media (max-width: 768px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: 30px;
  }

  .hero-title {
    font-size: 36px;
  }

  .hero-content {
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Premium Personalized Sublimation Water Bottles"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Custom-made bottles for bridesmaids, weddings, holidays, and every day in between."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}


