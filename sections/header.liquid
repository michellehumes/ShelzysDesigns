{%- comment -%}
  Shelzy's Designs - Header Section (Shopify 2.0)
  Full theme editor customization for navigation
{%- endcomment -%}

<header class="sz-header {% if section.settings.enable_sticky %}sz-header--sticky{% endif %}" id="szHeader">
  <div class="sz-header-inner">

    {%- comment -%} Mobile Menu Toggle {%- endcomment -%}
    <button class="sz-menu-toggle" id="szMenuToggle" aria-label="Open menu" aria-expanded="false">
      <span class="sz-hamburger">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>

    {%- comment -%} Logo {%- endcomment -%}
    <div class="sz-header-logo">
      <a href="/" class="sz-logo-link">
        {%- if section.settings.logo != blank -%}
          <img
            src="{{ section.settings.logo | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            class="sz-logo-img"
            width="{{ section.settings.logo_width }}"
            height="auto"
            loading="eager"
          >
        {%- elsif settings.logo != blank -%}
          <img
            src="{{ settings.logo | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            class="sz-logo-img"
            loading="eager"
          >
        {%- else -%}
          <span class="sz-logo-text">{{ shop.name }}</span>
        {%- endif -%}
      </a>
    </div>

    {%- comment -%} Main Navigation {%- endcomment -%}
    <nav class="sz-main-nav" id="szMainNav" aria-label="Main navigation">
      <ul class="sz-nav-list">
        {%- for block in section.blocks -%}
          {%- case block.type -%}

            {%- when 'nav_link' -%}
              <li class="sz-nav-item" {{ block.shopify_attributes }}>
                <a href="{{ block.settings.link }}" class="sz-nav-link {% if block.settings.highlight %}sz-nav-featured{% endif %}">
                  {%- if block.settings.highlight -%}
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 4px;">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {%- endif -%}
                  {{ block.settings.label }}
                </a>
              </li>

            {%- when 'nav_dropdown' -%}
              <li class="sz-nav-item sz-has-dropdown" {{ block.shopify_attributes }}>
                <a href="{{ block.settings.link }}" class="sz-nav-link">
                  {{ block.settings.label }}
                  <svg class="sz-nav-chevron" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 12 15 18 9"/>
                  </svg>
                </a>
                <div class="sz-dropdown {% if block.settings.mega_menu %}sz-dropdown-mega{% endif %}">
                  <div class="sz-dropdown-inner">
                    {%- if block.settings.col1_heading != blank -%}
                      <div class="sz-dropdown-col">
                        <span class="sz-dropdown-heading">{{ block.settings.col1_heading }}</span>
                        {%- assign col1_links = block.settings.col1_links | split: '|' -%}
                        {%- for link_pair in col1_links -%}
                          {%- assign parts = link_pair | split: ',' -%}
                          {%- if parts.size >= 2 -%}
                            <a href="{{ parts[1] | strip }}" class="sz-dropdown-link">{{ parts[0] | strip }}</a>
                          {%- endif -%}
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.col2_heading != blank -%}
                      <div class="sz-dropdown-col">
                        <span class="sz-dropdown-heading">{{ block.settings.col2_heading }}</span>
                        {%- assign col2_links = block.settings.col2_links | split: '|' -%}
                        {%- for link_pair in col2_links -%}
                          {%- assign parts = link_pair | split: ',' -%}
                          {%- if parts.size >= 2 -%}
                            <a href="{{ parts[1] | strip }}" class="sz-dropdown-link">{{ parts[0] | strip }}</a>
                          {%- endif -%}
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.col3_heading != blank -%}
                      <div class="sz-dropdown-col">
                        <span class="sz-dropdown-heading">{{ block.settings.col3_heading }}</span>
                        {%- assign col3_links = block.settings.col3_links | split: '|' -%}
                        {%- for link_pair in col3_links -%}
                          {%- assign parts = link_pair | split: ',' -%}
                          {%- if parts.size >= 2 -%}
                            <a href="{{ parts[1] | strip }}" class="sz-dropdown-link">{{ parts[0] | strip }}</a>
                          {%- endif -%}
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              </li>

            {%- when 'menu' -%}
              {%- for link in linklists[block.settings.menu].links -%}
                <li class="sz-nav-item {% if link.links.size > 0 %}sz-has-dropdown{% endif %}">
                  <a href="{{ link.url }}" class="sz-nav-link">
                    {{ link.title }}
                    {%- if link.links.size > 0 -%}
                      <svg class="sz-nav-chevron" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"/>
                      </svg>
                    {%- endif -%}
                  </a>
                  {%- if link.links.size > 0 -%}
                    <div class="sz-dropdown">
                      <div class="sz-dropdown-inner">
                        <div class="sz-dropdown-col">
                          {%- for child_link in link.links -%}
                            <a href="{{ child_link.url }}" class="sz-dropdown-link">{{ child_link.title }}</a>
                          {%- endfor -%}
                        </div>
                      </div>
                    </div>
                  {%- endif -%}
                </li>
              {%- endfor -%}

          {%- endcase -%}
        {%- endfor -%}
      </ul>
    </nav>

    {%- comment -%} Header Actions {%- endcomment -%}
    <div class="sz-header-actions">
      {%- if section.settings.show_search -%}
        <a href="/search" class="sz-header-icon" aria-label="Search">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
        </a>
      {%- endif -%}

      {%- if section.settings.show_account -%}
        <a href="/account" class="sz-header-icon sz-hide-mobile" aria-label="Account">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>
          </svg>
        </a>
      {%- endif -%}

      <a href="/cart" class="sz-header-icon sz-cart-icon" aria-label="Cart">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/>
        </svg>
        <span class="sz-cart-count" id="szCartCount">{{ cart.item_count }}</span>
      </a>
    </div>

  </div>
</header>

{%- comment -%} Mobile Menu Overlay {%- endcomment -%}
<div class="sz-mobile-menu" id="szMobileMenu" aria-hidden="true">
  <div class="sz-mobile-menu-inner">
    <nav class="sz-mobile-nav" aria-label="Mobile navigation">
      {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%- when 'nav_link' -%}
            <a href="{{ block.settings.link }}" class="sz-mobile-link {% if block.settings.highlight %}sz-mobile-featured{% endif %}">
              {%- if block.settings.highlight -%}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 6px;">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {%- endif -%}
              {{ block.settings.label }}
            </a>

          {%- when 'nav_dropdown' -%}
            <div class="sz-mobile-accordion">
              <button class="sz-mobile-link sz-accordion-toggle" aria-expanded="false">
                {{ block.settings.label }}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
              </button>
              <div class="sz-accordion-content">
                {%- if block.settings.col1_heading != blank -%}
                  {%- assign col1_links = block.settings.col1_links | split: '|' -%}
                  {%- for link_pair in col1_links -%}
                    {%- assign parts = link_pair | split: ',' -%}
                    {%- if parts.size >= 2 -%}
                      <a href="{{ parts[1] | strip }}" class="sz-mobile-sublink">{{ parts[0] | strip }}</a>
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}
                {%- if block.settings.col2_heading != blank -%}
                  {%- assign col2_links = block.settings.col2_links | split: '|' -%}
                  {%- for link_pair in col2_links -%}
                    {%- assign parts = link_pair | split: ',' -%}
                    {%- if parts.size >= 2 -%}
                      <a href="{{ parts[1] | strip }}" class="sz-mobile-sublink">{{ parts[0] | strip }}</a>
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}
                {%- if block.settings.col3_heading != blank -%}
                  {%- assign col3_links = block.settings.col3_links | split: '|' -%}
                  {%- for link_pair in col3_links -%}
                    {%- assign parts = link_pair | split: ',' -%}
                    {%- if parts.size >= 2 -%}
                      <a href="{{ parts[1] | strip }}" class="sz-mobile-sublink">{{ parts[0] | strip }}</a>
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}
              </div>
            </div>

          {%- when 'menu' -%}
            {%- for link in linklists[block.settings.menu].links -%}
              {%- if link.links.size > 0 -%}
                <div class="sz-mobile-accordion">
                  <button class="sz-mobile-link sz-accordion-toggle" aria-expanded="false">
                    {{ link.title }}
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
                  </button>
                  <div class="sz-accordion-content">
                    {%- for child_link in link.links -%}
                      <a href="{{ child_link.url }}" class="sz-mobile-sublink">{{ child_link.title }}</a>
                    {%- endfor -%}
                  </div>
                </div>
              {%- else -%}
                <a href="{{ link.url }}" class="sz-mobile-link">{{ link.title }}</a>
              {%- endif -%}
            {%- endfor -%}

        {%- endcase -%}
      {%- endfor -%}

      {%- comment -%} Additional mobile links {%- endcomment -%}
      {%- if section.settings.mobile_extra_links != blank -%}
        {%- assign extra_links = section.settings.mobile_extra_links | split: '|' -%}
        {%- for link_pair in extra_links -%}
          {%- assign parts = link_pair | split: ',' -%}
          {%- if parts.size >= 2 -%}
            <a href="{{ parts[1] | strip }}" class="sz-mobile-link">{{ parts[0] | strip }}</a>
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}
    </nav>
  </div>
</div>

{% style %}
  :root {
    --sz-header-bg: {{ section.settings.background_color }};
    --sz-header-text: {{ section.settings.text_color }};
    --sz-header-accent: {{ section.settings.accent_color }};
    --sz-header-border: {{ section.settings.border_color }};
  }

  .sz-header {
    background: var(--sz-header-bg, #FFFFFF);
    border-bottom: 1px solid var(--sz-header-border, #E8E4DE);
    position: relative;
    z-index: 1000;
  }

  .sz-header--sticky {
    position: sticky;
    top: 0;
  }

  .sz-header-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 24px;
    gap: 32px;
  }

  @media (max-width: 1024px) {
    .sz-header-inner {
      padding: 12px 16px;
      gap: 16px;
    }
  }

  .sz-header-logo { flex-shrink: 0; }

  .sz-logo-link { display: block; }

  .sz-logo-img {
    height: {{ section.settings.logo_height }}px;
    width: auto;
    display: block;
  }

  .sz-logo-text {
    font-family: "Montserrat", sans-serif;
    font-size: 24px;
    font-weight: 500;
    color: var(--sz-header-text, #1F1F1F);
  }

  @media (max-width: 768px) {
    .sz-logo-img {
      height: {{ section.settings.logo_height | times: 0.8 }}px;
    }
  }

  .sz-main-nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 1024px) {
    .sz-main-nav { display: none; }
  }

  .sz-nav-list {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .sz-nav-item { position: relative; }

  .sz-nav-link {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 10px 16px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: var(--sz-header-text, #1F1F1F);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .sz-nav-link:hover { color: var(--sz-header-accent, #1a1a1a); }

  .sz-nav-chevron { transition: transform 0.2s ease; }

  .sz-nav-item:hover .sz-nav-chevron { transform: rotate(180deg); }

  .sz-dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(10px);
    background: var(--sz-header-bg, #FFFFFF);
    border: 1px solid var(--sz-header-border, #E8E4DE);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    min-width: 240px;
    padding: 24px;
    z-index: 100;
  }

  .sz-nav-item:hover .sz-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .sz-dropdown-inner {
    display: flex;
    gap: 40px;
  }

  .sz-dropdown-col {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .sz-dropdown-heading {
    font-family: "Inter", sans-serif;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #7A7A7A;
    margin-bottom: 8px;
  }

  .sz-dropdown-link {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: var(--sz-header-text, #1F1F1F);
    text-decoration: none;
    padding: 6px 0;
    transition: color 0.2s ease;
  }

  .sz-dropdown-link:hover { color: var(--sz-header-accent, #1a1a1a); }

  .sz-nav-featured {
    color: var(--sz-header-accent, #1a1a1a) !important;
    font-weight: 600 !important;
  }

  .sz-nav-featured svg { color: #D4AF37; }

  .sz-dropdown-mega { min-width: 600px; }

  .sz-dropdown-mega .sz-dropdown-inner {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .sz-header-actions {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .sz-header-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--sz-header-text, #1F1F1F);
    transition: color 0.2s ease;
  }

  .sz-header-icon:hover { color: var(--sz-header-accent, #1a1a1a); }

  .sz-cart-icon { position: relative; }

  .sz-cart-count {
    position: absolute;
    top: 2px;
    right: 2px;
    min-width: 18px;
    height: 18px;
    background: {{ section.settings.cart_badge_color }};
    color: #FFFFFF;
    font-family: "Inter", sans-serif;
    font-size: 11px;
    font-weight: 600;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sz-cart-count:empty { display: none; }

  .sz-hide-mobile { display: flex; }

  @media (max-width: 768px) {
    .sz-hide-mobile { display: none; }
  }

  .sz-menu-toggle {
    display: none;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    order: -1;
  }

  @media (max-width: 1024px) {
    .sz-menu-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .sz-hamburger {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 22px;
  }

  .sz-hamburger span {
    height: 2px;
    background: var(--sz-header-text, #1F1F1F);
    transition: all 0.3s ease;
  }

  .sz-menu-toggle[aria-expanded="true"] .sz-hamburger span:nth-child(1) {
    transform: rotate(45deg) translateY(10px);
  }

  .sz-menu-toggle[aria-expanded="true"] .sz-hamburger span:nth-child(2) {
    opacity: 0;
  }

  .sz-menu-toggle[aria-expanded="true"] .sz-hamburger span:nth-child(3) {
    transform: rotate(-45deg) translateY(-10px);
  }

  .sz-mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--sz-header-bg, #FFFFFF);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    padding-top: 70px;
    overflow-y: auto;
  }

  .sz-mobile-menu.sz-open {
    opacity: 1;
    visibility: visible;
  }

  .sz-mobile-menu-inner {
    padding: 24px;
    max-width: 400px;
  }

  .sz-mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sz-mobile-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 0;
    font-family: "Inter", sans-serif;
    font-size: 18px;
    font-weight: 500;
    color: var(--sz-header-text, #1F1F1F);
    text-decoration: none;
    border-bottom: 1px solid var(--sz-header-border, #E8E4DE);
    background: none;
    border-top: none;
    border-left: none;
    border-right: none;
    cursor: pointer;
    width: 100%;
    text-align: left;
  }

  .sz-mobile-link:hover { color: var(--sz-header-accent, #1a1a1a); }

  .sz-accordion-toggle svg { transition: transform 0.2s ease; }

  .sz-accordion-toggle[aria-expanded="true"] svg { transform: rotate(180deg); }

  .sz-accordion-content {
    display: none;
    padding-left: 16px;
  }

  .sz-accordion-content.sz-open {
    display: flex;
    flex-direction: column;
  }

  .sz-mobile-sublink {
    display: block;
    padding: 12px 0;
    font-family: "Inter", sans-serif;
    font-size: 15px;
    color: #4A4A4A;
    text-decoration: none;
    border-bottom: 1px solid #F5F2ED;
  }

  .sz-mobile-sublink:hover { color: var(--sz-header-accent, #1a1a1a); }

  .sz-mobile-featured {
    color: var(--sz-header-accent, #1a1a1a) !important;
    font-weight: 600 !important;
    background: linear-gradient(90deg, rgba(78, 95, 74, 0.08) 0%, transparent 100%);
  }

  .sz-mobile-featured svg { color: #D4AF37; }
{% endstyle %}

<script>
(function() {
  var menuToggle = document.getElementById('szMenuToggle');
  var mobileMenu = document.getElementById('szMobileMenu');
  var accordions = document.querySelectorAll('.sz-accordion-toggle');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', function() {
      var expanded = this.getAttribute('aria-expanded') === 'true';
      this.setAttribute('aria-expanded', !expanded);
      mobileMenu.classList.toggle('sz-open');
      mobileMenu.setAttribute('aria-hidden', expanded);
      document.body.style.overflow = expanded ? '' : 'hidden';
    });
  }

  accordions.forEach(function(toggle) {
    toggle.addEventListener('click', function() {
      var expanded = this.getAttribute('aria-expanded') === 'true';
      this.setAttribute('aria-expanded', !expanded);
      this.nextElementSibling.classList.toggle('sz-open');
    });
  });

  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileMenu && mobileMenu.classList.contains('sz-open')) {
      menuToggle.setAttribute('aria-expanded', 'false');
      mobileMenu.classList.remove('sz-open');
      mobileMenu.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
  });
})();
</script>

