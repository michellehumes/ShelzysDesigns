{%- comment -%}
  Shelzy's Designs - Featured Collection Section
  Display products from a selected collection
{%- endcomment -%}

{%- assign collection = collections[section.settings.collection] -%}

<section class="sz-featured-collection" style="background: {{ section.settings.background_color }};">
  <div class="sz-featured-collection-inner">

    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="sz-featured-collection-header" style="text-align: {{ section.settings.header_alignment }};">
        {%- if section.settings.subheading != blank -%}
          <p class="sz-featured-collection-subheading" style="color: {{ section.settings.accent_color }};">{{ section.settings.subheading }}</p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="sz-featured-collection-heading" style="color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="sz-featured-collection-description" style="color: {{ section.settings.text_color }};">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="sz-featured-collection-grid sz-grid-{{ section.settings.columns }}">
      {%- for product in collection.products limit: section.settings.products_to_show -%}
        <div class="sz-product-card">
          <a href="{{ product.url }}" class="sz-product-card-link">
            <div class="sz-product-card-image">
              {%- if product.featured_image != blank -%}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
                >
                {%- if product.images.size > 1 and section.settings.show_secondary_image -%}
                  <img
                    src="{{ product.images[1] | image_url: width: 600 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    loading="lazy"
                    class="sz-product-card-image-hover"
                  >
                {%- endif -%}
              {%- else -%}
                <div class="sz-product-card-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/>
                  </svg>
                </div>
              {%- endif -%}

              {%- if section.settings.show_badges -%}
                <div class="sz-product-card-badges">
                  {%- if product.available == false -%}
                    <span class="sz-badge sz-badge--soldout">Sold Out</span>
                  {%- elsif product.compare_at_price > product.price -%}
                    {%- assign savings = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price -%}
                    <span class="sz-badge sz-badge--sale">{{ savings }}% Off</span>
                  {%- endif -%}
                  {%- if product.tags contains 'bestseller' -%}
                    <span class="sz-badge sz-badge--bestseller">Best Seller</span>
                  {%- endif -%}
                  {%- if product.tags contains 'new' -%}
                    <span class="sz-badge sz-badge--new">New</span>
                  {%- endif -%}
                </div>
              {%- endif -%}

              {%- if section.settings.show_quick_add and product.available -%}
                <div class="sz-product-card-quick-add">
                  <button type="button" class="sz-quick-add-btn" data-product-handle="{{ product.handle }}">
                    Quick Add
                  </button>
                </div>
              {%- endif -%}
            </div>

            <div class="sz-product-card-info">
              {%- if section.settings.show_vendor and product.vendor != blank -%}
                <p class="sz-product-card-vendor">{{ product.vendor }}</p>
              {%- endif -%}

              <h3 class="sz-product-card-title">{{ product.title }}</h3>

              <div class="sz-product-card-price">
                {%- if product.compare_at_price > product.price -%}
                  <span class="sz-price sz-price--sale">{{ product.price | money }}</span>
                  <span class="sz-price sz-price--compare">{{ product.compare_at_price | money }}</span>
                {%- else -%}
                  <span class="sz-price">{{ product.price | money }}</span>
                {%- endif -%}
              </div>

              {%- if section.settings.show_rating and product.metafields.reviews.rating.value != blank -%}
                <div class="sz-product-card-rating">
                  {%- assign rating = product.metafields.reviews.rating.value | round: 1 -%}
                  <div class="sz-stars" style="--rating: {{ rating }};">★★★★★</div>
                  <span class="sz-rating-count">({{ product.metafields.reviews.rating_count.value }})</span>
                </div>
              {%- endif -%}
            </div>
          </a>
        </div>
      {%- else -%}
        {%- for i in (1..section.settings.products_to_show) -%}
          <div class="sz-product-card sz-product-card--placeholder">
            <div class="sz-product-card-image">
              <div class="sz-product-card-placeholder">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/>
                </svg>
              </div>
            </div>
            <div class="sz-product-card-info">
              <h3 class="sz-product-card-title">Product Title</h3>
              <div class="sz-product-card-price">
                <span class="sz-price">$0.00</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all and collection != blank -%}
      <div class="sz-featured-collection-footer">
        <a href="{{ collection.url }}" class="sz-view-all-btn" style="background: {{ section.settings.button_color }}; color: {{ section.settings.button_text_color }};">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {%- endif -%}

  </div>
</section>

{% style %}
  .sz-featured-collection {
    padding: {{ section.settings.padding_top }}px 24px {{ section.settings.padding_bottom }}px;
  }

  .sz-featured-collection-inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  .sz-featured-collection-header {
    margin-bottom: 48px;
  }

  .sz-featured-collection-subheading {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin: 0 0 12px 0;
  }

  .sz-featured-collection-heading {
    font-family: "Playfair Display", Georgia, serif;
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 500;
    margin: 0 0 16px 0;
  }

  .sz-featured-collection-description {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.8;
  }

  .sz-featured-collection-grid {
    display: grid;
    gap: 24px;
  }

  .sz-grid-2 { grid-template-columns: repeat(2, 1fr); }
  .sz-grid-3 { grid-template-columns: repeat(3, 1fr); }
  .sz-grid-4 { grid-template-columns: repeat(4, 1fr); }
  .sz-grid-5 { grid-template-columns: repeat(5, 1fr); }

  @media (max-width: 1024px) {
    .sz-grid-4, .sz-grid-5 { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 768px) {
    .sz-grid-3, .sz-grid-4, .sz-grid-5 { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 480px) {
    .sz-featured-collection-grid { gap: 16px; }
  }

  .sz-product-card {
    position: relative;
  }

  .sz-product-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .sz-product-card-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #F5F2ED;
    margin-bottom: 16px;
  }

  .sz-product-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .sz-product-card-image-hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .sz-product-card:hover .sz-product-card-image img:first-child {
    transform: scale(1.05);
  }

  .sz-product-card:hover .sz-product-card-image-hover {
    opacity: 1;
  }

  .sz-product-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #CCCCCC;
  }

  .sz-product-card-badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .sz-badge {
    font-family: "Inter", sans-serif;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 6px 10px;
  }

  .sz-badge--sale { background: #C41E3A; color: #FFFFFF; }
  .sz-badge--soldout { background: #1F1F1F; color: #FFFFFF; }
  .sz-badge--bestseller { background: #D4AF37; color: #1F1F1F; }
  .sz-badge--new { background: #4E5F4A; color: #FFFFFF; }

  .sz-product-card-quick-add {
    position: absolute;
    bottom: 12px;
    left: 12px;
    right: 12px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .sz-product-card:hover .sz-product-card-quick-add {
    opacity: 1;
    transform: translateY(0);
  }

  .sz-quick-add-btn {
    width: 100%;
    padding: 12px;
    background: #FFFFFF;
    border: none;
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .sz-quick-add-btn:hover {
    background: #F5F2ED;
  }

  .sz-product-card-info {
    text-align: {{ section.settings.text_alignment }};
  }

  .sz-product-card-vendor {
    font-family: "Inter", sans-serif;
    font-size: 12px;
    color: #7A7A7A;
    margin: 0 0 4px 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sz-product-card-title {
    font-family: "Inter", sans-serif;
    font-size: 15px;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    margin: 0 0 8px 0;
    line-height: 1.4;
  }

  .sz-product-card-price {
    display: flex;
    gap: 8px;
    justify-content: {{ section.settings.text_alignment }};
    align-items: center;
  }

  .sz-price {
    font-family: "Inter", sans-serif;
    font-size: 15px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
  }

  .sz-price--sale { color: #C41E3A; }

  .sz-price--compare {
    font-weight: 400;
    color: #7A7A7A;
    text-decoration: line-through;
    font-size: 14px;
  }

  .sz-product-card-rating {
    display: flex;
    gap: 6px;
    align-items: center;
    justify-content: {{ section.settings.text_alignment }};
    margin-top: 8px;
  }

  .sz-stars {
    font-size: 14px;
    color: #D4AF37;
    background: linear-gradient(90deg, #D4AF37 calc(var(--rating) / 5 * 100%), #E0E0E0 calc(var(--rating) / 5 * 100%));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .sz-rating-count {
    font-family: "Inter", sans-serif;
    font-size: 12px;
    color: #7A7A7A;
  }

  .sz-featured-collection-footer {
    text-align: center;
    margin-top: 48px;
  }

  .sz-view-all-btn {
    display: inline-block;
    padding: 16px 40px;
    font-family: "Inter", sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .sz-view-all-btn:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }
{% endstyle %}

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "sz-featured-collection-section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ],
      "default": "4"
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop Our Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Sellers"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "header_alignment",
      "label": "Header alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Product Cards"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show second image on hover",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show product badges",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add button",
      "default": true
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
