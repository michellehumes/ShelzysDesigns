      "label": "Button text",
      "default": "View All Products"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#2C3E2D"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
