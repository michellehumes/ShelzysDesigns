{%- comment -%}
  Shelzy's Designs - SZ Hero Section
  Campaign-ready hero with image/video support, CTAs, and accessibility
{%- endcomment -%}

<section
  class="sz-hero"
  role="banner"
  aria-label="{{ section.settings.heading | escape }}"
  style="--hero-height: {{ section.settings.height }}vh; --mobile-height: {{ section.settings.mobile_height }}vh; --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  {%- comment -%} Media: Image or Video {%- endcomment -%}
  <div class="sz-hero__media">
    {%- if section.settings.media_type == 'video' and section.settings.video_url != blank -%}
      <video
        class="sz-hero__video"
        autoplay
        muted
        loop
        playsinline
        poster="{{ section.settings.background_image | image_url: width: 1920 }}"
        aria-hidden="true"
      >
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.background_image != blank -%}
      <img
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        srcset="{{ section.settings.background_image | image_url: width: 800 }} 800w,
                {{ section.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.background_image | image_url: width: 1600 }} 1600w,
                {{ section.settings.background_image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.background_image.alt | default: section.settings.heading }}"
        class="sz-hero__image"
        loading="eager"
        fetchpriority="high"
      >
    {%- else -%}
      <div class="sz-hero__placeholder" aria-hidden="true"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Overlay {%- endcomment -%}
  <div class="sz-hero__overlay" aria-hidden="true"></div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="sz-hero__container">
    <div class="sz-hero__content sz-hero__content--{{ section.settings.content_position }}">
      {%- if section.settings.badge_text != blank -%}
        <span class="sz-hero__badge sz-hero__animate" aria-label="Promotion">
          {%- case section.settings.badge_icon -%}
            {%- when 'flower' -%}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 22c-1.1 0-2-.9-2-2h4c0 1.1-.9 2-2 2zm0-18c-1.66 0-3 1.34-3 3v1.07C7.85 8.52 7 9.65 7 11v6l-2 2v1h14v-1l-2-2v-6c0-1.35-.85-2.48-2-2.93V7c0-1.66-1.34-3-3-3zm0 2.5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5S10.5 8.83 10.5 8s.67-1.5 1.5-1.5z"/></svg>
            {%- when 'star' -%}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            {%- when 'heart' -%}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
            {%- when 'sparkle' -%}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 3l1.5 6.5L20 12l-6.5 1.5L12 20l-1.5-6.5L4 12l6.5-1.5L12 3z"/></svg>
          {%- endcase -%}
          {{ section.settings.badge_text }}
        </span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="sz-hero__heading sz-hero__animate sz-hero__animate--delay-1">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="sz-hero__subheading sz-hero__animate sz-hero__animate--delay-2">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}

      <div class="sz-hero__actions sz-hero__animate sz-hero__animate--delay-3">
        {%- if section.settings.button_label != blank -%}
          <a
            href="{{ section.settings.button_link }}"
            class="sz-hero__btn sz-hero__btn--primary"
            {% if section.settings.button_link contains 'http' %}target="_blank" rel="noopener"{% endif %}
          >
            {{ section.settings.button_label }}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </a>
        {%- endif -%}

        {%- if section.settings.button_label_2 != blank -%}
          <a
            href="{{ section.settings.button_link_2 }}"
            class="sz-hero__btn sz-hero__btn--secondary"
            {% if section.settings.button_link_2 contains 'http' %}target="_blank" rel="noopener"{% endif %}
          >
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
    <div class="sz-hero__scroll" aria-hidden="true">
      <span>Scroll</span>
      <div class="sz-hero__scroll-line"></div>
    </div>
  {%- endif -%}
</section>

<style>
  .sz-hero {
    position: relative;
    height: var(--hero-height);
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .sz-hero {
      height: var(--mobile-height);
      min-height: 400px;
    }
  }

  .sz-hero__media {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .sz-hero__image,
  .sz-hero__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .sz-hero__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2C3E2D 0%, #4E5F4A 50%, #8BAA88 100%);
  }

  .sz-hero__overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, calc(var(--overlay-opacity) * 0.5)) 0%,
      rgba(0, 0, 0, var(--overlay-opacity)) 50%,
      rgba(0, 0, 0, calc(var(--overlay-opacity) * 0.8)) 100%
    );
  }

  .sz-hero__container {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 24px;
  }

  .sz-hero__content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .sz-hero__content--center {
    align-items: center;
    text-align: center;
  }

  .sz-hero__content--left {
    align-items: flex-start;
    text-align: left;
    max-width: 650px;
  }

  .sz-hero__content--right {
    align-items: flex-end;
    text-align: right;
    max-width: 650px;
    margin-left: auto;
  }

  .sz-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #fff;
  }

  .sz-hero__badge svg {
    color: #D4AF37;
  }

  .sz-hero__heading {
    font-family: "Playfair Display", Georgia, serif;
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 500;
    line-height: 1.1;
    color: #fff;
    margin: 0;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .sz-hero__subheading {
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: clamp(1rem, 2vw, 1.25rem);
    font-weight: 400;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 600px;
  }

  .sz-hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-top: 12px;
  }

  .sz-hero__btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .sz-hero__btn--primary {
    background: #fff;
    color: #2C3E2D;
  }

  .sz-hero__btn--primary:hover {
    background: #D4AF37;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .sz-hero__btn--primary svg {
    transition: transform 0.3s ease;
  }

  .sz-hero__btn--primary:hover svg {
    transform: translateX(4px);
  }

  .sz-hero__btn--secondary {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .sz-hero__btn--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #fff;
  }

  .sz-hero__scroll {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.7);
    font-family: "Inter", sans-serif;
    font-size: 11px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .sz-hero__scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, rgba(255,255,255,0.7), transparent);
    animation: sz-hero-scroll-bounce 2s ease-in-out infinite;
  }

  @keyframes sz-hero-scroll-bounce {
    0%, 100% { transform: translateY(0); opacity: 1; }
    50% { transform: translateY(10px); opacity: 0.5; }
  }

  /* Animations */
  .sz-hero__animate {
    opacity: 0;
    transform: translateY(30px);
    animation: sz-hero-fade-up 0.8s ease-out forwards;
  }

  .sz-hero__animate--delay-1 { animation-delay: 0.2s; }
  .sz-hero__animate--delay-2 { animation-delay: 0.4s; }
  .sz-hero__animate--delay-3 { animation-delay: 0.6s; }

  @keyframes sz-hero-fade-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sz-hero__animate {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .sz-hero__scroll-line {
      animation: none;
    }
  }

  @media (max-width: 768px) {
    .sz-hero__container {
      padding: 30px 20px;
    }

    .sz-hero__actions {
      flex-direction: column;
      width: 100%;
    }

    .sz-hero__btn {
      width: 100%;
      justify-content: center;
    }

    .sz-hero__scroll {
      display: none;
    }
  }
</style>

{% schema %}
{
  "name": "SZ Hero",
  "tag": "section",
  "class": "sz-section-hero",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (MP4)",
      "info": "Used when Media Type is Video"
    },
    {
      "type": "range",
      "id": "height",
      "label": "Desktop Height",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 90,
      "unit": "vh"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "label": "Mobile Height",
      "min": 40,
      "max": 100,
      "step": 5,
      "default": 75,
      "unit": "vh"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 35,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Badge"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "New Collection"
    },
    {
      "type": "select",
      "id": "badge_icon",
      "label": "Badge Icon",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "flower", "label": "Flower" },
        { "value": "star", "label": "Star" },
        { "value": "heart", "label": "Heart" },
        { "value": "sparkle", "label": "Sparkle" }
      ],
      "default": "sparkle"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Fresh Starts Deserve Fresh Style"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our newest collection of personalized bottles."
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "center", "label": "Center" },
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Primary CTA"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Secondary CTA"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Extras"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show Scroll Indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "SZ Hero"
    }
  ]
}
{% endschema %}
