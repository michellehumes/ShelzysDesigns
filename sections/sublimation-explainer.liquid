{%- comment -%}
  Shelzy's Designs - Sublimation Explainer Section
  Explains the permanent sublimation printing advantage
{%- endcomment -%}

<section class="sz-explainer">
  <div class="sz-explainer-container">

    <div class="sz-explainer-grid">
      <div class="sz-explainer-media">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="Sublimation printing process"
            loading="lazy"
            class="sz-explainer-img"
          >
        {%- else -%}
          <div class="sz-explainer-placeholder">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
          </div>
        {%- endif -%}

        <div class="sz-explainer-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
          Permanent • Dishwasher Safe • Won't Peel
        </div>
      </div>

      <div class="sz-explainer-content">
        <span class="sz-explainer-subheading">{{ section.settings.subheading }}</span>
        <h2 class="sz-explainer-heading">{{ section.settings.heading }}</h2>

        <div class="sz-explainer-comparison">
          <div class="sz-explainer-vs sz-explainer-bad">
            <span class="sz-explainer-vs-label">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              Vinyl (Others)
            </span>
            <ul>
              <li>Peels after washing</li>
              <li>Cracks over time</li>
              <li>Fades in sunlight</li>
              <li>Not dishwasher safe</li>
            </ul>
          </div>

          <div class="sz-explainer-vs sz-explainer-good">
            <span class="sz-explainer-vs-label">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              Sublimation (Shelzy's)
            </span>
            <ul>
              <li>Infused into coating</li>
              <li>Never peels or cracks</li>
              <li>Vibrant forever</li>
              <li>100% dishwasher safe</li>
            </ul>
          </div>
        </div>

        <p class="sz-explainer-text">{{ section.settings.description }}</p>

        <div class="sz-explainer-cta">
          <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="sz-explainer-btn">
            {{ section.settings.button_text | default: 'Shop Now' }}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          {%- if section.settings.secondary_text != blank -%}
            <a href="{{ section.settings.secondary_link | default: '/pages/about' }}" class="sz-explainer-link">
              {{ section.settings.secondary_text }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .sz-explainer {
    padding: 100px 0;
    background: var(--sz-charcoal, #2D2926);
    color: white;
  }

  .sz-explainer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .sz-explainer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }

  @media (max-width: 900px) {
    .sz-explainer-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }
  }

  .sz-explainer-media {
    position: relative;
  }

  .sz-explainer-img {
    width: 100%;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.4);
  }

  .sz-explainer-placeholder {
    aspect-ratio: 4/3;
    background: rgba(255,255,255,0.05);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--sz-primary, #E8919A);
  }

  .sz-explainer-badge {
    position: absolute;
    bottom: -16px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 13px;
    font-weight: 600;
    color: var(--sz-charcoal, #2D2926);
    background: white;
    padding: 12px 24px;
    border-radius: 50px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.2);
    white-space: nowrap;
  }

  .sz-explainer-badge svg {
    color: var(--sz-sage, #9CAF88);
  }

  .sz-explainer-subheading {
    display: block;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--sz-primary, #E8919A);
    margin-bottom: 12px;
  }

  .sz-explainer-heading {
    font-family: var(--sz-font-heading, 'Montserrat', sans-serif);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 500;
    color: white;
    margin: 0 0 32px;
    line-height: 1.2;
  }

  .sz-explainer-comparison {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    margin-bottom: 24px;
  }

  @media (max-width: 500px) {
    .sz-explainer-comparison {
      grid-template-columns: 1fr;
    }
  }

  .sz-explainer-vs {
    padding: 20px;
    border-radius: 12px;
  }

  .sz-explainer-bad {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
  }

  .sz-explainer-good {
    background: rgba(156, 175, 136, 0.15);
    border: 1px solid rgba(156, 175, 136, 0.3);
  }

  .sz-explainer-vs-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .sz-explainer-bad .sz-explainer-vs-label svg {
    color: #E57373;
  }

  .sz-explainer-good .sz-explainer-vs-label svg {
    color: var(--sz-sage, #9CAF88);
  }

  .sz-explainer-vs ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .sz-explainer-vs li {
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 13px;
    color: rgba(255,255,255,0.8);
    padding: 4px 0;
    padding-left: 20px;
    position: relative;
  }

  .sz-explainer-bad li::before {
    content: '✕';
    position: absolute;
    left: 0;
    color: #E57373;
    font-size: 11px;
  }

  .sz-explainer-good li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--sz-sage, #9CAF88);
    font-weight: bold;
  }

  .sz-explainer-text {
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 16px;
    color: rgba(255,255,255,0.8);
    line-height: 1.7;
    margin: 0 0 32px;
  }

  .sz-explainer-cta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
  }

  .sz-explainer-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 14px;
    font-weight: 600;
    color: var(--sz-charcoal, #2D2926);
    background: white;
    border-radius: 8px;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .sz-explainer-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(255,255,255,0.2);
  }

  .sz-explainer-link {
    font-family: var(--sz-font-body, 'Montserrat', sans-serif);
    font-size: 14px;
    font-weight: 500;
    color: var(--sz-primary, #E8919A);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  .sz-explainer-link:hover {
    border-color: var(--sz-primary, #E8919A);
  }
</style>

{% schema %}
{
  "name": "Sublimation Explainer",
  "tag": "section",
  "class": "sz-explainer-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The Shelzy's Difference"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Permanent Sublimation Printing That Never Peels"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Unlike vinyl stickers that peel and crack, our sublimation process infuses the design directly into the bottle's coating. The result is a vibrant, permanent personalization that's completely dishwasher safe and built to last a lifetime."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "secondary_text",
      "label": "Secondary link text",
      "default": "Learn About Our Process"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary link"
    }
  ],
  "presets": [
    {
      "name": "Sublimation Explainer"
    }
  ]
}
{% endschema %}
