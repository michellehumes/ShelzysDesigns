    </div>
  </div>
{%- endif -%}

{% style %}
  .sz-announcement {
    padding: 10px 16px;
    text-align: center;
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .sz-announcement-inner {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }

  .sz-announcement-link,
  .sz-announcement-text {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: inherit;
    text-decoration: none;
  }

  .sz-announcement-link:hover {
    text-decoration: underline;
  }

  .sz-announcement-icon {
    display: flex;
    align-items: center;
  }

  /* Slider styles */
  .sz-announcement--slider .sz-announcement-slider {
    position: relative;
    overflow: hidden;
  }

  .sz-announcement-slide {
    display: none;
    animation: szFadeIn 0.5s ease;
  }

  .sz-announcement-slide.sz-active {
    display: block;
  }

  @keyframes szFadeIn {
    from { opacity: 0; transform: translateY(-5px); }
    to { opacity: 1; transform: translateY(0); }
  }
{% endstyle %}

{%- if section.blocks.size > 1 and section.settings.enable_slider -%}
  <script>
  (function() {
    var slides = document.querySelectorAll('#szAnnouncementSlider .sz-announcement-slide');
    var currentIndex = 0;
    var interval = {{ section.settings.slider_speed | times: 1000 }};

    if (slides.length > 1) {
      setInterval(function() {
        slides[currentIndex].classList.remove('sz-active');
        currentIndex = (currentIndex + 1) % slides.length;
        slides[currentIndex].classList.add('sz-active');
      }, interval);
    }
  })();
  </script>
{%- endif -%}

