{%- comment -%}
  Shelzy's Designs - Footer Section (Shopify 2.0)
  Full theme editor customization for footer
{%- endcomment -%}

<footer class="sz-footer">
  <div class="sz-footer-container">

    {%- comment -%} Top Section: Columns {%- endcomment -%}
    <div class="sz-footer-top">

      {%- comment -%} Brand Column {%- endcomment -%}
      <div class="sz-footer-brand">
        {%- if section.settings.logo != blank -%}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="sz-footer-logo">
        {%- elsif settings.logo != blank -%}
          <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="sz-footer-logo">
        {%- else -%}
          <span class="sz-footer-logo-text">{{ shop.name }}</span>
        {%- endif -%}

        <p class="sz-footer-tagline">{{ section.settings.tagline }}</p>

