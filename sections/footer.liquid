              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Dynamic Menu Columns from Blocks {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%- when 'menu_column' -%}
            <div class="sz-footer-col" {{ block.shopify_attributes }}>
              <h4 class="sz-footer-heading">{{ block.settings.heading }}</h4>
              <nav class="sz-footer-nav" aria-label="{{ block.settings.heading }}">
                {%- for link in linklists[block.settings.menu].links -%}
                  <a href="{{ link.url }}">{{ link.title }}</a>
                {%- endfor -%}
              </nav>
            </div>

          {%- when 'custom_column' -%}
            <div class="sz-footer-col" {{ block.shopify_attributes }}>
              <h4 class="sz-footer-heading">{{ block.settings.heading }}</h4>
              <nav class="sz-footer-nav" aria-label="{{ block.settings.heading }}">
                {%- assign custom_links = block.settings.links | split: '|' -%}
                {%- for link_pair in custom_links -%}
                  {%- assign parts = link_pair | split: ',' -%}
                  {%- if parts.size >= 2 -%}
                    <a href="{{ parts[1] | strip }}">{{ parts[0] | strip }}</a>
                  {%- endif -%}
                {%- endfor -%}
              </nav>
            </div>

          {%- when 'newsletter' -%}
            <div class="sz-footer-col sz-footer-newsletter" {{ block.shopify_attributes }}>
              <h4 class="sz-footer-heading">{{ block.settings.heading }}</h4>
              <p class="sz-footer-newsletter-text">{{ block.settings.description }}</p>
              <form class="sz-footer-form" action="/contact" method="POST">
                <input type="hidden" name="form_type" value="customer">
                <input type="hidden" name="utf8" value="✓">
                <input type="hidden" name="contact[tags]" value="newsletter,footer">
                <div class="sz-footer-form-row">
                  <input
                    type="email"
                    name="contact[email]"
                    placeholder="{{ block.settings.placeholder }}"
                    required
                    class="sz-footer-input"
                    aria-label="Email address"
                  >
                  <button type="submit" class="sz-footer-submit">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
                    </svg>
                  </button>
                </div>
              </form>
            </div>

        {%- endcase -%}
      {%- endfor -%}

    </div>

    {%- comment -%} Bottom Section {%- endcomment -%}
    <div class="sz-footer-bottom">
      <p class="sz-footer-copyright">
        © {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </p>
      {%- if section.settings.show_payment_icons -%}
        <div class="sz-footer-payments">
          {{ shop.enabled_payment_types | payment_type_svg_tag }}
        </div>
      {%- endif -%}
    </div>

  </div>
</footer>

{% style %}
  :root {
    --sz-footer-bg: {{ section.settings.background_color }};
    --sz-footer-text: {{ section.settings.text_color }};
    --sz-footer-muted: {{ section.settings.muted_color }};
    --sz-footer-border: {{ section.settings.border_color }};
  }

  .sz-footer {
    background: var(--sz-footer-bg, #2C3E2D);
    color: var(--sz-footer-text, #FFFFFF);
    padding: 80px 24px 40px;
  }

  @media (max-width: 768px) {
    .sz-footer {
      padding: 60px 16px 32px;
    }
  }

  .sz-footer-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .sz-footer-top {
    display: grid;
    grid-template-columns: 1.5fr repeat(auto-fit, minmax(150px, 1fr));
    gap: 40px;
    padding-bottom: 60px;
    border-bottom: 1px solid var(--sz-footer-border, rgba(255, 255, 255, 0.1));
  }

  @media (max-width: 1200px) {
    .sz-footer-top {
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
    }

    .sz-footer-brand {
      grid-column: 1 / -1;
    }

    .sz-footer-newsletter {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 768px) {
    .sz-footer-top {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }
  }

  @media (max-width: 500px) {
    .sz-footer-top {
      grid-template-columns: 1fr;
      gap: 28px;
    }

    .sz-footer-brand,
    .sz-footer-newsletter {
      grid-column: 1 / -1;
    }
  }

  .sz-footer-brand {
    max-width: 300px;
  }

  .sz-footer-logo {
    height: 40px;
    width: auto;
    margin-bottom: 20px;
    filter: brightness(0) invert(1);
  }

  .sz-footer-logo-text {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 28px;
    font-weight: 500;
    display: block;
    margin-bottom: 20px;
  }

  .sz-footer-tagline {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    line-height: 1.7;
    color: var(--sz-footer-muted, rgba(255, 255, 255, 0.8));
    margin: 0 0 24px 0;
  }

  .sz-footer-social {
    display: flex;
    gap: 12px;
  }

  .sz-footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--sz-footer-text, #FFFFFF);
    transition: all 0.2s ease;
  }

  .sz-footer-social a:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .sz-footer-heading {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--sz-footer-text, #FFFFFF);
    margin: 0 0 20px 0;
  }

  .sz-footer-nav {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .sz-footer-nav a {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    color: var(--sz-footer-muted, rgba(255, 255, 255, 0.75));
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .sz-footer-nav a:hover {
    color: var(--sz-footer-text, #FFFFFF);
  }

  .sz-footer-newsletter-text {
    font-family: "Inter", sans-serif;
    font-size: 14px;
    line-height: 1.6;
    color: var(--sz-footer-muted, rgba(255, 255, 255, 0.75));
    margin: 0 0 20px 0;
  }

  .sz-footer-form-row {
    display: flex;
    gap: 0;
  }

  .sz-footer-input {
    flex: 1;
    padding: 14px 16px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-right: none;
    color: var(--sz-footer-text, #FFFFFF);
    font-family: "Inter", sans-serif;
    font-size: 14px;
  }

  .sz-footer-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .sz-footer-input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.15);
  }

  .sz-footer-submit {
    padding: 14px 18px;
    background: var(--sz-footer-text, #FFFFFF);
    border: none;
    color: var(--sz-footer-bg, #2C3E2D);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .sz-footer-submit:hover {
    opacity: 0.9;
  }

  .sz-footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 32px;
    flex-wrap: wrap;
    gap: 16px;
  }

  .sz-footer-copyright {
    font-family: "Inter", sans-serif;
    font-size: 13px;
    color: var(--sz-footer-muted, rgba(255, 255, 255, 0.6));
    margin: 0;
  }

  .sz-footer-payments {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .sz-footer-payments svg {
    height: 24px;
    width: auto;
    opacity: 0.7;
  }
{% endstyle %}

