{%- comment -%}
  Blog CTA Snippets

  Usage:
  - Top CTA: {% render 'blog-cta', position: 'top' %}
  - Bottom CTA: {% render 'blog-cta', position: 'bottom' %}

  Features:
  - Callout box at top of blog posts
  - Product showcase at bottom of blog posts
  - Links back to Shelzy's products
{%- endcomment -%}

{%- liquid
  assign position = position | default: 'top'
  assign cta_collection = collections['best-sellers']
-%}

{%- if position == 'top' -%}
  {%- comment -%} Top of Blog Post CTA {%- endcomment -%}
  <div class="blog-cta-box blog-cta-box--top">
    <div class="blog-cta-box__icon">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#9CAE8C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M8 2h8v4H8z"/>
        <path d="M6 6h12v16a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V6z"/>
        <path d="M12 10v6"/>
        <path d="M9 13h6"/>
      </svg>
    </div>
    <h4 class="blog-cta-box__title">Want a custom bottle to match this vibe?</h4>
    <p class="blog-cta-box__text">Create your own personalized water bottle with permanent sublimation printing that never peels or fades.</p>
    <a href="/collections/best-sellers" class="btn btn-primary">Shop Shelzy's Personalized Bottles</a>
  </div>

{%- elsif position == 'bottom' -%}
  {%- comment -%} Bottom of Blog Post - Shop Section {%- endcomment -%}
  <div class="blog-cta-shop blog-cta-box--bottom">
    <h4 class="blog-cta-shop__title">Shop Shelzy's Designs</h4>
    <p class="blog-cta-shop__subtitle">Explore our best-selling personalized bottles</p>

    <div class="blog-cta-shop__products">
      {%- for product in cta_collection.products limit: 3 -%}
        <a href="{{ product.url }}" class="blog-cta-product">
          <div class="blog-cta-product__image">
            {%- if product.featured_image -%}
              <img
                src="{{ product.featured_image | image_url: width: 200 }}"
                alt="{{ product.title | escape }}"
                loading="lazy"
              >
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <h5 class="blog-cta-product__title">{{ product.title }}</h5>
          <span class="blog-cta-product__price">{{ product.price | money }}</span>
        </a>
      {%- else -%}
        {%- comment -%} Placeholder products {%- endcomment -%}
        {%- for i in (1..3) -%}
          <div class="blog-cta-product">
            <div class="blog-cta-product__image blog-cta-product__placeholder">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <h5 class="blog-cta-product__title">Personalized Bottle</h5>
            <span class="blog-cta-product__price">$32.00</span>
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>

    <a href="/collections/all" class="btn btn-secondary blog-cta-shop__view-all">View All Products</a>
  </div>
{%- endif -%}

<style>
/* Top CTA Box */
.blog-cta-box--top {
  background: linear-gradient(135deg, #F7F4EF 0%, #FFFFFF 100%);
  border: 2px solid #9CAE8C;
  border-radius: 12px;
  padding: 2rem;
  margin: 2rem 0;
  text-align: center;
}

.blog-cta-box__icon {
  margin-bottom: 1rem;
}

.blog-cta-box__title {
  font-family: 'Poppins', sans-serif;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 0.75rem;
  color: #111111;
}

.blog-cta-box__text {
  font-size: 15px;
  color: #666666;
  margin-bottom: 1.25rem;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

/* Bottom Shop Section */
.blog-cta-shop {
  background: #F7F4EF;
  border-radius: 12px;
  padding: 2.5rem;
  margin: 3rem 0 0;
  text-align: center;
}

.blog-cta-shop__title {
  font-family: 'Poppins', sans-serif;
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #111111;
}

.blog-cta-shop__subtitle {
  font-size: 15px;
  color: #666666;
  margin-bottom: 2rem;
}

.blog-cta-shop__products {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.blog-cta-product {
  text-decoration: none;
  color: inherit;
  background: #FFFFFF;
  border-radius: 8px;
  padding: 1rem;
  transition: box-shadow 0.3s ease, transform 0.3s ease;
}

.blog-cta-product:hover {
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  transform: translateY(-4px);
}

.blog-cta-product__image {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  border-radius: 6px;
  overflow: hidden;
  background: #F7F4EF;
  margin-bottom: 0.75rem;
}

.blog-cta-product__image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.blog-cta-product__placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.blog-cta-product__placeholder svg {
  position: absolute;
  width: 50%;
  opacity: 0.3;
}

.blog-cta-product__title {
  font-family: 'Inter', sans-serif;
  font-size: 14px;
  font-weight: 500;
  margin: 0 0 0.25rem;
  line-height: 1.3;
}

.blog-cta-product__price {
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: #9CAE8C;
}

.blog-cta-shop__view-all {
  margin-top: 0.5rem;
}

@media (max-width: 600px) {
  .blog-cta-shop__products {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .blog-cta-product {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-align: left;
  }

  .blog-cta-product__image {
    width: 80px;
    padding-bottom: 80px;
    flex-shrink: 0;
    margin-bottom: 0;
  }
}
</style>
