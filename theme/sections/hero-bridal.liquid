{%- comment -%}
<!-- SHELZYS_DESIGNS: START hero-bridal -->
  Bridal-Focused Hero Section for Homepage
  - Single strong image (no slideshow)
  - Wedding/bridal party focus
  - Dual CTAs: Shop Bridal Sets + Shop All Bottles
<!-- SHELZYS_DESIGNS: END hero-bridal -->
{%- endcomment -%}

<section class="hero-bridal">
  <div class="hero-bridal__container">
    {%- comment -%} Hero Image {%- endcomment -%}
    <div class="hero-bridal__media">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1400 }}"
          srcset="{{ section.settings.image | image_url: width: 800 }} 800w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 1400 }} 1400w"
          sizes="(max-width: 900px) 100vw, 50vw"
          alt="{{ section.settings.image_alt | default: 'Personalized water bottles for bridal parties' }}"
          class="hero-bridal__image"
          loading="eager"
          fetchpriority="high"
        >
      {%- else -%}
        <div class="hero-bridal__placeholder">
          {%- comment -%} Custom water bottle placeholder illustration {%- endcomment -%}
          <div class="hero-placeholder__bottles">
            <svg class="bottle-svg bottle-1" viewBox="0 0 60 180" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="15" y="30" width="30" height="140" rx="8" fill="#E8E8E8"/>
              <rect x="18" y="0" width="24" height="30" rx="4" fill="#D0D0D0"/>
              <rect x="20" y="50" width="20" height="40" rx="2" fill="#00B4D8" opacity="0.3"/>
              <text x="30" y="75" text-anchor="middle" fill="#00B4D8" font-size="8" font-weight="600">Sarah</text>
            </svg>
            <svg class="bottle-svg bottle-2" viewBox="0 0 60 180" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="15" y="30" width="30" height="140" rx="8" fill="#F0F0F0"/>
              <rect x="18" y="0" width="24" height="30" rx="4" fill="#E0E0E0"/>
              <rect x="20" y="50" width="20" height="40" rx="2" fill="#FF6B6B" opacity="0.3"/>
              <text x="30" y="75" text-anchor="middle" fill="#FF6B6B" font-size="8" font-weight="600">Emily</text>
            </svg>
            <svg class="bottle-svg bottle-3" viewBox="0 0 60 180" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="15" y="30" width="30" height="140" rx="8" fill="#E8E8E8"/>
              <rect x="18" y="0" width="24" height="30" rx="4" fill="#D0D0D0"/>
              <rect x="20" y="50" width="20" height="40" rx="2" fill="#00B4D8" opacity="0.3"/>
              <text x="30" y="75" text-anchor="middle" fill="#00B4D8" font-size="8" font-weight="600">Bride</text>
            </svg>
          </div>
          <p class="hero-placeholder__hint">Upload your hero image in theme settings</p>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Hero Content {%- endcomment -%}
    <div class="hero-bridal__content">
      {%- comment -%} Kicker / Overline {%- endcomment -%}
      <span class="hero-bridal__kicker">{{ section.settings.kicker }}</span>

      {%- comment -%} Main Headline {%- endcomment -%}
      <h1 class="hero-bridal__title">{{ section.settings.title }}</h1>

      {%- comment -%} Supporting Copy {%- endcomment -%}
      <p class="hero-bridal__description">{{ section.settings.description }}</p>

      {%- comment -%} Benefit Pills {%- endcomment -%}
      <ul class="hero-bridal__benefits">
        {%- for block in section.blocks -%}
          {%- if block.type == 'benefit' -%}
            <li class="hero-bridal__benefit" {{ block.shopify_attributes }}>
              <svg class="benefit-check" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M13.78 4.22a.75.75 0 010 1.06l-7.25 7.25a.75.75 0 01-1.06 0L2.22 9.28a.75.75 0 011.06-1.06L6 10.94l6.72-6.72a.75.75 0 011.06 0z"/>
              </svg>
              {{ block.settings.text }}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

      {%- comment -%} CTAs {%- endcomment -%}
      <div class="hero-bridal__ctas">
        {%- if section.settings.primary_cta_text != blank -%}
          <a href="{{ section.settings.primary_cta_link }}" class="btn btn-primary btn-lg" data-shelzys="cta" data-cta-type="hero-primary">
            {{ section.settings.primary_cta_text }}
          </a>
        {%- endif -%}
        {%- if section.settings.secondary_cta_text != blank -%}
          <a href="{{ section.settings.secondary_cta_link }}" class="btn btn-secondary" data-shelzys="cta" data-cta-type="hero-secondary">
            {{ section.settings.secondary_cta_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
/* SHELZYS_DESIGNS: START hero-bridal-styles */
.hero-bridal {
  background: var(--color-bg-secondary);
  padding: 0;
  overflow: hidden;
}

.hero-bridal__container {
  max-width: 1400px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: 600px;
  align-items: center;
}

.hero-bridal__media {
  position: relative;
  height: 100%;
  min-height: 500px;
}

.hero-bridal__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  inset: 0;
}

.hero-bridal__placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #E0F7FA 0%, #B2EBF2 30%, #80DEEA 60%, #4DD0E1 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.hero-bridal__placeholder::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
  animation: shimmer 8s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(20%, 20%); }
}

.hero-placeholder__bottles {
  display: flex;
  gap: 20px;
  align-items: flex-end;
  position: relative;
  z-index: 1;
}

.bottle-svg {
  height: 200px;
  width: auto;
  filter: drop-shadow(0 10px 30px rgba(0,0,0,0.15));
  transition: transform 0.3s ease;
}

.bottle-svg.bottle-1 { transform: rotate(-8deg); }
.bottle-svg.bottle-2 { height: 220px; }
.bottle-svg.bottle-3 { transform: rotate(8deg); }

.hero-bridal__placeholder:hover .bottle-1 { transform: rotate(-5deg) translateY(-10px); }
.hero-bridal__placeholder:hover .bottle-2 { transform: translateY(-15px); }
.hero-bridal__placeholder:hover .bottle-3 { transform: rotate(5deg) translateY(-10px); }

.hero-placeholder__hint {
  position: relative;
  z-index: 1;
  margin-top: 30px;
  font-size: 13px;
  color: rgba(0,0,0,0.5);
  background: rgba(255,255,255,0.7);
  padding: 8px 16px;
  border-radius: 20px;
  backdrop-filter: blur(4px);
}

.hero-bridal__content {
  padding: 60px 60px 60px 80px;
  max-width: 600px;
}

.hero-bridal__kicker {
  display: inline-block;
  font-family: var(--font-heading);
  font-size: 13px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: var(--color-pool-blue);
  margin-bottom: 16px;
}

.hero-bridal__title {
  font-family: var(--font-heading);
  font-size: clamp(32px, 4.5vw, 52px);
  font-weight: 700;
  line-height: 1.1;
  letter-spacing: -0.02em;
  color: var(--color-text-primary);
  margin: 0 0 20px;
}

.hero-bridal__description {
  font-size: 17px;
  line-height: 1.7;
  color: var(--color-text-secondary);
  margin: 0 0 24px;
}

.hero-bridal__benefits {
  list-style: none;
  padding: 0;
  margin: 0 0 32px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.hero-bridal__benefit {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 15px;
  color: var(--color-text-secondary);
}

.benefit-check {
  color: var(--color-pool-blue);
  flex-shrink: 0;
}

.hero-bridal__ctas {
  display: flex;
  flex-wrap: wrap;
  gap: 14px;
}

/* Responsive */
@media (max-width: 1100px) {
  .hero-bridal__content {
    padding: 50px 40px;
  }
}

@media (max-width: 900px) {
  .hero-bridal__container {
    grid-template-columns: 1fr;
    min-height: auto;
  }

  .hero-bridal__media {
    min-height: 350px;
    order: -1;
  }

  .hero-bridal__content {
    padding: 40px 24px 50px;
    text-align: center;
    max-width: none;
  }

  .hero-bridal__benefits {
    align-items: center;
  }

  .hero-bridal__ctas {
    justify-content: center;
  }
}

@media (max-width: 500px) {
  .hero-bridal__ctas {
    flex-direction: column;
    width: 100%;
  }

  .hero-bridal__ctas .btn {
    width: 100%;
  }
}
/* SHELZYS_DESIGNS: END hero-bridal-styles */
</style>

