{%- comment -%}
<!-- SHELZYS_DESIGNS: START hero-bridal -->
  Bridal-Focused Hero Section for Homepage
  - Single strong image (no slideshow)
  - Wedding/bridal party focus
  - Dual CTAs: Shop Bridal Sets + Shop All Bottles
<!-- SHELZYS_DESIGNS: END hero-bridal -->
{%- endcomment -%}

<section class="hero-bridal">
  <div class="hero-bridal__container">
    {%- comment -%} Hero Image {%- endcomment -%}
    <div class="hero-bridal__media">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1400 }}"
          srcset="{{ section.settings.image | image_url: width: 800 }} 800w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 1400 }} 1400w"
          sizes="(max-width: 900px) 100vw, 50vw"
          alt="{{ section.settings.image_alt | default: 'Personalized water bottles for bridal parties' }}"
          class="hero-bridal__image"
          loading="eager"
          fetchpriority="high"
        >
      {%- else -%}
        <div class="hero-bridal__visual">
          {%- comment -%} Production-ready hero visual with illustrated bottles {%- endcomment -%}
          <div class="hero-visual__bg"></div>
          <div class="hero-visual__content">
            {%- comment -%} Decorative sparkles {%- endcomment -%}
            <div class="hero-sparkle hero-sparkle--1"></div>
            <div class="hero-sparkle hero-sparkle--2"></div>
            <div class="hero-sparkle hero-sparkle--3"></div>

            {%- comment -%} Bottle illustrations {%- endcomment -%}
            <div class="hero-bottles">
              <div class="hero-bottle hero-bottle--1">
                <svg viewBox="0 0 80 220" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <defs>
                    <linearGradient id="bottle1grad" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" stop-color="#FFFFFF"/>
                      <stop offset="100%" stop-color="#E8E8E8"/>
                    </linearGradient>
                  </defs>
                  <rect x="18" y="40" width="44" height="165" rx="10" fill="url(#bottle1grad)"/>
                  <rect x="22" y="0" width="36" height="40" rx="6" fill="#D4D4D4"/>
                  <rect x="28" y="60" width="24" height="50" rx="4" fill="#00B4D8" fill-opacity="0.2"/>
                  <text x="40" y="92" text-anchor="middle" fill="#00B4D8" font-size="11" font-weight="700" font-family="sans-serif">Maid of</text>
                  <text x="40" y="105" text-anchor="middle" fill="#00B4D8" font-size="11" font-weight="700" font-family="sans-serif">Honor</text>
                  <ellipse cx="40" cy="180" rx="18" ry="4" fill="rgba(0,0,0,0.1)"/>
                </svg>
              </div>
              <div class="hero-bottle hero-bottle--2">
                <svg viewBox="0 0 80 220" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <defs>
                    <linearGradient id="bottle2grad" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" stop-color="#FFFFFF"/>
                      <stop offset="100%" stop-color="#F0F0F0"/>
                    </linearGradient>
                  </defs>
                  <rect x="18" y="40" width="44" height="165" rx="10" fill="url(#bottle2grad)"/>
                  <rect x="22" y="0" width="36" height="40" rx="6" fill="#E8B4B4"/>
                  <rect x="28" y="60" width="24" height="50" rx="4" fill="#FF6B6B" fill-opacity="0.25"/>
                  <text x="40" y="92" text-anchor="middle" fill="#E85555" font-size="14" font-weight="700" font-family="sans-serif">BRIDE</text>
                  <circle cx="40" cy="140" r="8" fill="#FFD700" fill-opacity="0.3"/>
                  <text x="40" y="144" text-anchor="middle" fill="#D4A500" font-size="10">♥</text>
                  <ellipse cx="40" cy="180" rx="18" ry="4" fill="rgba(0,0,0,0.1)"/>
                </svg>
              </div>
              <div class="hero-bottle hero-bottle--3">
                <svg viewBox="0 0 80 220" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <defs>
                    <linearGradient id="bottle3grad" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" stop-color="#FFFFFF"/>
                      <stop offset="100%" stop-color="#E8E8E8"/>
                    </linearGradient>
                  </defs>
                  <rect x="18" y="40" width="44" height="165" rx="10" fill="url(#bottle3grad)"/>
                  <rect x="22" y="0" width="36" height="40" rx="6" fill="#D4D4D4"/>
                  <rect x="28" y="60" width="24" height="50" rx="4" fill="#00B4D8" fill-opacity="0.2"/>
                  <text x="40" y="92" text-anchor="middle" fill="#00B4D8" font-size="10" font-weight="700" font-family="sans-serif">Brides-</text>
                  <text x="40" y="105" text-anchor="middle" fill="#00B4D8" font-size="10" font-weight="700" font-family="sans-serif">maid</text>
                  <ellipse cx="40" cy="180" rx="18" ry="4" fill="rgba(0,0,0,0.1)"/>
                </svg>
              </div>
            </div>

            {%- comment -%} Decorative rings {%- endcomment -%}
            <div class="hero-ring hero-ring--1"></div>
            <div class="hero-ring hero-ring--2"></div>
          </div>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Hero Content {%- endcomment -%}
    <div class="hero-bridal__content">
      {%- comment -%} Kicker / Overline {%- endcomment -%}
      <span class="hero-bridal__kicker">{{ section.settings.kicker }}</span>

      {%- comment -%} Main Headline {%- endcomment -%}
      <h1 class="hero-bridal__title">{{ section.settings.title }}</h1>

      {%- comment -%} Supporting Copy {%- endcomment -%}
      <p class="hero-bridal__description">{{ section.settings.description }}</p>

      {%- comment -%} Benefit Pills {%- endcomment -%}
      <ul class="hero-bridal__benefits">
        {%- for block in section.blocks -%}
          {%- if block.type == 'benefit' -%}
            <li class="hero-bridal__benefit" {{ block.shopify_attributes }}>
              <svg class="benefit-check" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <path d="M13.78 4.22a.75.75 0 010 1.06l-7.25 7.25a.75.75 0 01-1.06 0L2.22 9.28a.75.75 0 011.06-1.06L6 10.94l6.72-6.72a.75.75 0 011.06 0z"/>
              </svg>
              {{ block.settings.text }}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>

      {%- comment -%} CTAs {%- endcomment -%}
      <div class="hero-bridal__ctas">
        {%- if section.settings.primary_cta_text != blank -%}
          <a href="{{ section.settings.primary_cta_link }}" class="btn btn-primary btn-lg" data-shelzys="cta" data-cta-type="hero-primary">
            {{ section.settings.primary_cta_text }}
          </a>
        {%- endif -%}
        {%- if section.settings.secondary_cta_text != blank -%}
          <a href="{{ section.settings.secondary_cta_link }}" class="btn btn-secondary" data-shelzys="cta" data-cta-type="hero-secondary">
            {{ section.settings.secondary_cta_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
/* SHELZYS_DESIGNS: START hero-bridal-styles */
.hero-bridal {
  background: var(--color-bg-secondary);
  padding: 0;
  overflow: hidden;
}

.hero-bridal__container {
  max-width: 1400px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: 600px;
  align-items: center;
}

.hero-bridal__media {
  position: relative;
  height: 100%;
  min-height: 500px;
}

.hero-bridal__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  inset: 0;
}

/* Production Hero Visual */
.hero-bridal__visual {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.hero-visual__bg {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    #FFF8F0 0%,
    #FFE4D6 20%,
    #F5E6DC 40%,
    #E8F4F8 60%,
    #D4EEF6 80%,
    #C5E8F2 100%
  );
}

.hero-visual__bg::before {
  content: '';
  position: absolute;
  inset: 0;
  background:
    radial-gradient(circle at 20% 80%, rgba(255, 107, 107, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 80% 20%, rgba(0, 180, 216, 0.12) 0%, transparent 45%),
    radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.8) 0%, transparent 60%);
}

.hero-visual__content {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Animated sparkles */
.hero-sparkle {
  position: absolute;
  width: 8px;
  height: 8px;
  background: #FFD700;
  border-radius: 50%;
  animation: sparkle 3s ease-in-out infinite;
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
}

.hero-sparkle--1 { top: 20%; left: 15%; animation-delay: 0s; }
.hero-sparkle--2 { top: 35%; right: 20%; animation-delay: 1s; }
.hero-sparkle--3 { bottom: 30%; left: 25%; animation-delay: 2s; }

@keyframes sparkle {
  0%, 100% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

/* Bottle display */
.hero-bottles {
  display: flex;
  gap: 30px;
  align-items: flex-end;
  padding: 40px;
}

.hero-bottle {
  filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.15));
  transition: transform 0.4s ease;
}

.hero-bottle svg {
  height: 240px;
  width: auto;
}

.hero-bottle--1 { transform: rotate(-8deg) translateY(15px); }
.hero-bottle--2 svg { height: 280px; }
.hero-bottle--3 { transform: rotate(8deg) translateY(15px); }

.hero-bridal__visual:hover .hero-bottle--1 {
  transform: rotate(-5deg) translateY(5px);
}
.hero-bridal__visual:hover .hero-bottle--2 {
  transform: translateY(-10px);
}
.hero-bridal__visual:hover .hero-bottle--3 {
  transform: rotate(5deg) translateY(5px);
}

/* Decorative rings */
.hero-ring {
  position: absolute;
  border: 2px solid rgba(0, 180, 216, 0.15);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.hero-ring--1 {
  width: 150px;
  height: 150px;
  top: 10%;
  right: 10%;
  animation-delay: 0s;
}

.hero-ring--2 {
  width: 100px;
  height: 100px;
  bottom: 20%;
  left: 10%;
  animation-delay: 3s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-15px) rotate(5deg); }
}

.hero-bridal__content {
  padding: 60px 60px 60px 80px;
  max-width: 600px;
}

.hero-bridal__kicker {
  display: inline-block;
  font-family: var(--font-heading);
  font-size: 13px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: var(--color-pool-blue);
  margin-bottom: 16px;
}

.hero-bridal__title {
  font-family: var(--font-heading);
  font-size: clamp(32px, 4.5vw, 52px);
  font-weight: 700;
  line-height: 1.1;
  letter-spacing: -0.02em;
  color: var(--color-text-primary);
  margin: 0 0 20px;
}

.hero-bridal__description {
  font-size: 17px;
  line-height: 1.7;
  color: var(--color-text-secondary);
  margin: 0 0 24px;
}

.hero-bridal__benefits {
  list-style: none;
  padding: 0;
  margin: 0 0 32px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.hero-bridal__benefit {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 15px;
  color: var(--color-text-secondary);
}

.benefit-check {
  color: var(--color-pool-blue);
  flex-shrink: 0;
}

.hero-bridal__ctas {
  display: flex;
  flex-wrap: wrap;
  gap: 14px;
}

/* Responsive */
@media (max-width: 1100px) {
  .hero-bridal__content {
    padding: 50px 40px;
  }
}

@media (max-width: 900px) {
  .hero-bridal__container {
    grid-template-columns: 1fr;
    min-height: auto;
  }

  .hero-bridal__media {
    min-height: 350px;
    order: -1;
  }

  .hero-bridal__content {
    padding: 40px 24px 50px;
    text-align: center;
    max-width: none;
  }

  .hero-bridal__benefits {
    align-items: center;
  }

  .hero-bridal__ctas {
    justify-content: center;
  }

  /* Hero visual responsive */
  .hero-bottles {
    gap: 15px;
    padding: 30px 20px;
  }

  .hero-bottle svg {
    height: 180px;
  }

  .hero-bottle--2 svg {
    height: 210px;
  }

  .hero-ring--1 {
    width: 100px;
    height: 100px;
  }

  .hero-ring--2 {
    width: 70px;
    height: 70px;
  }
}

@media (max-width: 500px) {
  .hero-bridal__ctas {
    flex-direction: column;
    width: 100%;
  }

  .hero-bridal__ctas .btn {
    width: 100%;
  }
}
/* SHELZYS_DESIGNS: END hero-bridal-styles */
</style>

