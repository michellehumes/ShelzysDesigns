{%- comment -%}
  Shop by Occasion Section
  Features:
  - Image tiles for Weddings, Corporate Events, etc.
  - Configurable tiles with images, titles, descriptions
  - Links to collections
{%- endcomment -%}

<section class="shop-by-occasion-section section-padding" style="background: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      {%- if section.settings.section_subtitle != blank -%}
        <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="occasion-grid occasion-grid--{{ section.blocks.size }}">
      {%- for block in section.blocks -%}
        {%- comment -%} Check if collection has products {%- endcomment -%}
        {%- assign collection = collections[block.settings.collection] -%}
        {%- assign show_tile = true -%}

        {%- if block.settings.hide_if_empty and collection.products.size < 3 -%}
          {%- assign show_tile = false -%}
        {%- endif -%}

        {%- if show_tile -%}
          <a href="{{ block.settings.link | default: collection.url }}" class="occasion-tile" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <img
                class="occasion-tile__image"
                src="{{ block.settings.image | image_url: width: 800 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            {%- else -%}
              <div class="occasion-tile__image occasion-tile__placeholder">
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}

            <div class="occasion-tile__overlay"></div>

            <div class="occasion-tile__content">
              <h3 class="occasion-tile__title">{{ block.settings.title }}</h3>
              {%- if block.settings.description != blank -%}
                <p class="occasion-tile__description">{{ block.settings.description }}</p>
              {%- endif -%}
              <span class="occasion-tile__link">
                Shop Now
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 8H13M13 8L9 4M13 8L9 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
.shop-by-occasion-section {
  background: #FFFFFF;
}

.occasion-grid {
  display: grid;
  gap: 30px;
}

.occasion-grid--2 {
  grid-template-columns: repeat(2, 1fr);
}

.occasion-grid--3 {
  grid-template-columns: repeat(3, 1fr);
}

.occasion-grid--4 {
  grid-template-columns: repeat(2, 1fr);
}

.occasion-tile {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  min-height: 350px;
  display: flex;
  align-items: flex-end;
  text-decoration: none;
}

.occasion-tile__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.occasion-tile:hover .occasion-tile__image {
  transform: scale(1.05);
}

.occasion-tile__placeholder {
  background: #F7F4EF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.occasion-tile__placeholder svg {
  width: 50%;
  opacity: 0.3;
}

.occasion-tile__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 60%);
}

.occasion-tile__content {
  position: relative;
  z-index: 1;
  padding: 2rem;
  color: #FFFFFF;
  width: 100%;
}

.occasion-tile__title {
  font-family: 'Poppins', sans-serif;
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 0.5rem;
  color: #FFFFFF;
}

.occasion-tile__description {
  font-size: 15px;
  margin-bottom: 1rem;
  opacity: 0.9;
  line-height: 1.5;
}

.occasion-tile__link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #FFFFFF;
  font-weight: 600;
  font-size: 14px;
  transition: color 0.3s ease;
}

.occasion-tile:hover .occasion-tile__link {
  color: #9CAE8C;
}

@media (max-width: 768px) {
  .occasion-grid--2,
  .occasion-grid--3,
  .occasion-grid--4 {
    grid-template-columns: 1fr;
  }

  .occasion-tile {
    min-height: 280px;
  }

  .occasion-tile__title {
    font-size: 24px;
  }
}
</style>

{% schema %}
{
  "name": "Shop by Occasion",
  "tag": "section",
  "class": "section-shop-by-occasion",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop by Occasion"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Find the perfect bottle for every event"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "occasion",
      "name": "Occasion Tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Tile Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Weddings"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Personalized bottles for your bridal party"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Custom Link (overrides collection)"
        },
        {
          "type": "checkbox",
          "id": "hide_if_empty",
          "label": "Hide if collection has less than 3 products",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Occasion",
      "blocks": [
        {
          "type": "occasion",
          "settings": {
            "title": "Weddings",
            "description": "Beautiful personalized bottles for your bridal party and wedding guests"
          }
        },
        {
          "type": "occasion",
          "settings": {
            "title": "Corporate Events",
            "description": "Custom branded bottles for team retreats, conferences, and client gifts"
          }
        }
      ]
    }
  ]
}
{% endschema %}
