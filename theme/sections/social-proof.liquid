{%- comment -%}
<!-- SHELZYS_DESIGNS: START social-proof -->
  Social Proof / Customer Gallery Section
  - Shows customer photos with their personalized bottles
  - Instagram-style grid layout
  - Optional CTA to follow on Instagram
<!-- SHELZYS_DESIGNS: END social-proof -->
{%- endcomment -%}

<section class="social-proof section-padding" style="background: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="social-proof__header">
      <h2 class="social-proof__title">{{ section.settings.section_title }}</h2>
      <p class="social-proof__subtitle">{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="social-proof__grid">
      {%- for block in section.blocks -%}
        <div class="social-proof__item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 400 }}"
              alt="{{ block.settings.alt_text | default: 'Customer with personalized water bottle' | escape }}"
              loading="lazy"
              class="social-proof__image"
            >
          {%- else -%}
            <div class="social-proof__placeholder">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}

          {%- if block.settings.caption != blank -%}
            <div class="social-proof__caption">
              <p class="caption-text">{{ block.settings.caption }}</p>
              {%- if block.settings.customer_name != blank -%}
                <p class="caption-author">â€” {{ block.settings.customer_name }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_cta and section.settings.instagram_handle != blank -%}
      <div class="social-proof__cta">
        <a href="https://instagram.com/{{ section.settings.instagram_handle | remove: '@' }}" target="_blank" rel="noopener" class="social-proof__link" data-shelzys="cta" data-cta-type="instagram">
